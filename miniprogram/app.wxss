page {
  /* Light mode colors - 暖灰米色系 + 琥珀金 */
  --space-950: #FAF9F6;
  --space-900: #F6F4F0;
  --space-800: #EFEAE2;
  --space-700: #E5DFD5;
  --space-600: #D8D1C5;

  --paper-50: #FAF9F6;
  --paper-100: #F6F4F0;
  --paper-200: #EFEAE2;
  --paper-300: #D8D1C5;
  --paper-400: #7A746B;
  --paper-600: #4A4540;
  --paper-900: #0A0B0D;

  /* Light mode text colors */
  --star-50: #1A1A1A;
  --star-200: #4A4540;
  --star-400: #7A746B;

  /* 主色调：琥珀金系 */
  --accent: #C6A062;
  --accent-hover: #D4B47A;
  --accent-light: #E8D4B0;

  /* 辅助色：暖棕色系（替代紫色） */
  --warm-brown: #8B7355;
  --warm-brown-light: #A68968;

  /* 深色：深空黑系 */
  --deep-black: #1A1A1A;
  --deep-black-light: #2D2D2D;

  /* 语义色：避免蓝紫色 */
  --success: #6B8E23;      /* 橄榄绿 - 替代亮绿 */
  --warning: #D2691E;      /* 巧克力橙 - 替代橙色 */
  --danger: #8B4513;       /* 马鞍棕 - 替代红色 */
  --info: #8B7355;         /* 暖棕 - 替代蓝色 */

  /* 运势维度色彩：暖色调系统 */
  --career-color: #8B7355;    /* 事业：暖棕 */
  --wealth-color: #C6A062;    /* 财运：琥珀金 */
  --love-color: #CD5C5C;      /* 爱情：印度红 */
  --health-color: #6B8E23;    /* 健康：橄榄绿 */

  --bg-color: var(--space-950);
  --text-primary: var(--star-50);
  --text-secondary: var(--star-200);
  --text-muted: var(--star-400);
}

page {
  background-color: var(--bg-color);
  color: var(--text-primary);
  /* 优化字体栈：优先使用更精致的字体 */
  font-family: 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'WenQuanYi Micro Hei', -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, sans-serif;
  font-size: 14px;
  line-height: 1.6;
  box-sizing: border-box;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

view, text, image, navigator {
  box-sizing: border-box;
}

.container {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

.card {
  background-color: rgba(10, 11, 13, 0.6);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(198, 160, 98, 0.1);
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 全局动画关键帧 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes scaleIn {
  from {
    opacity: 0;
    transform: scale(0.95);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

page {
  /* Ink Wash (Shui-mo) Palette & Design Tokens */
  
  /* Paper (Backgrounds) */
  --paper-50: #FFFFFF;
  --paper-100: #FDFBF7; /* Xuan Paper White */
  --paper-200: #F8F5F0;
  --paper-300: #F2EEE6;
  --paper-400: #E6E0D4;
  --paper-600: #807A70;
  --paper-900: #1F1F1F; /* Nong Mo (Heavy Ink) */

  /* Ink Colors */
  --ink-deep: #1A1A1A;    /* Jiao Mo (Scorched Ink) - Not pure #000 */
  --ink-dark: #2D2D2D;    /* Nong Mo (Heavy Ink) */
  --ink-medium: #5C5C5C;  /* Zhong Mo (Medium Ink) */
  --ink-light: #919191;   /* Dan Mo (Light Ink) */
  --ink-water: #E0E0E0;   /* Qing Mo (Clear/Watery Ink) */

  /* Star & Space (For dark elements or specific highlights) */
  --star-50: #FDFBF7;
  --star-100: #F2F2F2;
  --star-200: #D9D9D9;
  --star-400: #8C8C8C;
  --space-900: #1A1A1A;
  --space-950: #121212;

  /* Theme Mapping */
  --bg-color: var(--paper-100);
  --card-bg: var(--paper-50);
  --text-primary: var(--paper-900);
  --text-secondary: var(--paper-600);
  --text-muted: var(--paper-400);
  --accent: var(--ink-deep);
  --accent-red: #B22222; /* Seal Red */

  /* Functional Colors (Muted/Ink style) */
  --success: #2E8B57;
  --warning: #CD853F;
  --danger: #8B0000;
  --info: #4682B4;

  /* Love Theme (For pairing/romance features) */
  --love-pink: #FF6B8A;
  --love-light: #FFE4E8;

  /* Structure */
  --border-color: rgba(0, 0, 0, 0.05);
  --shadow-sm: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
  --shadow-md: 0 12rpx 32rpx rgba(0, 0, 0, 0.05);
  
  /* Whitespace */
  --spacing-xs: 8rpx;
  --spacing-sm: 16rpx;
  --spacing-md: 32rpx;
  --spacing-lg: 48rpx;
  --spacing-xl: 64rpx;
  --spacing-xxl: 80rpx;
}

page {
  background-color: var(--bg-color);
  color: var(--text-primary);
  /* Typography: Ancient Style (Songti/Serif priority) */
  font-family: "SourceHanSerifSC", "Songti SC", "STSong", "SimSun", serif;
  font-size: 28rpx;
  line-height: 1.8; /* More breathing room (Liubai) */
  box-sizing: border-box;
  -webkit-font-smoothing: antialiased;
}

/* Paper Texture Effect - Subtle grain overlay */
page::after {
  content: "";
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: -1;
  opacity: 0.015;
  background-image: repeating-linear-gradient(
    0deg,
    transparent,
    transparent 2px,
    rgba(0, 0, 0, 0.03) 2px,
    rgba(0, 0, 0, 0.03) 4px
  ),
  repeating-linear-gradient(
    90deg,
    transparent,
    transparent 2px,
    rgba(0, 0, 0, 0.03) 2px,
    rgba(0, 0, 0, 0.03) 4px
  );
}

/* Typography Utility */
.font-ancient {
  font-family: "AncientFont", "SourceHanSerifSC", "Songti SC", "STSong", serif;
}

.font-serif {
  font-family: "SourceHanSerifSC", "Songti SC", "STSong", serif;
}

.text-ink-deep { color: var(--ink-deep); }
.text-ink-medium { color: var(--ink-medium); }
.text-ink-light { color: var(--ink-light); }

/* Ink Wash Utilities */
.ink-splash-bg {
  position: absolute;
  pointer-events: none;
  z-index: 0;
  filter: blur(40rpx);
  opacity: 0.05;
  background: var(--ink-deep);
  border-radius: 50%;
}

.ink-border {
  border: 1rpx solid var(--border-color);
  position: relative;
}

.ink-border::after {
  content: "";
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  right: 4rpx;
  bottom: 4rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.02);
  pointer-events: none;
}

/* Layout Utilities */
.p-6 { padding: 48rpx; }
.p-8 { padding: 64rpx; }
.m-6 { margin: 48rpx; }
.m-8 { margin: 64rpx; }
.space-y-8 > view, .space-y-8 > text { margin-bottom: 64rpx; }
.space-y-8 > view:last-child { margin-bottom: 0; }

view, text, image, navigator {
  box-sizing: border-box;
}

.container {
  padding: var(--spacing-lg);
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  position: relative;
  overflow-x: hidden;
}

.card {
  background-color: var(--card-bg);
  padding: var(--spacing-xl);
  margin-bottom: var(--spacing-xl);
  border: 1rpx solid var(--border-color);
  box-shadow: var(--shadow-sm);
  position: relative;
  transition: all 0.3s ease;
}

.title {
  font-family: "AncientFont", "SourceHanSerifSC", "Songti SC", "STSong", serif;
  font-size: 44rpx;
  font-weight: 600;
  color: var(--ink-deep);
  margin-bottom: var(--spacing-md);
  letter-spacing: 4rpx;
}

.subtitle {
  font-family: "SourceHanSerifSC", "Songti SC", "STSong", serif;
  font-size: 26rpx;
  color: var(--ink-light);
  letter-spacing: 2rpx;
}

/* Button Styles - Ink Blocks */
.btn-primary {
  background-color: var(--ink-deep);
  color: var(--paper-50);
  padding: 24rpx 48rpx;
  font-family: "SourceHanSerifSC", "Songti SC", "STSong", serif;
  text-align: center;
  border: 1rpx solid var(--ink-deep);
  letter-spacing: 4rpx;
  transition: all 0.2s ease;
}

.btn-primary:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.btn-outline {
  background-color: transparent;
  color: var(--ink-deep);
  border: 1rpx solid var(--ink-deep);
  padding: 24rpx 48rpx;
  font-family: "SourceHanSerifSC", "Songti SC", "STSong", serif;
  text-align: center;
  letter-spacing: 4rpx;
}

.btn-outline:active {
  background: var(--paper-200);
}

/* Global Modal/Popup Styles - Ink Wash Theme */
.modal-overlay, .overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(26, 26, 26, 0.4);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(4rpx);
}

.modal-content, .popup-content {
  background: var(--paper-100);
  border: 1rpx solid var(--border-color);
  box-shadow: var(--shadow-md);
  max-width: 90vw;
  max-height: 85vh;
  overflow-y: auto;
}

.modal-header, .popup-header {
  padding: var(--spacing-lg);
  border-bottom: 1rpx solid var(--border-color);
  background: var(--paper-50);
}

.modal-title, .popup-title {
  font-size: 36rpx;
  color: var(--ink-deep);
  font-family: "AncientFont", "SourceHanSerifSC", "Songti SC", serif;
}

.modal-body, .popup-body {
  padding: var(--spacing-lg);
}

.modal-footer, .popup-footer {
  padding: var(--spacing-lg);
  border-top: 1rpx solid var(--border-color);
  display: flex;
  gap: var(--spacing-md);
}

/* Form Input Styles - Ink Wash */
.input-field {
  background: var(--paper-100);
  border: 1rpx solid var(--border-color);
  padding: var(--spacing-md);
  color: var(--ink-deep);
  font-family: "SourceHanSerifSC", "Songti SC", "STSong", serif;
  font-size: 28rpx;
  transition: border-color 0.2s ease;
}

.input-field:focus {
  border-color: var(--ink-medium);
}

.input-label {
  font-size: 22rpx;
  color: var(--ink-light);
  margin-bottom: var(--spacing-xs);
  display: block;
  letter-spacing: 2rpx;
}

/* Tag/Badge Styles */
.tag {
  font-size: 18rpx;
  padding: 4rpx 12rpx;
  background: var(--paper-200);
  color: var(--ink-medium);
  letter-spacing: 1rpx;
}

.tag-accent {
  background: var(--ink-deep);
  color: var(--paper-50);
}

/* Panel/Section Styles */
.panel {
  background: var(--paper-50);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
  border: 1rpx solid var(--border-color);
}

.panel-header {
  margin-bottom: var(--spacing-md);
  padding-bottom: var(--spacing-md);
  border-bottom: 1rpx solid var(--border-color);
}

.panel-title {
  font-size: 32rpx;
  color: var(--ink-deep);
  font-weight: 600;
}


/* 全局动画关键帧 - Keeping these but making them subtle */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

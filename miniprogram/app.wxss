page {
  /* Ink Wash (Shui-mo) Palette & Design Tokens */
  
  /* Paper (Backgrounds) */
  --paper-50: #FFFFFF;
  --paper-100: #FDFBF7; /* Xuan Paper White */
  --paper-200: #F8F5F0;
  --paper-300: #F2EEE6;
  --paper-400: #E6E0D4;
  --paper-600: #807A70;
  --paper-900: #1F1F1F; /* Nong Mo (Heavy Ink) */

  /* Ink Colors */
  --ink-deep: #1A1A1A;    /* Jiao Mo (Scorched Ink) - Not pure #000 */
  --ink-dark: #2D2D2D;    /* Nong Mo (Heavy Ink) */
  --ink-medium: #5C5C5C;  /* Zhong Mo (Medium Ink) */
  --ink-light: #919191;   /* Dan Mo (Light Ink) */
  --ink-water: #E0E0E0;   /* Qing Mo (Clear/Watery Ink) */

  /* Star & Space (For dark elements or specific highlights) */
  --star-50: #FDFBF7;
  --star-100: #F2F2F2;
  --star-200: #D9D9D9;
  --star-400: #8C8C8C;
  --space-900: #1A1A1A;
  --space-950: #121212;

  /* Theme Mapping */
  --bg-color: var(--paper-100);
  --card-bg: var(--paper-50);
  --text-primary: var(--paper-900);
  --text-secondary: var(--paper-600);
  --text-muted: var(--paper-400);
  --accent: var(--ink-deep);
  --accent-red: var(--seal-red); /* Seal Red */

  /* Ink Wash Layers (Mo Yun) */
  --ink-wash-1: rgba(26, 26, 26, 0.03); /* Lightest wash bg */
  --ink-wash-2: rgba(26, 26, 26, 0.06); /* Light wash divider */
  --ink-wash-3: rgba(26, 26, 26, 0.10); /* Medium wash hover */

  /* Cultural Colors (Wen Hua Se) */
  --seal-red: #C53929;                    /* Yin Zhang Hong */
  --seal-red-light: rgba(197, 57, 41, 0.08);
  --bamboo-green: #5B7553;                /* Zhu Qing */
  --bamboo-light: rgba(91, 117, 83, 0.08);
  --mountain-blue: #4A6B7A;              /* Yuan Shan Lan */
  --mountain-light: rgba(74, 107, 122, 0.08);
  --amber-glow: #B8860B;                 /* Hu Po Jin */
  --paper-warm: #FAF7F2;                 /* Nuan Xuan Zhi */

  /* Functional Colors (mapped to cultural palette) */
  --success: var(--bamboo-green);
  --warning: var(--amber-glow);
  --danger: #8B0000;
  --info: var(--mountain-blue);

  /* Love Theme (For pairing/romance features) */
  --love-pink: #FF6B8A;
  --love-light: #FFE4E8;

  /* Structure */
  --border-color: rgba(0, 0, 0, 0.05);
  --shadow-sm: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
  --shadow-md: 0 12rpx 32rpx rgba(0, 0, 0, 0.05);

  /* Ink Wash Shadows (Mo Yun Ying) */
  --shadow-ink-sm: 0 2rpx 8rpx rgba(26, 26, 26, 0.04);
  --shadow-ink-md: 0 8rpx 24rpx rgba(26, 26, 26, 0.06);
  --shadow-ink-lg: 0 16rpx 48rpx rgba(26, 26, 26, 0.08);

  /* Whitespace */
  --spacing-xs: 8rpx;
  --spacing-sm: 16rpx;
  --spacing-md: 32rpx;
  --spacing-lg: 48rpx;
  --spacing-xl: 64rpx;
  --spacing-xxl: 80rpx;

  /* Breath Spacing (Hu Xi Jian Ju) */
  --breath-xs: 12rpx;   /* Wei Xi */
  --breath-sm: 24rpx;   /* Qian Xi */
  --breath-md: 40rpx;   /* Zhong Xi */
  --breath-lg: 64rpx;   /* Chang Xi */
  --breath-xl: 96rpx;   /* Shen Xi */
  --breath-xxl: 128rpx; /* Jing Xi */
}

page {
  background-color: var(--bg-color);
  color: var(--text-primary);
  /* Typography: Ancient Style (Songti/Serif priority) */
  font-family: "SourceHanSerifSC", "Songti SC", "STSong", "SimSun", serif;
  font-size: 28rpx;
  line-height: 1.8; /* More breathing room (Liubai) */
  box-sizing: border-box;
  -webkit-font-smoothing: antialiased;
}

/* Paper Texture Effect - Subtle grain overlay */
page::after {
  content: "";
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: -1;
  opacity: 0.015;
  background-image: repeating-linear-gradient(
    0deg,
    transparent,
    transparent 2px,
    rgba(0, 0, 0, 0.03) 2px,
    rgba(0, 0, 0, 0.03) 4px
  ),
  repeating-linear-gradient(
    90deg,
    transparent,
    transparent 2px,
    rgba(0, 0, 0, 0.03) 2px,
    rgba(0, 0, 0, 0.03) 4px
  );
}

/* Typography Utility */
.font-ancient {
  font-family: "AncientFont", "SourceHanSerifSC", "Songti SC", "STSong", serif;
}

.font-serif {
  font-family: "SourceHanSerifSC", "Songti SC", "STSong", serif;
}

.text-ink-deep { color: var(--ink-deep); }
.text-ink-medium { color: var(--ink-medium); }
.text-ink-light { color: var(--ink-light); }

/* Ink Wash Utilities */
.ink-splash-bg {
  position: absolute;
  pointer-events: none;
  z-index: 0;
  filter: blur(40rpx);
  opacity: 0.05;
  background: var(--ink-deep);
  border-radius: 50%;
}

.ink-border {
  border: 1rpx solid var(--border-color);
  position: relative;
}

.ink-border::after {
  content: "";
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  right: 4rpx;
  bottom: 4rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.02);
  pointer-events: none;
}

/* Layout Utilities */
.p-6 { padding: 48rpx; }
.p-8 { padding: 64rpx; }
.m-6 { margin: 48rpx; }
.m-8 { margin: 64rpx; }
.space-y-8 > view, .space-y-8 > text { margin-bottom: 64rpx; }
.space-y-8 > view:last-child { margin-bottom: 0; }

view, text, image, navigator {
  box-sizing: border-box;
}

.container {
  padding: var(--spacing-lg);
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  position: relative;
  overflow-x: hidden;
}

.card {
  background-color: var(--card-bg);
  padding: var(--spacing-xl);
  margin-bottom: var(--spacing-xl);
  border: 1rpx solid var(--border-color);
  box-shadow: var(--shadow-sm);
  position: relative;
  transition: all 0.3s ease;
}

.title {
  font-family: "AncientFont", "SourceHanSerifSC", "Songti SC", "STSong", serif;
  font-size: 44rpx;
  font-weight: 600;
  color: var(--ink-deep);
  margin-bottom: var(--spacing-md);
  letter-spacing: 4rpx;
}

.subtitle {
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
  font-size: 26rpx;
  color: var(--ink-light);
  letter-spacing: 2rpx;
}

/* Button Styles - Ink Blocks */
.btn-primary {
  background-color: var(--ink-deep);
  color: var(--paper-50);
  padding: 24rpx 48rpx;
  font-family: "SourceHanSerifSC", "Songti SC", "STSong", serif;
  text-align: center;
  border: 1rpx solid var(--ink-deep);
  letter-spacing: 4rpx;
  transition: all 0.2s ease;
}

.btn-primary:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.btn-outline {
  background-color: transparent;
  color: var(--ink-deep);
  border: 1rpx solid var(--ink-deep);
  padding: 24rpx 48rpx;
  font-family: "SourceHanSerifSC", "Songti SC", "STSong", serif;
  text-align: center;
  letter-spacing: 4rpx;
}

.btn-outline:active {
  background: var(--paper-200);
}

/* Global Modal/Popup Styles - Ink Wash Theme */
.modal-overlay, .overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(26, 26, 26, 0.4);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(4rpx);
}

.modal-content, .popup-content {
  background: var(--paper-100);
  border: 1rpx solid var(--border-color);
  box-shadow: var(--shadow-md);
  max-width: 90vw;
  max-height: 85vh;
  overflow-y: auto;
}

.modal-header, .popup-header {
  padding: var(--spacing-lg);
  border-bottom: 1rpx solid var(--border-color);
  background: var(--paper-50);
}

.modal-title, .popup-title {
  font-size: 36rpx;
  color: var(--ink-deep);
  font-family: "AncientFont", "SourceHanSerifSC", "Songti SC", serif;
}

.modal-body, .popup-body {
  padding: var(--spacing-lg);
}

.modal-footer, .popup-footer {
  padding: var(--spacing-lg);
  border-top: 1rpx solid var(--border-color);
  display: flex;
  gap: var(--spacing-md);
}

/* Form Input Styles - Ink Wash */
.input-field {
  background: var(--paper-100);
  border: 1rpx solid var(--border-color);
  padding: var(--spacing-md);
  color: var(--ink-deep);
  font-family: "SourceHanSerifSC", "Songti SC", "STSong", serif;
  font-size: 28rpx;
  transition: border-color 0.2s ease;
}

.input-field:focus {
  border-color: var(--ink-medium);
}

.input-label {
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
  font-size: 22rpx;
  color: var(--ink-light);
  margin-bottom: var(--spacing-xs);
  display: block;
  letter-spacing: 2rpx;
}

/* Tag/Badge Styles */
.tag {
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
  font-size: 18rpx;
  padding: 4rpx 12rpx;
  background: var(--paper-200);
  color: var(--ink-medium);
  letter-spacing: 1rpx;
}

.tag-accent {
  background: var(--ink-deep);
  color: var(--paper-50);
}

/* Panel/Section Styles */
.panel {
  background: var(--paper-50);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
  border: 1rpx solid var(--border-color);
}

.panel-header {
  margin-bottom: var(--spacing-md);
  padding-bottom: var(--spacing-md);
  border-bottom: 1rpx solid var(--border-color);
}

.panel-title {
  font-size: 32rpx;
  color: var(--ink-deep);
  font-weight: 600;
}


/* 全局动画关键帧 - Keeping these but making them subtle */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* === Zen Design System Utilities === */

/* Font: Body (Sans-serif for auxiliary text) */
.font-body {
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
}

/* Font: Data (For scores/numbers) */
.font-data {
  font-family: "DIN Alternate", -apple-system, "Helvetica Neue", sans-serif;
  font-weight: 300;
  letter-spacing: -2rpx;
}

/* Ink Divider - Gradient fade from edges */
.ink-divider {
  height: 1rpx;
  width: 80%;
  margin: var(--breath-md) auto;
  background: linear-gradient(to right, transparent, var(--ink-wash-2), transparent);
}

/* Ink Divider Double - Classic book-style double line */
.ink-divider-double {
  height: 6rpx;
  width: 80%;
  margin: var(--breath-md) auto;
  border-top: 1rpx solid var(--ink-wash-2);
  border-bottom: 1rpx solid var(--ink-wash-2);
}

/* Seal Stamp - Base */
.seal-stamp {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background-color: var(--seal-red);
  color: var(--paper-50);
  font-family: "SourceHanSerifSC", "Songti SC", "STSong", serif;
  font-size: 24rpx;
  font-weight: 600;
  padding: 8rpx 20rpx;
  letter-spacing: 2rpx;
  transition: all 0.2s cubic-bezier(0.25, 0.1, 0.25, 1.0);
}

.seal-stamp:active {
  opacity: 0.85;
  transform: translateY(1rpx) rotate(0.5deg);
}

/* Seal Stamp Small */
.seal-stamp-sm {
  font-size: 18rpx;
  padding: 4rpx 12rpx;
}

/* Seal Stamp Large */
.seal-stamp-lg {
  font-size: 28rpx;
  padding: 16rpx 32rpx;
  letter-spacing: 4rpx;
}

/* Seal Button (CTA variant) */
.btn-seal {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--seal-red);
  color: var(--paper-50);
  font-family: "SourceHanSerifSC", "Songti SC", "STSong", serif;
  font-size: 28rpx;
  font-weight: 600;
  padding: 24rpx 64rpx;
  height: 88rpx;
  letter-spacing: 4rpx;
  border: none;
  transition: all 0.2s cubic-bezier(0.25, 0.1, 0.25, 1.0);
}

.btn-seal:active {
  opacity: 0.85;
  transform: translateY(1rpx);
}

/* Updated primary button - zen timing */
.btn-primary {
  transition: all 0.2s cubic-bezier(0.25, 0.1, 0.25, 1.0);
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-primary:active {
  opacity: 0.85;
  transform: translateY(1rpx);
}

/* Updated outline button - zen hover */
.btn-outline:active {
  background: var(--ink-wash-1);
}

/* Color utility classes */
.text-seal-red { color: var(--seal-red); }
.text-bamboo { color: var(--bamboo-green); }
.text-mountain { color: var(--mountain-blue); }
.text-amber { color: var(--amber-glow); }
.bg-ink-wash-1 { background-color: var(--ink-wash-1); }
.bg-ink-wash-2 { background-color: var(--ink-wash-2); }
.bg-ink-wash-3 { background-color: var(--ink-wash-3); }
.bg-paper-warm { background-color: var(--paper-warm); }
.bg-seal-light { background-color: var(--seal-red-light); }
.bg-bamboo-light { background-color: var(--bamboo-light); }
.bg-mountain-light { background-color: var(--mountain-light); }

/* === Zen Animation Keyframes === */

/* Ink Spread - Loading animation */
@keyframes inkSpread {
  0% {
    transform: scale(0);
    opacity: 0.6;
  }
  100% {
    transform: scale(1);
    opacity: 0;
  }
}

/* Seal Press - Confirmation feedback */
@keyframes sealPress {
  0% {
    transform: scale(1.1);
    opacity: 0.8;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

/* Breathe - Gentle pulse for scores */
@keyframes breathe {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.8;
  }
}

/* Zen fadeInUp - Softer than default */
@keyframes zenFadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Reduced motion support */
@media (prefers-reduced-motion: reduce) {
  .seal-stamp,
  .btn-seal,
  .btn-primary,
  .btn-outline,
  .card {
    transition: none;
  }
}

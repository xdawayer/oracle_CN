/* pages/records/records.wxss - 水墨极简风格 */

.container {
  background-color: var(--paper-100);
  min-height: 100vh;
}

.record-list {
  padding: var(--spacing-lg);
}

/* 记录卡片 */
.record-card {
  background-color: var(--paper-50);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-md);
  display: flex;
  align-items: center;
  gap: var(--spacing-lg);
}

.score-badge {
  width: 96rpx;
  height: 96rpx;
  background-color: var(--ink-deep);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  border-radius: 12rpx;
}

.score-value {
  font-size: 40rpx;
  color: var(--paper-50);
  line-height: 1;
}

.score-unit {
  font-size: 14rpx;
  color: var(--paper-300);
  letter-spacing: 2rpx;
}

.record-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.record-names {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.names-text {
  font-size: 30rpx;
  color: var(--ink-deep);
  font-weight: 500;
}

.relation-tag {
  font-size: 18rpx;
  padding: 2rpx 12rpx;
  color: var(--ink-light);
  border: 1rpx solid var(--border-color);
}

.date-text {
  font-size: 22rpx;
  color: var(--ink-light);
}

.record-chevron {
  font-size: 24rpx;
  color: var(--ink-light);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-xxl);
}

.empty-title {
  font-size: 30rpx;
  color: var(--ink-dark);
  margin-bottom: var(--spacing-sm);
}

.empty-desc {
  font-size: 24rpx;
  color: var(--ink-light);
  text-align: center;
  line-height: 1.6;
  margin-bottom: var(--spacing-xl);
}

.empty-btn {
  background: var(--ink-deep);
  padding: var(--spacing-md) var(--spacing-xxl);
}

.empty-btn-text {
  font-size: 28rpx;
  color: var(--paper-50);
}

/* 弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.modal-content {
  width: 100%;
  height: 90vh;
  background-color: var(--paper-100);
  border-radius: 24rpx 24rpx 0 0;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  align-items: center;
  padding: var(--spacing-lg);
  background-color: var(--paper-50);
  border-bottom: 1rpx solid var(--border-color);
  border-radius: 24rpx 24rpx 0 0;
}

.close-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--paper-200);
  border-radius: 50%;
  font-size: 32rpx;
  color: var(--ink-deep);
}

.modal-title-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.modal-title {
  font-size: 32rpx;
  color: var(--ink-deep);
}

.modal-subtitle {
  font-size: 20rpx;
  color: var(--ink-light);
}

.spacer {
  width: 56rpx;
}

.modal-body {
  flex: 1;
  padding: var(--spacing-lg);
}

/* 分数卡片 */
.detail-score-card {
  background: var(--ink-deep);
  color: var(--paper-50);
  padding: var(--spacing-xl);
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: var(--spacing-lg);
}

.detail-label {
  font-size: 22rpx;
  color: var(--paper-300);
}

.detail-score {
  font-size: 100rpx;
  line-height: 1;
}

.detail-relation {
  font-size: 22rpx;
  color: var(--paper-300);
  margin-top: var(--spacing-sm);
}

/* 详情章节 */
.detail-section {
  background-color: var(--paper-50);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-md);
}

.section-title {
  font-size: 30rpx;
  color: var(--ink-deep);
  margin-bottom: var(--spacing-md);
  display: block;
}

.dimensions-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.dimension-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.dim-header {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: var(--ink-light);
}

.progress-bg {
  height: 6rpx;
  background-color: var(--paper-200);
  border-radius: 3rpx;
}

.progress-bar {
  height: 100%;
  background-color: var(--ink-dark);
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

.overview-text,
.section-content {
  font-size: 26rpx;
  color: var(--ink-dark);
  line-height: 1.8;
}

.close-wrap {
  display: flex;
  justify-content: center;
  margin-top: var(--spacing-xl);
}

.close-detail-btn {
  background: var(--ink-deep);
  color: var(--paper-50);
  padding: var(--spacing-md) var(--spacing-xxl);
  font-size: 28rpx;
  text-align: center;
}

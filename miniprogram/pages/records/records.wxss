/* pages/records/records.wxss */

/* Container */
.container {
  padding: 0;
  background-color: var(--bg-color);
  min-height: 100vh;
  position: relative;
  display: flex;
  flex-direction: column;
}

/* Header */
.header {
  padding: 32rpx 40rpx;
  background-color: var(--space-950);
  border-bottom: 1rpx solid var(--space-700);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header-title {
  font-size: 32rpx;
  font-weight: 900;
  color: var(--text-primary);
  letter-spacing: -0.5px;
}

.header-subtitle {
  font-size: 20rpx;
  font-weight: 700;
  color: var(--text-muted);
  text-transform: uppercase;
  letter-spacing: 2px;
  margin-top: 4rpx;
}

/* List */
.record-list {
  flex: 1;
  padding: 32rpx;
  box-sizing: border-box;
  height: calc(100vh - 120rpx); /* approx header height */
}

/* Card */
.record-card {
  background-color: var(--space-800);
  border: 1rpx solid var(--space-700);
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  transition: transform 0.1s;
}

.record-card:active {
  transform: scale(0.98);
  background-color: var(--space-700);
}

.score-badge {
  width: 100rpx;
  height: 100rpx;
  background-color: var(--space-800);
  border: 1rpx solid var(--accent);
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.score-value {
  font-size: 36rpx;
  font-weight: 900;
  color: var(--accent);
}

.score-label {
  font-size: 16rpx;
  font-weight: 900;
  color: var(--accent);
  text-transform: uppercase;
  opacity: 0.8;
}

.record-info {
  flex: 1;
  min-width: 0;
}

.record-names {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.names-text {
  font-size: 28rpx;
  font-weight: 900;
  color: var(--text-primary);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.relation-tag {
  padding: 4rpx 12rpx;
  background-color: var(--space-700);
  border: 1rpx solid var(--space-600);
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 900;
  color: var(--text-muted);
  text-transform: uppercase;
}

.record-date {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.date-text {
  font-size: 22rpx;
  font-weight: 700;
  color: var(--text-muted);
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 96rpx 32rpx;
  text-align: center;
}

.empty-icon-box {
  width: 160rpx;
  height: 160rpx;
  background-color: var(--space-800);
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 900;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: var(--text-muted);
  line-height: 1.6;
  max-width: 400rpx;
  margin-bottom: 48rpx;
}

.empty-btn {
  background-color: var(--accent);
  color: var(--space-950);
  font-weight: 900;
  font-size: 28rpx;
  padding: 24rpx 64rpx;
  border-radius: 100rpx;
  box-shadow: none;
}

/* Modal */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: var(--space-950);
  z-index: 100;
  display: flex;
  flex-direction: column;
}

.modal-content {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.modal-header {
  padding: 24rpx 32rpx;
  background-color: var(--space-950);
  border-bottom: 1rpx solid var(--space-700);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.close-btn {
  padding: 16rpx;
  margin-left: -16rpx;
  background-color: var(--space-800);
  border-radius: 32rpx;
  color: var(--text-muted);
  font-size: 24rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-title-box {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.modal-title {
  font-size: 28rpx;
  font-weight: 900;
  color: var(--text-primary);
}

.modal-subtitle {
  font-size: 20rpx;
  font-weight: 700;
  color: var(--text-muted);
  text-transform: uppercase;
  letter-spacing: 1px;
}

.spacer { width: 64rpx; }

.modal-body {
  flex: 1;
  padding: 32rpx;
  box-sizing: border-box;
}

/* Detail Content */
.detail-score-card {
  background: linear-gradient(135deg, var(--accent) 0%, var(--accent-hover) 100%);
  border-radius: 48rpx;
  padding: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  color: var(--space-950);
  box-shadow: none;
}

.detail-label {
  font-size: 20rpx;
  font-weight: 900;
  text-transform: uppercase;
  letter-spacing: 2px;
  opacity: 0.8;
  margin-bottom: 8rpx;
}

.detail-score {
  font-size: 96rpx;
  font-weight: 900;
  line-height: 1;
  margin-bottom: 16rpx;
  letter-spacing: -2px;
}

.detail-relation {
  background-color: var(--space-700);
  backdrop-filter: blur(10px);
  padding: 8rpx 24rpx;
  border-radius: 100rpx;
  font-size: 24rpx;
  font-weight: 800;
}

.detail-section {
  background-color: var(--space-800);
  border: 1rpx solid var(--space-700);
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
  font-size: 28rpx;
  font-weight: 900;
  color: var(--text-primary);
}

.dimensions-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.dim-header {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  font-weight: 800;
  color: var(--text-muted);
  text-transform: uppercase;
  letter-spacing: 1px;
  margin-bottom: 8rpx;
}

.progress-bg {
  height: 12rpx;
  background-color: var(--space-700);
  border-radius: 100rpx;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  border-radius: 100rpx;
  transition: width 1s cubic-bezier(0.4, 0, 0.2, 1);
}

.color-accent { background-color: var(--accent); }
.color-info { background-color: var(--info); }
.color-warning { background-color: var(--warning); }
.color-muted { background-color: var(--paper-400); }
.color-mystic { background-color: var(--mystic-500); }

.overview-text, .section-content {
  font-size: 26rpx;
  line-height: 1.6;
  color: var(--text-secondary);
}

.overview-text {
  font-style: italic;
  font-weight: 500;
}

.close-detail-btn {
  width: 100%;
  padding: 32rpx;
  background-color: var(--space-800);
  color: var(--text-primary);
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 900;
  margin-top: 32rpx;
}

.bottom-spacer { height: 64rpx; }

/* Animation */
.animate-slide-up {
  animation: slideUp 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

@keyframes slideUp {
  from { transform: translateY(100%); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}

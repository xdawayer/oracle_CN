/* pages/reports/reports.wxss — 水墨风格收藏报告 */

.container {
  background-color: var(--paper-100);
  min-height: 100vh;
}

/* ========== 列表视图 ========== */

.list-container {
  padding: var(--spacing-lg);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--breath-xxl) var(--spacing-lg);
}

.empty-title {
  font-size: 30rpx;
  color: var(--ink-dark);
  text-align: center;
  margin-bottom: var(--spacing-sm);
}

.empty-desc {
  font-size: 24rpx;
  color: var(--ink-light);
  text-align: center;
  margin-bottom: var(--spacing-lg);
}

.login-btn {
  padding: var(--spacing-sm) var(--spacing-xl);
  background: var(--ink-deep);
}

.login-btn text {
  font-size: 28rpx;
  color: var(--paper-50);
}

/* 报告卡片 */
.report-card {
  background-color: var(--paper-50);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-md);
  transition: all 0.2s ease;
}

.report-card:active {
  background-color: var(--paper-200);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.tag {
  font-family: -apple-system, "PingFang SC", sans-serif;
  font-size: 18rpx;
  font-weight: 500;
  padding: 6rpx 16rpx;
  background: var(--ink-deep);
  color: var(--paper-50);
}

.tag-topic {
  background: linear-gradient(135deg, #5b6abf, #8b6daf);
}

.tag-natal {
  background: var(--ink-dark);
}

.tag-synastry {
  background: linear-gradient(135deg, #d4707a, #e8939b);
}

.tag-daily {
  background: var(--mountain-blue);
}

.date-label {
  font-size: 20rpx;
  color: var(--ink-light);
  font-family: -apple-system, "PingFang SC", sans-serif;
}

.card-title {
  font-size: 34rpx;
  color: var(--ink-deep);
  margin-bottom: var(--spacing-sm);
  display: block;
  letter-spacing: 2rpx;
}

.card-footer {
  margin-top: var(--spacing-md);
  padding-top: var(--spacing-md);
  border-top: 1rpx solid var(--border-color);
  display: flex;
  justify-content: flex-end;
}

.card-action {
  font-size: 22rpx;
  color: var(--ink-medium);
  font-family: -apple-system, "PingFang SC", sans-serif;
}

/* ========== 详情视图 ========== */

.detail-scroll {
  height: 100vh;
  background-color: var(--paper-100);
}

/* 报告头部 */
.detail-hero {
  background: var(--paper-50);
  padding-bottom: 0;
}

.detail-hero-inner {
  padding: var(--breath-lg) var(--spacing-lg) var(--breath-md);
}

.detail-tag-row {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  margin-bottom: var(--breath-sm);
}

.detail-date {
  font-size: 22rpx;
  color: var(--ink-light);
  font-family: -apple-system, "PingFang SC", sans-serif;
}

.detail-title {
  font-size: 48rpx;
  color: var(--ink-deep);
  display: block;
  letter-spacing: 4rpx;
  line-height: 1.4;
  margin-bottom: var(--breath-xs);
}

.detail-stat-row {
  display: flex;
  align-items: center;
}

.detail-stat {
  font-size: 22rpx;
  color: var(--ink-light);
  font-family: -apple-system, "PingFang SC", sans-serif;
  letter-spacing: 1rpx;
}

/* ========== 目录区 ========== */

.toc-section {
  padding: var(--spacing-lg);
}

.toc-inner {
  background: var(--paper-50);
  padding: var(--spacing-lg) var(--spacing-lg);
  border: 1rpx solid var(--border-color);
}

.toc-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  padding: var(--spacing-xs) 0;
}

.toc-dot {
  width: 8rpx;
  height: 8rpx;
  background: var(--ink-light);
  border-radius: 50%;
  flex-shrink: 0;
}

.toc-text {
  font-size: 24rpx;
  color: var(--ink-medium);
  font-family: -apple-system, "PingFang SC", sans-serif;
  letter-spacing: 1rpx;
}

/* ========== 模块卡片 ========== */

.modules-container {
  padding: 0 var(--spacing-lg);
}

.module-card {
  background: var(--paper-50);
  margin-bottom: var(--spacing-lg);
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  animation: zenFadeInUp 0.4s ease both;
}

/* 顶部色条 */
.module-accent {
  height: 6rpx;
  background: var(--ink-deep);
}

/* 复用 report.wxss 的模块配色 */
.module-accent-overview       { background: linear-gradient(90deg, #5b6abf, #7b8ad0); }
.module-accent-love           { background: linear-gradient(90deg, #d4707a, #e8939b); }
.module-accent-career         { background: linear-gradient(90deg, #4a7fb5, #6a9fd0); }
.module-accent-emotion        { background: linear-gradient(90deg, #8b6daf, #a88bc6); }
.module-accent-mind           { background: linear-gradient(90deg, #4a9b8e, #6ab5a8); }
.module-accent-wealth         { background: linear-gradient(90deg, #c49a3c, #d4b35c); }
.module-accent-health         { background: linear-gradient(90deg, #5a9e5a, #7ab87a); }
.module-accent-soul           { background: linear-gradient(90deg, #6b5b95, #8b7bb5); }
.module-accent-social         { background: linear-gradient(90deg, #d4855a, #e8a57a); }
.module-accent-growth         { background: linear-gradient(90deg, #4a9b8e, #6ab5a8); }
.module-accent-personality    { background: linear-gradient(90deg, #E8A0BF, #F0B8CF); }
.module-accent-partner        { background: linear-gradient(90deg, #D4707A, #E8939B); }
.module-accent-forecast       { background: linear-gradient(90deg, #8B6DAF, #A88BC6); }
.module-accent-talent         { background: linear-gradient(90deg, #7B8CDE, #9AABE8); }
.module-accent-workplace      { background: linear-gradient(90deg, #5B6ABF, #7B8AD0); }
.module-accent-mission        { background: linear-gradient(90deg, #6B5B95, #8B7BB5); }
.module-accent-money-relation { background: linear-gradient(90deg, #D4A853, #E8C273); }
.module-accent-potential      { background: linear-gradient(90deg, #C49A3C, #D4B35C); }
.module-accent-blindspot      { background: linear-gradient(90deg, #B88A2C, #C8A44C); }

/* 模块头 */
.module-header {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  padding: var(--spacing-lg) var(--spacing-lg) var(--spacing-md);
  border-bottom: 1rpx solid var(--border-color);
}

.module-index-badge {
  width: 40rpx;
  height: 40rpx;
  background: var(--ink-deep);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.module-index-text {
  font-size: 20rpx;
  color: var(--paper-50);
  font-family: "DIN Alternate", -apple-system, sans-serif;
  font-weight: 600;
}

.module-title {
  font-size: 34rpx;
  color: var(--ink-deep);
  font-weight: 500;
  flex: 1;
  letter-spacing: 2rpx;
}

/* 模块标题着色 */
.module-title-overview       { color: #5b6abf; }
.module-title-love           { color: #d4707a; }
.module-title-career         { color: #4a7fb5; }
.module-title-emotion        { color: #8b6daf; }
.module-title-mind           { color: #4a9b8e; }
.module-title-wealth         { color: #c49a3c; }
.module-title-health         { color: #5a9e5a; }
.module-title-soul           { color: #6b5b95; }
.module-title-social         { color: #d4855a; }
.module-title-growth         { color: #4a9b8e; }
.module-title-personality    { color: #E8A0BF; }
.module-title-partner        { color: #D4707A; }
.module-title-forecast       { color: #8B6DAF; }
.module-title-talent         { color: #7B8CDE; }
.module-title-workplace      { color: #5B6ABF; }
.module-title-mission        { color: #6B5B95; }
.module-title-money-relation { color: #D4A853; }
.module-title-potential      { color: #C49A3C; }
.module-title-blindspot      { color: #B88A2C; }

.module-rating {
  font-size: 22rpx;
  color: var(--ink-light);
  font-family: "DIN Alternate", -apple-system, sans-serif;
  flex-shrink: 0;
}

/* 模块内容 */
.module-body {
  padding: var(--spacing-lg);
}

.markdown-content {
  font-size: 28rpx;
  color: var(--ink-medium);
  line-height: 1.8;
  word-break: break-all;
}

/* ========== 底部 ========== */

.detail-footer {
  padding: var(--breath-lg) var(--spacing-lg) var(--spacing-lg);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-lg);
}

.security-badge {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
}

.security-icon {
  font-size: 22rpx;
}

.security-label {
  font-size: 20rpx;
  color: var(--ink-light);
  font-family: -apple-system, "PingFang SC", sans-serif;
}

.back-btn {
  background: var(--ink-deep);
  padding: var(--spacing-md) var(--breath-xxl);
  transition: all 0.2s ease;
}

.back-btn:active {
  opacity: 0.85;
  transform: translateY(1rpx);
}

.back-btn-text {
  font-size: 28rpx;
  color: var(--paper-50);
  letter-spacing: 4rpx;
}

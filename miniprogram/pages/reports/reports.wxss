/* pages/reports/reports.wxss */

.container {
  background-color: var(--bg-color);
  min-height: 100vh;
  padding: 0;
  display: flex;
  flex-direction: column;
}

/* Header */
.header {
  padding: 24rpx;
  background-color: var(--space-900);
  border-bottom: 1px solid var(--space-800);
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn {
  padding: 16rpx;
  margin-left: -16rpx;
  color: var(--text-secondary);
  display: flex;
  align-items: center;
}

.back-text {
  font-size: 20rpx;
  font-weight: 900;
  letter-spacing: 1px;
}

.header-title-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.header-title {
  font-size: 32rpx;
  font-weight: 800;
  color: var(--text-primary);
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.header-subtitle {
  font-size: 18rpx;
  font-weight: 700;
  color: var(--text-muted);
  text-transform: uppercase;
  letter-spacing: 2rpx;
  margin-top: 4rpx;
}

.header-placeholder {
  width: 80rpx;
}

/* List View */
.list-container {
  padding: 32rpx;
  flex: 1;
  overflow-y: auto;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  color: var(--text-muted);
}

.empty-text {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text-secondary);
}

.empty-subtext {
  font-size: 20rpx;
  margin-top: 12rpx;
  color: var(--text-muted);
}

.report-card {
  background-color: var(--space-800);
  border-radius: 48rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  border: 1px solid var(--space-700);
  transition: all 0.2s;
}

.report-card:active {
  transform: scale(0.98);
  background-color: var(--space-700);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.tag {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 18rpx;
  font-weight: 900;
  border-width: 1px;
  border-style: solid;
}

.tag-synastry {
  background-color: var(--space-700);
  color: var(--danger);
  border-color: var(--danger);
}

.tag-daily {
  background-color: var(--space-700);
  color: var(--mystic-500);
  border-color: var(--mystic-500);
}

.tag-natal {
  background-color: var(--space-700);
  color: var(--psycho-500);
  border-color: var(--psycho-500);
}

.tag-default {
  background-color: var(--space-700);
  color: var(--text-muted);
  border-color: var(--space-600);
}

.date-label {
  font-size: 20rpx;
  color: var(--text-muted);
  font-weight: 700;
  display: flex;
  align-items: center;
}

.card-title {
  font-size: 28rpx;
  font-weight: 900;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.card-summary {
  font-size: 22rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.card-footer {
  margin-top: 32rpx;
  padding-top: 32rpx;
  border-top: 1px solid var(--space-700);
  display: flex;
  justify-content: flex-end;
}

.details-link {
  font-size: 20rpx;
  font-weight: 900;
  color: var(--psycho-500);
  display: flex;
  align-items: center;
}

/* Detail View */
.detail-container {
  flex: 1;
  padding: 40rpx;
  background-color: var(--bg-color);
}

.detail-meta {
  margin-bottom: 48rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.detail-date {
  font-size: 20rpx;
  color: var(--text-muted);
  font-weight: 700;
}

.report-header-section {
  margin-bottom: 48rpx;
}

.report-main-title {
  font-size: 40rpx;
  font-weight: 900;
  color: var(--text-primary);
  display: block;
  margin-bottom: 16rpx;
}

.report-subtitle {
  font-size: 24rpx;
  font-weight: 700;
  color: var(--text-muted);
  display: block;
  margin-bottom: 32rpx;
  text-transform: uppercase;
}

.report-summary-box {
  background-color: var(--space-800);
  padding: 32rpx;
  border-radius: 32rpx;
  border: 1rpx solid var(--space-700);
}

.summary-text {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  font-style: italic;
}

.section-card {
  background-color: var(--space-800);
  padding: 40rpx;
  border-radius: 48rpx;
  border: 1px solid var(--space-700);
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 900;
  color: var(--text-primary);
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.section-rating {
  font-size: 20rpx;
  color: var(--accent);
  background: var(--space-900);
  padding: 4rpx 16rpx;
  border-radius: 16rpx;
}

.section-content {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.8;
  margin-bottom: 24rpx;
}

.highlights-box {
  background-color: var(--space-900);
  padding: 24rpx;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
}

.highlight-item {
  display: flex;
  gap: 16rpx;
  margin-bottom: 12rpx;
  font-size: 24rpx;
  color: var(--text-primary);
  line-height: 1.5;
}

.highlight-item:last-child {
  margin-bottom: 0;
}

.bullet {
  color: var(--mystic-500);
}

.advice-box {
  background-color: var(--space-900);
  padding: 24rpx;
  border-radius: 24rpx;
  border: 1px solid var(--mystic-500);
}

.advice-label {
  display: block;
  font-size: 18rpx;
  font-weight: 900;
  color: var(--mystic-500);
  margin-bottom: 8rpx;
  text-transform: uppercase;
}

.advice-content {
  font-size: 24rpx;
  color: var(--text-primary);
  line-height: 1.5;
}

.security-footer {
  margin-top: 64rpx;
  padding-top: 64rpx;
  border-top: 1px solid var(--space-800);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.security-text {
  font-size: 20rpx;
  color: var(--text-muted);
  font-weight: 700;
  text-align: center;
}

.text-success { color: var(--success); }

/* pages/reports/reports.wxss - 水墨极简风格 */

.container {
  background-color: var(--paper-100);
  min-height: 100vh;
}

/* 列表视图 */
.list-container {
  padding: var(--spacing-lg);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xxl) var(--spacing-lg);
}

.empty-title {
  font-size: 30rpx;
  color: var(--ink-dark);
  text-align: center;
  margin-bottom: var(--spacing-sm);
}

.empty-desc {
  font-size: 24rpx;
  color: var(--ink-light);
  text-align: center;
  margin-bottom: var(--spacing-lg);
}

.login-btn {
  padding: var(--spacing-sm) var(--spacing-xl);
  background: var(--ink-deep);
}

.login-btn text {
  font-size: 28rpx;
  color: var(--paper-50);
}

/* 报告卡片 */
.report-card {
  background-color: var(--paper-50);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-md);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.tag {
  background: var(--ink-deep);
  color: var(--paper-50);
  padding: 4rpx 16rpx;
  font-size: 18rpx;
  font-weight: 500;
}

.date-label {
  font-size: 20rpx;
  color: var(--ink-light);
}

.card-title {
  font-size: 32rpx;
  color: var(--ink-deep);
  margin-bottom: var(--spacing-sm);
  display: block;
}

.card-summary {
  font-size: 24rpx;
  color: var(--ink-dark);
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.card-footer {
  margin-top: var(--spacing-md);
  padding-top: var(--spacing-md);
  border-top: 1rpx solid var(--border-color);
  display: flex;
  justify-content: flex-end;
}

.card-action {
  font-size: 22rpx;
  color: var(--ink-dark);
}

/* 详情视图 */
.detail-container {
  padding: var(--spacing-lg);
  background-color: var(--paper-100);
}

.detail-meta {
  margin-bottom: var(--spacing-lg);
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
}

.detail-date {
  font-size: 20rpx;
  color: var(--ink-light);
}

.report-header-section {
  margin-bottom: var(--spacing-xxl);
}

.report-main-title {
  font-size: 56rpx;
  color: var(--ink-deep);
  margin-bottom: var(--spacing-sm);
  display: block;
}

.report-subtitle {
  font-size: 22rpx;
  color: var(--ink-light);
  letter-spacing: 4rpx;
  margin-bottom: var(--spacing-lg);
  display: block;
}

.report-summary-box {
  background-color: var(--paper-50);
  padding: var(--spacing-xl);
  margin-bottom: var(--spacing-xl);
}

.summary-text {
  font-size: 28rpx;
  color: var(--ink-dark);
  line-height: 1.6;
  font-style: italic;
}

.section-card {
  background-color: var(--paper-50);
  padding: var(--spacing-xl);
  margin-bottom: var(--spacing-lg);
}

.section-title {
  font-size: 32rpx;
  color: var(--ink-deep);
  margin-bottom: var(--spacing-md);
  display: flex;
  justify-content: space-between;
}

.section-rating {
  font-size: 20rpx;
  color: var(--ink-dark);
}

.section-content {
  font-size: 26rpx;
  color: var(--ink-dark);
  line-height: 2;
}

.highlights-box {
  margin-top: var(--spacing-md);
}

.highlight-item {
  font-size: 24rpx;
  color: var(--ink-dark);
  padding: var(--spacing-xs) 0;
}

.advice-box {
  margin-top: var(--spacing-md);
  padding-top: var(--spacing-md);
  border-top: 1rpx solid var(--border-color);
}

.advice-label {
  font-size: 22rpx;
  color: var(--ink-light);
  display: block;
  margin-bottom: var(--spacing-xs);
}

.advice-content {
  font-size: 24rpx;
  color: var(--ink-dark);
  line-height: 1.6;
}

.security-footer {
  margin-top: var(--spacing-xxl);
  padding: var(--spacing-lg) 0;
  text-align: center;
}

.security-text {
  font-size: 18rpx;
  color: var(--ink-water);
}

.back-btn-wrap {
  display: flex;
  justify-content: center;
  margin-top: var(--spacing-lg);
}

.back-detail-btn {
  background: var(--ink-deep);
  color: var(--paper-50);
  padding: var(--spacing-md) var(--spacing-xxl);
  font-size: 28rpx;
}

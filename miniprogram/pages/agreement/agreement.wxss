.page-container {
  min-height: 100vh;
  background-color: var(--paper-100);
  padding: var(--spacing-lg);
  padding-bottom: 120rpx;
}

.agreement-content {
  background: var(--paper-50);
  padding: var(--spacing-xl);
  border: 1rpx solid var(--border-color);
}

.agreement-title {
  display: block;
  font-size: 40rpx;
  color: var(--ink-deep);
  text-align: center;
  margin-bottom: var(--spacing-sm);
}

.update-date {
  display: block;
  font-size: 22rpx;
  color: var(--ink-light);
  text-align: center;
  margin-bottom: var(--spacing-xl);
  padding-bottom: var(--spacing-lg);
  border-bottom: 1rpx solid var(--border-color);
}

.section {
  margin-bottom: var(--spacing-xl);
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: var(--ink-deep);
  margin-bottom: var(--spacing-sm);
}

.section-content {
  display: block;
  font-size: 26rpx;
  color: var(--ink-medium);
  line-height: 1.8;
  margin-bottom: var(--spacing-sm);
}

.section-items {
  padding-left: var(--spacing-sm);
}

.section-item {
  display: block;
  font-size: 26rpx;
  color: var(--ink-medium);
  line-height: 1.8;
  margin-bottom: 8rpx;
}

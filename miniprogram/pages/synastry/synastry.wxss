/* pages/synastry/synastry.wxss */
.container {
  padding: 0;
  min-height: 100vh;
  background-color: var(--space-950);
  display: flex;
  flex-direction: column;
}

/* Header */
.header {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  background-color: var(--space-950);
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 1px solid var(--space-700);
}

.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.btn-text {
  font-size: 32rpx;
  color: var(--text-secondary);
  padding: 10rpx;
}

.btn-text-accent {
  font-size: 28rpx;
  color: var(--accent);
  font-weight: 600;
  background: var(--space-900);
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

/* Content */
.content {
  flex: 1;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.card {
  background-color: var(--space-900);
  border-radius: 24rpx;
  padding: 32rpx;
  border: 1px solid var(--space-800);
}

.intro-card {
  background-color: var(--space-900);
  border-color: var(--accent);
}

.intro-text {
  font-size: 28rpx;
  color: var(--accent);
  line-height: 1.5;
}

/* Form Styles */
.form-card {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.input-group {
  position: relative;
  z-index: 10;
}

.label {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
}

.input-wrapper {
  position: relative;
  background: var(--space-900);
  border-radius: 16rpx;
  border: 1px solid var(--space-700);
}

.input {
  height: 96rpx;
  padding: 0 32rpx;
  padding-right: 80rpx;
  color: var(--text-primary);
  font-size: 28rpx;
}

.input-placeholder {
  color: var(--text-muted);
}

.dropdown-trigger {
  position: absolute;
  right: 0;
  top: 0;
  height: 96rpx;
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text-muted);
  font-size: 24rpx;
  z-index: 11;
}

/* Dropdown */
.dropdown {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  margin-top: 8rpx;
  background-color: var(--space-800);
  border-radius: 16rpx;
  border: 1px solid var(--space-700);
  box-shadow: 0 8rpx 24rpx 0 var(--space-950);
  z-index: 50;
  overflow: hidden;
}

.dropdown-scroll {
  max-height: 400rpx;
}

.dropdown-item {
  padding: 24rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid var(--space-700);
}

.dropdown-item:last-child {
  border-bottom: none;
}

.dropdown-item.disabled {
  opacity: 0.5;
  background: var(--space-900);
}

.dropdown-name {
  color: var(--text-primary);
  font-size: 28rpx;
}

.dropdown-tag {
  font-size: 20rpx;
  color: var(--danger);
  background: var(--space-800);
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}

.backdrop {
  position: fixed;
  inset: 0;
  z-index: 5;
}

/* Relation Grid */
.relation-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.relation-btn {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  border: 1px solid var(--space-700);
  color: var(--text-secondary);
  font-size: 26rpx;
  background: var(--space-900);
}

.relation-btn.active {
  background: var(--accent);
  color: var(--space-950);
  border-color: var(--accent);
  font-weight: 600;
}

.cost-hint {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 24rpx;
  color: var(--text-muted);
}

.hint-icon {
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  border: 1px solid currentColor;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, var(--accent), var(--accent-hover));
  color: var(--space-950);
  font-weight: 600;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  margin-top: 16rpx;
}

.submit-btn.disabled {
  opacity: 0.5;
  background: var(--space-800);
}

/* Result Styles */
.result-container {
  padding: 0;
  display: flex;
  flex-direction: column;
}

.tabs-scroll {
  background: var(--space-950);
  border-bottom: 1px solid var(--space-700);
  height: 90rpx;
}

.tabs-wrapper {
  display: flex;
  padding: 0 16rpx;
  height: 100%;
}

.tab-item {
  padding: 0 32rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: var(--text-muted);
  position: relative;
  white-space: nowrap;
}

.tab-item.active {
  color: var(--accent);
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 20rpx;
  right: 20rpx;
  height: 4rpx;
  background: var(--accent);
  border-radius: 4rpx 4rpx 0 0;
}

.result-scroll {
  flex: 1;
  padding: 32rpx;
  box-sizing: border-box;
}

.score-card {
  background: linear-gradient(135deg, var(--danger), var(--mystic-500));
  border-radius: 24rpx;
  padding: 48rpx;
  text-align: center;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx 0 var(--space-950);
}

.score-label {
  display: block;
  font-size: 24rpx;
  color: var(--star-200);
  text-transform: uppercase;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.score-value {
  display: block;
  font-size: 96rpx;
  font-weight: 700;
  color: var(--star-50);
  line-height: 1;
  margin-bottom: 24rpx;
}

.score-names {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 16rpx;
  color: var(--star-50);
  font-size: 28rpx;
  font-weight: 500;
}

.score-divider {
  font-size: 24rpx;
  color: var(--star-50);
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
}

.dimension-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.dim-header {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.dim-label {
  color: var(--text-secondary);
  font-weight: 500;
}

.dim-score {
  color: var(--text-muted);
  font-family: monospace;
}

.progress-bg {
  height: 12rpx;
  background: var(--space-700);
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  border-radius: 6rpx;
  transition: width 1s ease-out;
  background: var(--accent);
}

 .dim-desc {
  font-size: 22rpx;
  color: var(--text-muted);
  margin-top: 8rpx;
}

.body-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: var(--text-secondary);
  white-space: pre-wrap;
}

.body-subtext {
  font-size: 22rpx;
  color: var(--text-muted);
  margin-top: 16rpx;
  white-space: pre-wrap;
}

.keyword-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.keyword-item {
  padding: 20rpx;
  background: var(--space-800);
  border-radius: 16rpx;
  border: 1px solid var(--space-700);
}

.keyword-word {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.keyword-evidence {
  font-size: 22rpx;
  color: var(--text-muted);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.score-badge {
  background: var(--space-800);
  color: var(--danger);
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-weight: 600;
}

.reset-btn {
  margin-top: 48rpx;
  margin-bottom: 48rpx;
  background: var(--space-800);
  color: var(--text-secondary);
  font-size: 28rpx;
}

.empty-state {
  text-align: center;
  color: var(--text-muted);
  padding: 64rpx 0;
}

/* Modal Manager */
.modal-overlay {
  position: fixed;
  inset: 0;
  background: var(--space-950);
  z-index: 200;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
}

.modal-content {
  width: 100%;
  max-width: 600rpx;
  background: var(--space-800);
  border-radius: 24rpx;
  padding: 32rpx;
  max-height: 85vh;
  display: flex;
  flex-direction: column;
  border: 1px solid var(--space-700);
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.close-btn {
  padding: 16rpx;
  color: var(--text-muted);
}

.profile-list {
  max-height: 60vh;
  overflow-y: auto;
}

.profile-item {
  background: var(--space-900);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.profile-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.profile-name {
  color: var(--text-primary);
  font-size: 28rpx;
  font-weight: 500;
}

.profile-detail {
  color: var(--text-muted);
  font-size: 24rpx;
}

.profile-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 12rpx;
  background: var(--space-900);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text-secondary);
  font-size: 22rpx;
}

.add-btn {
  margin-top: 32rpx;
  background: var(--space-900);
  color: var(--accent);
  border: 1px solid var(--accent);
  width: 100%;
  font-size: 28rpx;
}

.manager-form {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.form-scroll {
  flex: 1;
  overflow-y: auto;
}

.form-group {
  margin-bottom: 24rpx;
}

.form-row {
  display: flex;
  gap: 24rpx;
}

.form-group.half {
  flex: 1;
}

.form-label {
  display: block;
  font-size: 24rpx;
  color: var(--text-muted);
  margin-bottom: 12rpx;
  text-transform: uppercase;
}

.form-input {
  height: 88rpx;
  background: var(--space-900);
  border: 1px solid var(--space-700);
  border-radius: 12rpx;
  padding: 0 24rpx;
  color: var(--text-primary);
  font-size: 28rpx;
}

.picker-view {
  height: 88rpx;
  background: var(--space-900);
  border: 1px solid var(--space-700);
  border-radius: 12rpx;
  padding: 0 24rpx;
  color: var(--text-primary);
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.picker-view.placeholder {
  color: var(--text-muted);
}

.save-btn {
  margin-top: 32rpx;
  background: var(--accent);
  color: var(--space-950);
  font-weight: 600;
  width: 100%;
}

.save-btn.disabled {
  opacity: 0.5;
  background: var(--space-800);
}

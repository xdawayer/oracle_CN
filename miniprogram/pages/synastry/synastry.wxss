/* pages/synastry/synastry.wxss - Ink Wash Style */

.page {
  min-height: 100vh;
  background: var(--paper-100);
  width: 100%;
  box-sizing: border-box;
}

/* Header - 与 daily/self 页面一致 */
.header {
  padding: var(--spacing-xl) var(--spacing-lg) var(--spacing-lg);
  animation: fadeInUp 0.6s ease-out;
  text-align: center;
}

.title {
  font-size: 64rpx;
  color: var(--ink-deep);
  display: block;
}

.subtitle {
  font-size: 24rpx;
  color: var(--ink-light);
  margin-top: var(--spacing-xs);
  display: block;
  letter-spacing: 2rpx;
}

/* Content */
.content {
  padding: 0 20rpx 20rpx;
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
  max-width: 100%;
  box-sizing: border-box;
}

/* Card */
.card {
  background: var(--paper-50);
  padding: var(--spacing-sm);
  width: 100%;
  box-sizing: border-box;
}

.intro-card {
  background: var(--paper-200);
}

.intro-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: var(--spacing-md);
}

.intro-text {
  flex: 1;
  font-size: 26rpx;
  color: var(--ink-medium);
  line-height: 1.6;
}

.profile-manager-btn {
  padding: 12rpx 24rpx;
  background: var(--paper-50);
  border: 1rpx solid var(--border-color);
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.manager-btn-text {
  font-size: 24rpx;
  color: var(--ink-deep);
  white-space: nowrap;
  line-height: 1;
}

/* Form Styles */
.form-card {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
}

.input-group {
  position: relative;
}

.label {
  display: block;
  font-size: 20rpx;
  color: var(--ink-light);
  margin-bottom: var(--spacing-xs);
  letter-spacing: 2rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  background: var(--paper-100);
  border: 1rpx solid var(--border-color);
  width: 100%;
  box-sizing: border-box;
}

.input {
  flex: 1;
  height: 88rpx;
  padding: 0 var(--spacing-md);
  color: var(--ink-deep);
  font-size: 28rpx;
}

.input-placeholder {
  color: var(--ink-light);
}

.dropdown-trigger {
  padding: 0 var(--spacing-md);
  color: var(--ink-light);
  font-size: 22rpx;
}

/* Dropdown */
.dropdown {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: var(--paper-50);
  border: 1rpx solid var(--border-color);
  border-top: none;
  z-index: 200;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.dropdown-scroll {
  max-height: 400rpx;
}

.dropdown-item {
  padding: var(--spacing-md);
  border-bottom: 1rpx solid var(--border-color);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dropdown-item:last-child {
  border-bottom: none;
}

.dropdown-item.disabled {
  opacity: 0.5;
}

.dropdown-name {
  font-size: 28rpx;
  color: var(--ink-deep);
}

.dropdown-tags {
  display: flex;
  gap: var(--spacing-xs);
}

.dropdown-tag {
  font-size: 18rpx;
  padding: 4rpx 12rpx;
  background: var(--paper-200);
  color: var(--ink-medium);
}

.dropdown-tag.self-tag {
  background: var(--ink-deep);
  color: var(--paper-50);
}

.backdrop {
  position: fixed;
  inset: 0;
  z-index: 150;
}

/* Relation Selection */
.relation-group {
  margin-top: var(--spacing-sm);
}

.relation-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--spacing-sm);
  margin-top: var(--spacing-sm);
}

.relation-btn {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid var(--border-color);
  color: var(--ink-medium);
  font-size: 24rpx;
  background: var(--paper-50);
}

.relation-btn.active {
  background: var(--ink-deep);
  color: var(--paper-50);
  border-color: var(--ink-deep);
}

/* Cost Hint */
.cost-hint {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  padding: var(--spacing-sm);
  background: var(--paper-200);
  font-size: 22rpx;
  color: var(--ink-medium);
}

.hint-icon {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: var(--ink-light);
  color: var(--paper-50);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
}

/* Submit Button */
.submit-btn {
  width: 100%;
  height: 100rpx;
  background: var(--ink-deep);
  color: var(--paper-50);
  font-size: 32rpx;
  letter-spacing: 4rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn::after {
  border: none;
}

.submit-btn.disabled {
  opacity: 0.5;
}

/* Results */
.result-container {
  padding-top: 0;
}

/* Tabs Container */
.tabs-container {
  position: relative;
  background: var(--paper-50);
  border-bottom: 1rpx solid var(--border-color);
}

.tabs-scroll {
  white-space: nowrap;
}

.tabs-wrapper {
  display: inline-flex;
  padding: 0 20rpx;
}

.tab-item {
  padding: var(--spacing-md) var(--spacing-md);
  font-size: 26rpx;
  color: var(--ink-light);
  position: relative;
  flex-shrink: 0;
}

.tab-item.active {
  color: var(--ink-deep);
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 20%;
  right: 20%;
  height: 4rpx;
  background: var(--ink-deep);
}

/* Tab 加载状态 */
.tab-item.tab-loading {
  opacity: 0.7;
}

.tab-loading-dot {
  display: inline-block;
  width: 8rpx;
  height: 8rpx;
  margin-left: 6rpx;
  background: var(--ink-light);
  border-radius: 50%;
  animation: tabDotPulse 1s ease-in-out infinite;
}

@keyframes tabDotPulse {
  0%, 100% { opacity: 0.3; }
  50% { opacity: 1; }
}

.result-scroll {
  flex: 1;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

/* Score Card */
.score-card {
  background: var(--paper-200);
  padding: var(--spacing-md);
  text-align: center;
  margin-bottom: var(--spacing-sm);
  width: 100%;
  box-sizing: border-box;
}

.score-label {
  font-size: 22rpx;
  color: var(--ink-light);
  letter-spacing: 2rpx;
  display: block;
}

.score-value {
  font-size: 110rpx;
  color: var(--ink-deep);
  display: block;
  line-height: 1.2;
}

.score-names {
  font-size: 24rpx;
  color: var(--ink-medium);
  margin-top: var(--spacing-sm);
}

.score-divider {
  margin: 0 var(--spacing-sm);
  color: var(--ink-light);
}

.relationship-type {
  display: inline-block;
  margin-top: var(--spacing-md);
  padding: 8rpx 24rpx;
  background: var(--paper-100);
  border: 1rpx solid var(--border-color);
  font-size: 22rpx;
  color: var(--ink-dark);
}

/* 一句话总结卡片 */
.summary-card {
  background: var(--paper-200);
  padding: var(--spacing-sm) var(--spacing-md);
  margin-bottom: var(--spacing-sm);
  text-align: center;
}

.summary-text {
  font-size: 28rpx;
  color: var(--ink-dark);
  line-height: 1.8;
  font-style: italic;
}

/* 高亮卡片 */
.highlight-card {
  margin-bottom: var(--spacing-sm);
}

.highlight-card.best-match-card {
  border-left: 4rpx solid #c4a07c;
}

.highlight-card.needs-work-card {
  border-left: 4rpx solid #7c9cb0;
}

/* 星盘卡片 */
.chart-card {
  margin-bottom: var(--spacing-sm);
}

/* Chart Container */
.chart-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: var(--spacing-md) 0;
}

.chart-desc {
  font-size: 20rpx;
  color: var(--ink-light);
  text-align: center;
  display: block;
  margin-top: var(--spacing-sm);
}

/* Section Title */
.section-title {
  font-size: 32rpx;
  color: var(--ink-deep);
  margin-bottom: var(--spacing-md);
  display: block;
}

.section-header {
  margin-bottom: var(--spacing-md);
}

/* Keywords */
.keyword-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

.keyword-item {
  padding: var(--spacing-md);
  background: var(--paper-100);
  border: 1rpx solid var(--border-color);
}

.keyword-word {
  font-size: 28rpx;
  color: var(--ink-deep);
  font-weight: 600;
  display: block;
  margin-bottom: 4rpx;
}

.keyword-evidence {
  font-size: 22rpx;
  color: var(--ink-light);
}

/* Dimension List */
.dimension-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.dimension-item {
  padding-bottom: var(--spacing-md);
  border-bottom: 1rpx solid var(--border-color);
}

.dimension-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.dim-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dim-label {
  font-size: 26rpx;
  color: var(--ink-dark);
}

.dim-score {
  font-size: 28rpx;
  color: var(--ink-deep);
}

.progress-bg {
  height: 6rpx;
  background: var(--paper-200);
  margin: 12rpx 0;
}

.progress-bar {
  height: 100%;
  background: var(--ink-deep);
}

.dim-desc {
  font-size: 22rpx;
  color: var(--ink-light);
  line-height: 1.6;
}

/* Body Text */
.body-text {
  display: block;
  font-size: 26rpx;
  line-height: 1.8;
  color: var(--ink-dark);
  white-space: pre-line;
  margin-top: var(--spacing-sm);
}

.body-subtext {
  font-size: 22rpx;
  color: var(--ink-light);
  margin-top: var(--spacing-md);
  display: block;
  line-height: 1.6;
}

/* Reset Button */
.reset-btn {
  margin-top: var(--spacing-xl);
  width: 100%;
  height: 88rpx;
  background: var(--paper-50);
  color: var(--ink-deep);
  border: 1rpx solid var(--border-color);
  font-size: 28rpx;
}

.reset-btn::after {
  border: none;
}

.btn-outline {
  background: transparent;
}

/* Loading State */
.loading-state {
  padding: var(--spacing-xxl) var(--spacing-lg);
  text-align: center;
  color: var(--ink-light);
}

.loading-dots {
  display: flex;
  justify-content: center;
  gap: 8rpx;
  margin-bottom: var(--spacing-sm);
}

.loading-dots .dot {
  font-size: 48rpx;
  color: var(--ink-medium);
  animation: dotPulse 1.2s ease-in-out infinite;
}

.loading-dots .dot2 {
  animation-delay: 0.2s;
}

.loading-dots .dot3 {
  animation-delay: 0.4s;
}

@keyframes dotPulse {
  0%, 80%, 100% { opacity: 0.3; }
  40% { opacity: 1; }
}

.loading-hint {
  font-size: 28rpx;
  color: var(--ink-light);
  display: block;
}

/* Empty State */
.empty-state {
  padding: var(--spacing-xxl);
  text-align: center;
  color: var(--ink-light);
}

/* Modal Overlay */
.modal-overlay {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 92%;
  max-height: 85vh;
  background: var(--paper-100);
  display: flex;
  flex-direction: column;
  margin: 0 auto;
  padding-right: 20rpx;
  box-sizing: border-box;
}

/* Manager List */
.manager-list {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.modal-header {
  padding: var(--spacing-lg);
  border-bottom: 1rpx solid var(--border-color);
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: var(--paper-50);
}

.modal-title {
  font-size: 32rpx;
  color: var(--ink-deep);
  font-weight: 600;
}

.close-btn, .back-btn {
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  color: var(--ink-medium);
  background: var(--paper-200);
}

.back-btn.placeholder {
  visibility: hidden;
  pointer-events: none;
}

/* Profile List */
.profile-list {
  flex: 1;
  max-height: 500rpx;
}

.empty-list {
  padding: var(--spacing-xxl);
  text-align: center;
  color: var(--ink-light);
  font-size: 26rpx;
}

.profile-item {
  padding: var(--spacing-md) var(--spacing-lg);
  border-bottom: 1rpx solid var(--border-color);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.profile-info {
  flex: 1;
}

.profile-name-row {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
}

.profile-name {
  font-size: 28rpx;
  color: var(--ink-deep);
  font-weight: 600;
}

.profile-tag {
  font-size: 18rpx;
  padding: 4rpx 12rpx;
  background: var(--ink-deep);
  color: var(--paper-50);
}

.profile-detail {
  font-size: 22rpx;
  color: var(--ink-light);
  margin-top: 4rpx;
}

.profile-actions {
  display: flex;
  gap: var(--spacing-sm);
}

.action-btn {
  padding: 8rpx 20rpx;
  font-size: 22rpx;
  color: var(--ink-medium);
  background: var(--paper-200);
}

/* Add Button */
.add-btn {
  margin: var(--spacing-lg);
  width: calc(100% - var(--spacing-lg) * 2);
  height: 88rpx;
  line-height: 88rpx;
  background: var(--ink-deep);
  color: var(--paper-50);
  font-size: 28rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-btn::after {
  border: none;
}

/* Manager Form */
.manager-form {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.form-scroll {
  flex: 1;
  padding: var(--spacing-lg);
  max-height: 70vh;
}

.form-group {
  margin-bottom: var(--spacing-md);
}

.form-label {
  display: block;
  font-size: 20rpx;
  color: var(--ink-light);
  margin-bottom: var(--spacing-xs);
  letter-spacing: 2rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 var(--spacing-md);
  background: var(--paper-50);
  border: 1rpx solid var(--border-color);
  color: var(--ink-deep);
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-row {
  display: flex;
  gap: var(--spacing-md);
}

.form-group.half {
  flex: 1;
}

.picker-view {
  height: 88rpx;
  padding: 0 var(--spacing-md);
  background: var(--paper-50);
  border: 1rpx solid var(--border-color);
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: var(--ink-deep);
}

.picker-view.placeholder {
  color: var(--ink-light);
}

/* Save Button */
.save-btn {
  margin: var(--spacing-lg);
  width: calc(100% - var(--spacing-lg) * 2);
  height: 88rpx;
  line-height: 88rpx;
  background: var(--ink-deep);
  color: var(--paper-50);
  font-size: 28rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-btn::after {
  border: none;
}

.save-btn.disabled {
  opacity: 0.5;
}

/* City Autocomplete */
.city-input-group {
  position: relative;
}

.city-input-wrapper {
  position: relative;
}

.city-dropdown {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: var(--paper-50);
  border: 1rpx solid var(--border-color);
  border-top: none;
  max-height: 300rpx;
  overflow-y: auto;
  z-index: 300;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.city-dropdown-up {
  top: auto;
  bottom: 100%;
  border-top: 1rpx solid var(--border-color);
  border-bottom: none;
  box-shadow: 0 -8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.city-dropdown-item {
  display: flex;
  flex-direction: column;
  padding: var(--spacing-sm) var(--spacing-md);
  border-bottom: 1rpx solid var(--border-color);
}

.city-dropdown-item:last-child {
  border-bottom: none;
}

.city-dropdown-item:active {
  background: var(--paper-200);
}

.city-name {
  font-size: 26rpx;
  color: var(--ink-deep);
  line-height: 1.4;
}

.city-region {
  font-size: 20rpx;
  color: var(--ink-light);
  margin-top: 4rpx;
}

.city-no-result {
  padding: var(--spacing-md);
  text-align: center;
}

.city-no-result text {
  font-size: 22rpx;
  color: var(--ink-light);
}

/* Animation */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ========== 卡片式内容样式 ========== */

/* 内容卡片基础 */
.content-card {
  margin-bottom: var(--spacing-sm);
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-sm);
}

.card-header .section-title {
  margin-bottom: 0;
}

/* 卡片分数 */
.card-score {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.card-score .score-num {
  font-size: 48rpx;
  color: var(--ink-deep);
  font-weight: 600;
}

.card-score .score-unit {
  font-size: 22rpx;
  color: var(--ink-light);
}

/* 高亮标签 */
.card-highlight {
  display: inline-block;
  padding: 8rpx 20rpx;
  background: var(--paper-200);
  font-size: 26rpx;
  color: var(--ink-dark);
  margin-bottom: var(--spacing-sm);
  border-radius: 4rpx;
}

/* 标签列表 */
.card-tags {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-xs);
  margin-bottom: var(--spacing-sm);
}

.card-tags .tag {
  padding: 6rpx 16rpx;
  background: var(--paper-200);
  font-size: 22rpx;
  color: var(--ink-medium);
  border-radius: 4rpx;
}

/* 需要/能给 */
.needs-gives {
  margin-bottom: var(--spacing-sm);
  padding: var(--spacing-sm);
  background: var(--paper-100);
  border-radius: 4rpx;
}

.needs-gives .needs-row,
.needs-gives .gives-row {
  display: flex;
  font-size: 24rpx;
  line-height: 1.8;
  color: var(--ink-dark);
}

.needs-gives .label {
  color: var(--ink-medium);
  margin-right: var(--spacing-xs);
  flex-shrink: 0;
}

/* 匹配/摩擦区域 */
.match-areas {
  margin-bottom: var(--spacing-sm);
  padding: var(--spacing-sm);
  background: var(--paper-100);
  border-radius: 4rpx;
}

.match-areas .match-row,
.match-areas .gap-row {
  display: flex;
  font-size: 24rpx;
  line-height: 1.8;
  color: var(--ink-dark);
}

.match-areas .match-label {
  color: #7c9c8c;
}

.match-areas .gap-label {
  color: #9c7c7c;
}

/* 触发器/容易因为 */
.card-trigger {
  margin-bottom: var(--spacing-sm);
  font-size: 24rpx;
  color: var(--ink-medium);
}

.card-trigger .trigger-label {
  color: var(--ink-light);
}

/* 危险区域 */
.danger-zones,
.mines-list {
  margin-bottom: var(--spacing-sm);
}

.danger-item,
.mine-item {
  display: flex;
  align-items: flex-start;
  gap: var(--spacing-xs);
  margin-bottom: 8rpx;
  font-size: 24rpx;
  color: var(--ink-dark);
}

.danger-icon,
.mine-icon {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #d4a574;
  color: var(--paper-50);
  font-size: 20rpx;
  font-weight: bold;
  border-radius: 4rpx;
  flex-shrink: 0;
}

/* 比喻/一句话 */
.card-metaphor,
.card-oneliner {
  margin-top: var(--spacing-sm);
  padding: var(--spacing-sm);
  background: var(--paper-200);
  border-radius: 4rpx;
  font-size: 26rpx;
  color: var(--ink-dark);
  font-style: italic;
  text-align: center;
}

/* 判定/建议 */
.card-verdict {
  margin-top: var(--spacing-sm);
  padding: var(--spacing-sm);
  background: var(--paper-200);
  font-size: 26rpx;
  color: var(--ink-dark);
  text-align: center;
  white-space: pre-line;
  border-radius: 4rpx;
}

.card-advice {
  margin-top: var(--spacing-xs);
  font-size: 24rpx;
  color: var(--ink-medium);
  white-space: pre-line;
}

.card-advice .advice-label {
  color: var(--ink-light);
}

/* 提示列表 */
.tips-list {
  margin-top: var(--spacing-sm);
}

.tip-item {
  display: flex;
  gap: var(--spacing-xs);
  font-size: 24rpx;
  color: var(--ink-medium);
  line-height: 1.8;
}

.tip-bullet {
  color: var(--ink-light);
}

/* ========== 卡片颜色变体 ========== */

/* 暖色卡片 - 用于积极、吸引力相关内容 */
.card-warm {
  border-left: 4rpx solid #c4a07c;
}

.card-warm .card-highlight {
  background: rgba(196, 160, 124, 0.15);
  color: #8a6c4c;
}

.card-warm .card-score .score-num {
  color: #8a6c4c;
}

/* 中性卡片 - 用于普通信息 */
.card-neutral {
  border-left: 4rpx solid var(--ink-light);
}

/* 警示卡片 - 用于提醒、注意事项 */
.card-alert {
  border-left: 4rpx solid #9c7c7c;
}

.card-alert .card-highlight {
  background: rgba(156, 124, 124, 0.15);
  color: #7c5c5c;
}

.card-alert .danger-icon,
.card-alert .mine-icon {
  background: #9c7c7c;
}

/* 高亮卡片 - 用于总结、重点 */
.card-emphasis {
  border-left: 4rpx solid var(--ink-deep);
  background: var(--paper-200);
}

.card-emphasis .card-verdict {
  background: var(--paper-100);
  font-weight: 600;
}

/* ========== 星象依据 ========== */
.card-astro-basis {
  margin-top: var(--spacing-sm);
  padding: var(--spacing-sm);
  background: var(--paper-200);
  border-radius: 4rpx;
}

.card-astro-basis .astro-label {
  display: block;
  font-size: 22rpx;
  color: var(--ink-light);
  margin-bottom: 4rpx;
  letter-spacing: 2rpx;
}

.card-astro-basis .astro-text {
  display: block;
  font-size: 24rpx;
  color: var(--ink-medium);
  line-height: 1.6;
}

/* ========== 卡片点击反馈 ========== */
.card-tappable {
  transition: transform 0.15s ease;
}

.card-tappable:active {
  transform: scale(0.98);
  opacity: 0.85;
}

.card-deep-hint {
  margin-top: var(--spacing-sm);
  text-align: right;
  font-size: 22rpx;
  color: var(--ink-light);
  letter-spacing: 1rpx;
}

/* ========== 深度解读 Overlay ========== */
.deep-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--paper-100);
  z-index: 1200;
  display: flex;
  flex-direction: column;
}

.deep-overlay-header {
  display: flex;
  align-items: center;
  padding: calc(env(safe-area-inset-top) + 16rpx) 20rpx 16rpx;
  background: var(--paper-100);
  border-bottom: 1rpx solid var(--border-color);
}

.deep-back-btn {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: var(--ink-medium);
  padding: 8rpx 0;
  margin-right: var(--spacing-md);
}

.deep-back-arrow {
  font-size: 32rpx;
  margin-right: 4rpx;
}

.deep-overlay-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--ink-deep);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.deep-loading {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.deep-overlay-scroll {
  flex: 1;
  padding: var(--spacing-md) 20rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 40rpx);
}

/* ========== Detail Card 样式系统 ========== */
.detail-card {
  position: relative;
  background: var(--paper-50);
  margin-bottom: var(--spacing-md);
  border: 1rpx solid var(--border-color);
  overflow: hidden;
}

.detail-card__accent {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
}

.detail-card__body {
  padding: var(--spacing-xl) var(--spacing-xl) var(--spacing-xl) calc(var(--spacing-xl) + 6rpx);
}

.detail-card__title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: var(--spacing-sm);
  line-height: 1.6;
}

.detail-card__text {
  display: block;
  font-size: 28rpx;
  color: var(--ink-dark);
  line-height: 1.8;
  white-space: pre-line;
}

.detail-card__list {
  margin-top: var(--spacing-sm);
}

.detail-card__list-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: var(--spacing-xs);
}

.detail-card__list-num {
  font-size: 28rpx;
  color: var(--ink-medium);
  font-weight: 600;
  min-width: 40rpx;
}

.detail-card__list-text {
  font-size: 28rpx;
  color: var(--ink-dark);
  flex: 1;
  line-height: 1.8;
  white-space: pre-line;
}

/* 颜色变体 - default */
.detail-card--default .detail-card__accent { background: var(--ink-water); }
.detail-card--default .detail-card__title { color: var(--ink-deep); }

/* 颜色变体 - accent-red */
.detail-card--accent-red .detail-card__accent { background: var(--accent-red); }
.detail-card--accent-red .detail-card__title { color: var(--accent-red); }

/* 颜色变体 - info */
.detail-card--info .detail-card__accent { background: var(--info); }
.detail-card--info .detail-card__title { color: var(--info); }

/* 颜色变体 - success */
.detail-card--success .detail-card__accent { background: var(--success); }
.detail-card--success .detail-card__title { color: var(--success); }

/* 颜色变体 - warning */
.detail-card--warning .detail-card__accent { background: var(--warning); }
.detail-card--warning .detail-card__title { color: var(--warning); }

/* 全屏加载遮罩 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(250, 248, 244, 0.95);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-xl);
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid var(--border-color);
  border-top-color: var(--ink-deep);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: var(--spacing-lg);
  font-size: 32rpx;
  color: var(--ink-deep);
  letter-spacing: 2rpx;
}

.loading-hint {
  margin-top: var(--spacing-sm);
  font-size: 24rpx;
  color: var(--ink-light);
}

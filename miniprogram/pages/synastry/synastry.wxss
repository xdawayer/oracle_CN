/* pages/synastry/synastry.wxss - Ink Wash Style */

.page {
  min-height: 100vh;
  background: var(--paper-100);
}

/* Header - 与 daily/self 页面一致 */
.header {
  padding: var(--spacing-xl) var(--spacing-lg) var(--spacing-lg);
  animation: fadeInUp 0.6s ease-out;
}

.title {
  font-size: 64rpx;
  color: var(--ink-deep);
  display: block;
}

.subtitle {
  font-size: 24rpx;
  color: var(--ink-light);
  margin-top: var(--spacing-xs);
  display: block;
  letter-spacing: 2rpx;
}

/* Content */
.content {
  padding: 0 var(--spacing-lg) var(--spacing-lg);
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
}

/* Card */
.card {
  background: var(--paper-50);
  padding: var(--spacing-lg);
}

.intro-card {
  background: var(--paper-200);
}

.intro-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: var(--spacing-md);
}

.intro-text {
  flex: 1;
  font-size: 26rpx;
  color: var(--ink-medium);
  line-height: 1.6;
}

.profile-manager-btn {
  padding: 12rpx 24rpx;
  background: var(--paper-50);
  border: 1rpx solid var(--border-color);
  flex-shrink: 0;
}

.manager-btn-text {
  font-size: 24rpx;
  color: var(--ink-deep);
  white-space: nowrap;
}

/* Form Styles */
.form-card {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
}

.input-group {
  position: relative;
}

.label {
  display: block;
  font-size: 20rpx;
  color: var(--ink-light);
  margin-bottom: var(--spacing-xs);
  letter-spacing: 2rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  background: var(--paper-100);
  border: 1rpx solid var(--border-color);
}

.input {
  flex: 1;
  height: 88rpx;
  padding: 0 var(--spacing-md);
  color: var(--ink-deep);
  font-size: 28rpx;
}

.input-placeholder {
  color: var(--ink-light);
}

.dropdown-trigger {
  padding: 0 var(--spacing-md);
  color: var(--ink-light);
  font-size: 22rpx;
}

/* Dropdown */
.dropdown {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: var(--paper-50);
  border: 1rpx solid var(--border-color);
  border-top: none;
  z-index: 200;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.dropdown-scroll {
  max-height: 400rpx;
}

.dropdown-item {
  padding: var(--spacing-md);
  border-bottom: 1rpx solid var(--border-color);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dropdown-item:last-child {
  border-bottom: none;
}

.dropdown-item.disabled {
  opacity: 0.5;
}

.dropdown-name {
  font-size: 28rpx;
  color: var(--ink-deep);
}

.dropdown-tags {
  display: flex;
  gap: var(--spacing-xs);
}

.dropdown-tag {
  font-size: 18rpx;
  padding: 4rpx 12rpx;
  background: var(--paper-200);
  color: var(--ink-medium);
}

.dropdown-tag.self-tag {
  background: var(--ink-deep);
  color: var(--paper-50);
}

.backdrop {
  position: fixed;
  inset: 0;
  z-index: 150;
}

/* Relation Selection */
.relation-group {
  margin-top: var(--spacing-sm);
}

.relation-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--spacing-sm);
  margin-top: var(--spacing-sm);
}

.relation-btn {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid var(--border-color);
  color: var(--ink-medium);
  font-size: 24rpx;
  background: var(--paper-50);
}

.relation-btn.active {
  background: var(--ink-deep);
  color: var(--paper-50);
  border-color: var(--ink-deep);
}

/* Cost Hint */
.cost-hint {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  padding: var(--spacing-sm);
  background: var(--paper-200);
  font-size: 22rpx;
  color: var(--ink-medium);
}

.hint-icon {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: var(--ink-light);
  color: var(--paper-50);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
}

/* Submit Button */
.submit-btn {
  width: 100%;
  height: 100rpx;
  background: var(--ink-deep);
  color: var(--paper-50);
  font-size: 32rpx;
  letter-spacing: 4rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn::after {
  border: none;
}

.submit-btn.disabled {
  opacity: 0.5;
}

/* Results */
.result-container {
  padding-top: 0;
}

.tabs-scroll {
  background: var(--paper-50);
  border-bottom: 1rpx solid var(--border-color);
  white-space: nowrap;
}

.tabs-wrapper {
  display: inline-flex;
  padding: 0 var(--spacing-lg);
}

.tab-item {
  padding: var(--spacing-md) var(--spacing-lg);
  font-size: 26rpx;
  color: var(--ink-light);
  position: relative;
}

.tab-item.active {
  color: var(--ink-deep);
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 20%;
  right: 20%;
  height: 4rpx;
  background: var(--ink-deep);
}

.result-scroll {
  flex: 1;
  padding: var(--spacing-lg);
}

/* Score Card */
.score-card {
  background: var(--paper-200);
  padding: var(--spacing-xl);
  text-align: center;
  margin-bottom: var(--spacing-lg);
}

.score-label {
  font-size: 22rpx;
  color: var(--ink-light);
  letter-spacing: 2rpx;
  display: block;
}

.score-value {
  font-size: 110rpx;
  color: var(--ink-deep);
  display: block;
  line-height: 1.2;
}

.score-names {
  font-size: 24rpx;
  color: var(--ink-medium);
  margin-top: var(--spacing-sm);
}

.score-divider {
  margin: 0 var(--spacing-sm);
  color: var(--ink-light);
}

/* Chart Container */
.chart-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: var(--spacing-md) 0;
}

.chart-desc {
  font-size: 20rpx;
  color: var(--ink-light);
  text-align: center;
  display: block;
  margin-top: var(--spacing-sm);
}

/* Section Title */
.section-title {
  font-size: 32rpx;
  color: var(--ink-deep);
  margin-bottom: var(--spacing-md);
  display: block;
}

.section-header {
  margin-bottom: var(--spacing-md);
}

/* Keywords */
.keyword-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

.keyword-item {
  padding: var(--spacing-md);
  background: var(--paper-100);
  border: 1rpx solid var(--border-color);
}

.keyword-word {
  font-size: 28rpx;
  color: var(--ink-deep);
  font-weight: 600;
  display: block;
  margin-bottom: 4rpx;
}

.keyword-evidence {
  font-size: 22rpx;
  color: var(--ink-light);
}

/* Dimension List */
.dimension-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.dimension-item {
  padding-bottom: var(--spacing-md);
  border-bottom: 1rpx solid var(--border-color);
}

.dimension-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.dim-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dim-label {
  font-size: 26rpx;
  color: var(--ink-dark);
}

.dim-score {
  font-size: 28rpx;
  color: var(--ink-deep);
}

.progress-bg {
  height: 6rpx;
  background: var(--paper-200);
  margin: 12rpx 0;
}

.progress-bar {
  height: 100%;
  background: var(--ink-deep);
}

.dim-desc {
  font-size: 22rpx;
  color: var(--ink-light);
  line-height: 1.6;
}

/* Body Text */
.body-text {
  font-size: 26rpx;
  line-height: 1.8;
  color: var(--ink-dark);
}

.body-subtext {
  font-size: 22rpx;
  color: var(--ink-light);
  margin-top: var(--spacing-md);
  display: block;
  line-height: 1.6;
}

/* Reset Button */
.reset-btn {
  margin-top: var(--spacing-xl);
  width: 100%;
  height: 88rpx;
  background: var(--paper-50);
  color: var(--ink-deep);
  border: 1rpx solid var(--border-color);
  font-size: 28rpx;
}

.reset-btn::after {
  border: none;
}

.btn-outline {
  background: transparent;
}

/* Empty State */
.empty-state {
  padding: var(--spacing-xxl);
  text-align: center;
  color: var(--ink-light);
}

/* Modal Overlay */
.modal-overlay {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 90%;
  max-width: 650rpx;
  max-height: 80vh;
  background: var(--paper-100);
  display: flex;
  flex-direction: column;
}

/* Manager List */
.manager-list {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.modal-header {
  padding: var(--spacing-lg);
  border-bottom: 1rpx solid var(--border-color);
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: var(--paper-50);
}

.modal-title {
  font-size: 32rpx;
  color: var(--ink-deep);
  font-weight: 600;
}

.close-btn, .back-btn {
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  color: var(--ink-medium);
  background: var(--paper-200);
}

/* Profile List */
.profile-list {
  flex: 1;
  max-height: 500rpx;
}

.empty-list {
  padding: var(--spacing-xxl);
  text-align: center;
  color: var(--ink-light);
  font-size: 26rpx;
}

.profile-item {
  padding: var(--spacing-md) var(--spacing-lg);
  border-bottom: 1rpx solid var(--border-color);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.profile-info {
  flex: 1;
}

.profile-name-row {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
}

.profile-name {
  font-size: 28rpx;
  color: var(--ink-deep);
  font-weight: 600;
}

.profile-tag {
  font-size: 18rpx;
  padding: 4rpx 12rpx;
  background: var(--ink-deep);
  color: var(--paper-50);
}

.profile-detail {
  font-size: 22rpx;
  color: var(--ink-light);
  margin-top: 4rpx;
}

.profile-actions {
  display: flex;
  gap: var(--spacing-sm);
}

.action-btn {
  padding: 8rpx 20rpx;
  font-size: 22rpx;
  color: var(--ink-medium);
  background: var(--paper-200);
}

/* Add Button */
.add-btn {
  margin: var(--spacing-lg);
  width: calc(100% - var(--spacing-lg) * 2);
  height: 88rpx;
  background: var(--ink-deep);
  color: var(--paper-50);
  font-size: 28rpx;
  border: none;
}

.add-btn::after {
  border: none;
}

/* Manager Form */
.manager-form {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.form-scroll {
  flex: 1;
  padding: var(--spacing-lg);
  max-height: 500rpx;
}

.form-group {
  margin-bottom: var(--spacing-md);
}

.form-label {
  display: block;
  font-size: 20rpx;
  color: var(--ink-light);
  margin-bottom: var(--spacing-xs);
  letter-spacing: 2rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 var(--spacing-md);
  background: var(--paper-50);
  border: 1rpx solid var(--border-color);
  color: var(--ink-deep);
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-row {
  display: flex;
  gap: var(--spacing-md);
}

.form-group.half {
  flex: 1;
}

.picker-view {
  height: 88rpx;
  padding: 0 var(--spacing-md);
  background: var(--paper-50);
  border: 1rpx solid var(--border-color);
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: var(--ink-deep);
}

.picker-view.placeholder {
  color: var(--ink-light);
}

/* Save Button */
.save-btn {
  margin: var(--spacing-lg);
  width: calc(100% - var(--spacing-lg) * 2);
  height: 88rpx;
  background: var(--ink-deep);
  color: var(--paper-50);
  font-size: 28rpx;
  border: none;
}

.save-btn::after {
  border: none;
}

.save-btn.disabled {
  opacity: 0.5;
}

/* City Autocomplete */
.city-input-group {
  position: relative;
}

.city-input-wrapper {
  position: relative;
}

.city-dropdown {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: var(--paper-50);
  border: 1rpx solid var(--border-color);
  border-top: none;
  max-height: 300rpx;
  overflow-y: auto;
  z-index: 300;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.city-dropdown-item {
  display: flex;
  flex-direction: column;
  padding: var(--spacing-sm) var(--spacing-md);
  border-bottom: 1rpx solid var(--border-color);
}

.city-dropdown-item:last-child {
  border-bottom: none;
}

.city-dropdown-item:active {
  background: var(--paper-200);
}

.city-name {
  font-size: 26rpx;
  color: var(--ink-deep);
  line-height: 1.4;
}

.city-region {
  font-size: 20rpx;
  color: var(--ink-light);
  margin-top: 4rpx;
}

.city-no-result {
  padding: var(--spacing-md);
  text-align: center;
}

.city-no-result text {
  font-size: 22rpx;
  color: var(--ink-light);
}

/* Animation */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 全屏加载遮罩 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(250, 248, 244, 0.95);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-xl);
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid var(--border-color);
  border-top-color: var(--ink-deep);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: var(--spacing-lg);
  font-size: 32rpx;
  color: var(--ink-deep);
  letter-spacing: 2rpx;
}

.loading-hint {
  margin-top: var(--spacing-sm);
  font-size: 24rpx;
  color: var(--ink-light);
}

}

.mini-fly {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.fly-text {
  font-size: 20rpx;
  font-weight: 600;
  margin-right: 6rpx;
}

.fly-house {
  font-size: 20rpx;
  color: var(--star-400);
}

.pi-angle-text {
  font-size: 20rpx;
  font-weight: bold;
  color: var(--star-400);
}

.glyph {
  font-family: "'Segoe UI Symbol', 'Apple Symbols', 'Noto Sans Symbols', sans-serif";
  font-size: 32rpx;
}

.glyph-small {
  font-family: "'Segoe UI Symbol', 'Apple Symbols', 'Noto Sans Symbols', sans-serif";
  font-size: 26rpx;
}

.pi-icon-circle {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  background: var(--paper-200);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.pi-icon {
  width: 32rpx;
  height: 32rpx;
}

.pi-name {
  font-weight: 600;
  color: var(--star-100);
}

.pi-sign {
  flex: 1.8;
  display: flex;
  gap: 12rpx;
}

.pi-icon-circle.mini {
  width: 44rpx;
  height: 44rpx;
  margin-right: 12rpx;
}

.pi-icon-circle.mini .pi-icon {
  width: 26rpx;
  height: 26rpx;
}

.pi-sign-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.pi-sign-name {
  font-weight: 600;
}

.pi-degree {
  color: var(--star-400);
  font-size: 22rpx;
}

.retro-tag {
  color: #FF4D4F;
  background: rgba(255, 77, 79, 0.1);
  font-weight: bold;
  padding: 2rpx 8rpx;
  border-radius: 4px;
  font-size: 20rpx;
}

.retro-none {
  opacity: 0.2;
}

.data-table {
  width: 100%;
}

.table-row {
  display: flex;
  padding: 16rpx 0;
  border-bottom: 1rpx solid var(--space-800);
}

.table-row:last-child {
  border-bottom: none;
}

.table-cell {
  flex: 1;
  font-size: 24rpx;
  color: var(--star-200);
  display: flex;
  align-items: center;
}

.table-cell.head {
  color: var(--star-400);
  font-weight: 600;
}

.table-cell.right {
  justify-content: flex-end;
  text-align: right;
}

.table-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.table-row {
  display: flex;
  padding: 16rpx 0;
  border-bottom: 1px solid var(--space-800);
}

.table-row:last-child {
  border-bottom: none;
}

.table-cell {
  flex: 1;
  font-size: 24rpx;
  color: var(--star-200);
}

.table-cell.head {
  color: var(--star-400);
  font-size: 22rpx;
}

.table-cell.right {
  text-align: right;
}

.element-table {
  width: 100%;
  border-collapse: collapse;
}

.el-row {
  display: flex;
  border-bottom: 1rpx solid var(--space-800);
}

.el-row:last-child {
  border-bottom: none;
}

.el-head {
  background: rgba(198, 160, 98, 0.05);
}

.el-cell {
  flex: 1;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-right: 1rpx solid var(--space-800);
  font-size: 24rpx;
  color: var(--star-400);
}

.el-cell:last-child {
  border-right: none;
}

.el-label {
  font-weight: 600;
  background: rgba(198, 160, 98, 0.02);
}

.planet-capsule {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: var(--space-800);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin: 4rpx;
  border: 1rpx solid rgba(198, 160, 98, 0.1);
}

.empty-dash {
  color: var(--star-400);
  opacity: 0.3;
}

.link-btn {
  font-size: 24rpx;
  color: #3B82F6;
  margin-left: 12rpx;
}

.matrix-item {
  background: var(--space-800);
  border-radius: 12rpx;
  padding: 16rpx;
  text-align: center;
}

.matrix-label {
  font-size: 22rpx;
  color: var(--star-400);
  display: block;
  margin-bottom: 8rpx;
}

.matrix-val {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--star-50);
}

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(5, 5, 6, 0.85);
  backdrop-filter: blur(8px);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-panel {
  width: 600rpx;
  background: var(--space-900);
  border: 1px solid var(--space-700);
  border-radius: 32rpx;
  padding: 40rpx;
  position: relative;
}

.detail-modal {
  width: 640rpx;
  max-height: 80vh;
  background: var(--space-900);
  border: 1px solid var(--space-700);
  border-radius: 32rpx;
  padding: 40rpx;
  position: relative;
  overflow-y: auto;
  transition: all 0.3s ease-in-out;
}

.detail-modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
}

.detail-modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--star-50);
  display: block;
}

.detail-modal-close {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  background: var(--space-800);
  color: var(--star-200);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  transition: all 0.3s ease-in-out;
}

.detail-modal-subtitle {
  font-size: 24rpx;
  color: var(--star-400);
  margin-top: 8rpx;
  display: block;
}

.detail-modal-divider {
  height: 1px;
  background: var(--space-800);
  margin: 24rpx 0;
}

.detail-modal-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx 0;
}

.detail-spinner {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  border: 4rpx solid var(--space-700);
  border-top-color: var(--accent);
  animation: detail-spin 1s linear infinite;
}

.detail-state-text {
  font-size: 26rpx;
  color: var(--star-200);
  line-height: 1.6;
  text-align: center;
}

.detail-state-text.error {
  color: var(--danger);
}

.detail-modal-content {
  padding: 8rpx 0;
}

.detail-modal-text {
  font-size: 28rpx;
  color: var(--star-200);
  line-height: 1.8;
  display: block;
}

.detail-modal-actions {
  margin-top: 24rpx;
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
}

.detail-btn {
  padding: 20rpx 36rpx;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.3s ease-in-out;
}

.detail-btn.primary {
  background: var(--accent);
  color: var(--space-950);
}

.detail-btn.ghost {
  background: transparent;
  color: var(--star-200);
  border: 1px solid var(--space-700);
}

@keyframes detail-spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.close-btn {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  color: var(--star-400);
  padding: 16rpx;
  font-size: 32rpx;
  line-height: 1;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--star-50);
  margin-bottom: 16rpx;
  display: block;
}

.modal-text {
  font-size: 28rpx;
  color: var(--star-200);
  line-height: 1.6;
  margin-bottom: 32rpx;
  display: block;
}

.action-btn {
  background: var(--accent);
  color: var(--space-950);
  font-weight: 600;
  font-size: 28rpx;
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
}

.action-btn.secondary {
  background: transparent;
  color: var(--star-200);
  margin-top: 16rpx;
}

.full-screen-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.fs-header {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
}

.fs-content {
  flex: 1;
  width: 100%;
  position: relative;
}

/* 表格中的小图标样式 */
.table-icon {
  display: inline-block;
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
  vertical-align: middle;
  background-color: currentColor;
  -webkit-mask-repeat: no-repeat;
  -webkit-mask-position: center;
  -webkit-mask-size: contain;
  mask-repeat: no-repeat;
  mask-position: center;
  mask-size: contain;
}

/* 半透明遮罩层（用于点击关闭，同时降低背景干扰） */
.planet-detail-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 9998;
}

/* 行星详情卡片（居中显示） */
.planet-detail-card {
  position: fixed;
  width: 280px;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #ffffff;
  border-radius: 12px;
  padding: 16px;
  z-index: 9999;
  white-space: normal; /* Ensure text wraps in cover-view */
}

.card-close {
  position: absolute;
  top: 8px;
  right: 12px;
  font-size: 20px;
  color: #94a3b8;
  line-height: 1;

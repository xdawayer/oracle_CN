/* self.wxss - AstroMind Ink Wash (水墨风) Optimization */

.page-container {
  padding: var(--spacing-md) var(--spacing-lg) 120rpx;
  background-color: var(--paper-100);
  min-height: 100vh;
}

.self-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1300;
  background: var(--paper-50);
  border-bottom: 1rpx solid var(--border-color);
}

.self-nav-content {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
}

.self-nav-back,
.self-nav-back-placeholder,
.self-nav-right-placeholder {
  width: 72rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.self-nav-back {
  border-radius: 8rpx;
}

.self-nav-back-icon {
  width: 18rpx;
  height: 18rpx;
  border-left: 3rpx solid var(--ink-dark);
  border-bottom: 3rpx solid var(--ink-dark);
  transform: rotate(45deg);
}

.self-nav-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  color: var(--ink-deep);
  font-weight: 600;
}

.header {
  margin-bottom: var(--breath-xl);
}

.header-title {
  font-size: 56rpx;
  color: var(--ink-deep);
  margin-bottom: var(--spacing-xs);
  display: block;
}

.header-desc {
  font-size: 26rpx;
  color: var(--ink-light);
  line-height: 1.6;
  display: block;
}

.section {
  margin-bottom: var(--breath-xl);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.section-title {
  font-size: 32rpx;
  color: var(--ink-dark);
}

.section-action {
  font-size: 22rpx;
  color: var(--ink-deep);
  text-decoration: underline;
}

.card-base {
  background: var(--paper-50);
  padding: var(--spacing-lg);
  position: relative;
  overflow: hidden;
}

.chart-box {
  width: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  filter: contrast(1.1);
}

.triad-section {
  margin-bottom: var(--spacing-xxl);
}

.triad-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--spacing-md);
}

.triad-item {
  background: var(--paper-50);
  padding: var(--spacing-md) var(--spacing-sm);
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.triad-row {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx;
  width: 100%;
}

.triad-icon-wrapper {
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}

.triad-icon-placeholder {
  width: 100%;
  height: 100%;
}

.triad-icon-image {
  width: 100%;
  height: 100%;
  background-color: var(--ink-deep);
}

.triad-name {
  font-size: 20rpx;
  color: var(--ink-light);
}

.triad-sign {
  font-size: 28rpx;
  color: var(--ink-deep);
}

.radar-summary {
  margin-top: var(--spacing-md);
  padding-top: var(--spacing-md);
  border-top: 1rpx solid var(--border-color);
}

.summary-text {
  font-size: 24rpx;
  color: var(--ink-medium);
  line-height: 1.8;
}

.summary-highlight {
  color: var(--ink-deep);
  font-weight: 600;
}

.domain-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--spacing-sm);
}

.domain-item {
  background: var(--ink-wash-1);
  padding: var(--spacing-md) var(--spacing-lg);
  border-radius: 8rpx;
  position: relative;
  overflow: hidden;
}

.domain-icon-box {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: var(--spacing-sm);
  background-color: var(--paper-50);
  display: flex;
  align-items: center;
  justify-content: center;
}

.domain-icon {
  width: 48rpx;
  height: 48rpx;
}

.domain-item:active {
  background: var(--ink-wash-2);
}

.colored-icon {
  background-color: var(--ink-deep);
  -webkit-mask-repeat: no-repeat;
  -webkit-mask-position: center;
  -webkit-mask-size: contain;
  mask-repeat: no-repeat;
  mask-position: center;
  mask-size: contain;
}

.domain-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--ink-deep);
  display: block;
  margin-bottom: 4rpx;
}

.domain-text {
  font-size: 22rpx;
  color: var(--ink-light);
  line-height: 1.6;
}

/* 人生维度卡片底部装饰线 */
.domain-item::after {
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 4rpx;
  border-radius: 2rpx;
}

.domain-item:nth-child(1)::after {
  /* 事业发展 - 靛蓝 */
  background: linear-gradient(90deg, transparent, #7B8CDE, transparent);
}

.domain-item:nth-child(2)::after {
  /* 财富金钱 - 琥珀 */
  background: linear-gradient(90deg, transparent, #C4A46B, transparent);
}

.domain-item:nth-child(3)::after {
  /* 爱情婚姻 - 粉色 */
  background: linear-gradient(90deg, transparent, #C9889A, transparent);
}

.domain-item:nth-child(4)::after {
  /* 人际关系 - 紫罗兰 */
  background: linear-gradient(90deg, transparent, #A088C4, transparent);
}

.domain-item:nth-child(5)::after {
  /* 健康养生 - 绿色 */
  background: linear-gradient(90deg, transparent, #6BA37A, transparent);
}

.domain-item:nth-child(6)::after {
  /* 自我成长 - 蓝色 */
  background: linear-gradient(90deg, transparent, #6B9BC4, transparent);
}

/* Accordion & Appendix Styling (RECOVERED & INKED) */
.accordion-item {
  background: var(--paper-50);
  margin-bottom: var(--spacing-md);
  border: 1rpx solid var(--border-color);
}

.accordion-head {
  padding: var(--spacing-md) var(--spacing-lg);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.accordion-actions {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
}

.accordion-label {
  font-size: 28rpx;
  color: var(--ink-dark);
  font-weight: 500;
}

.accordion-icon {
  font-size: 32rpx;
  color: var(--ink-light);
}

.accordion-detail-btn {
  font-size: 20rpx;
  color: var(--ink-deep);
  padding: 4rpx 16rpx;
  border: 1rpx solid var(--ink-light);
  background: var(--paper-100);
}

.accordion-body {
  border-top: 1rpx solid var(--border-color);
  background: var(--paper-warm);
}

/* Element Table */
.element-table {
  width: 100%;
}

.el-row {
  display: flex;
  border-bottom: 1rpx solid var(--border-color);
  width: 100%;
}

.el-row:last-child {
  border-bottom: none;
}

.el-head {
  background: var(--ink-wash-1);
}

.el-cell {
  width: 25%;
  height: 110rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  border-right: 1rpx solid var(--border-color);
  font-size: 22rpx;
  color: var(--ink-medium);
  padding: 4rpx;
}

.el-cell:last-child {
  border-right: none;
}

.el-label {
  font-weight: 600;
  background: var(--paper-100);
  color: var(--ink-deep);
}

.planet-capsule {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: var(--paper-200);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin: 2rpx;
}

/* Aspect Matrix */
.aspect-matrix-container {
  width: 100%;
  padding: 20rpx 10rpx;
  display: flex;
  justify-content: center;
  overflow: hidden;
}

.aspect-matrix {
  display: flex;
  flex-direction: column;
}

.matrix-row {
  display: flex;
}

.matrix-cell {
  width: 48rpx;
  height: 48rpx;
  border: 1rpx solid var(--border-color);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: var(--paper-50);
  flex-shrink: 0;
}

.cell-header {
  background: var(--paper-200);
  font-weight: bold;
}

.cell-empty {
  background: transparent;
}

.p-symbol {
  font-size: 20rpx;
  color: var(--ink-deep);
}

.a-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.a-symbol {
  font-size: 20rpx;
  line-height: 1;
}

.a-orb {
  font-size: 16rpx;
  color: var(--ink-light);
  transform: scale(0.8);
  margin-top: -4rpx;
}

/* Planet Info Table */
.planet-info-table {
  width: 100%;
}

.pi-row {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.pi-head {
  background: var(--ink-wash-1);
}

.pi-cell {
  flex: 1;
  font-size: 24rpx;
  color: var(--ink-medium);
  display: flex;
  align-items: center;
}

.pi-planet { flex: 1.5; }
.pi-sign { flex: 1.8; }
.pi-house { flex: 0.8; justify-content: flex-end; }
.pi-retro { flex: 0.6; justify-content: flex-end; }

.pi-hr-house { flex: 0.5; }
.pi-hr-sign { flex: 1.5; }
.pi-hr-ruler { flex: 1.2; }
.pi-hr-arrow { flex: 0.3; justify-content: center; }
.pi-hr-fly { flex: 1.8; justify-content: flex-end; }

.pi-icon-circle {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  background: var(--ink-wash-1);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.pi-icon {
  width: 32rpx;
  height: 32rpx;
}

.pi-name {
  font-weight: 600;
  color: var(--ink-deep);
}

.pi-icon-circle.mini {
  width: 44rpx;
  height: 44rpx;
}

.pi-sign-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.pi-sign-name {
  font-weight: 600;
  color: var(--ink-dark);
}

.pi-degree {
  color: var(--ink-light);
  font-size: 22rpx;
}

.retro-tag {
  color: var(--seal-red);
  font-weight: bold;
  font-size: 20rpx;
}

/* Fly Capsule */
.fly-capsule {
  display: flex;
  align-items: center;
  background: var(--paper-200);
  padding: 4rpx 12rpx;
  border-radius: 30rpx;
}

.fly-arrow {
  font-size: 18rpx;
  color: var(--ink-light);
  margin-right: 8rpx;
}

.mini-fly {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
  filter: grayscale(1);
}

.fly-text {
  font-size: 20rpx;
  font-weight: 600;
  color: var(--ink-deep);
  margin-right: 6rpx;
}

.fly-house {
  font-size: 20rpx;
  color: var(--ink-light);
}

/* Premium Banner — 统一深色卡片样式 */
.premium-banner {
  background: var(--ink-deep);
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  min-height: 140rpx;
}

.premium-info {
  flex: 1;
  margin-right: 24rpx;
}

.premium-title {
  font-size: 30rpx;
  color: var(--paper-50);
  margin-bottom: 8rpx;
  display: block;
  font-weight: 600;
}

.premium-desc {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.55);
  display: block;
  line-height: 1.4;
}

.premium-btn {
  background: rgba(255, 255, 255, 0.15);
  color: var(--paper-50);
  padding: 14rpx 32rpx;
  font-size: 24rpx;
  font-weight: 600;
  border-radius: 8rpx;
  white-space: nowrap;
  flex-shrink: 0;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

/* Banner 进度条 */
.banner-progress {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
  gap: 12rpx;
}

.banner-progress-bar {
  flex: 1;
  height: 6rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 3rpx;
  overflow: hidden;
}

.banner-progress-fill {
  height: 100%;
  background: var(--paper-50);
  border-radius: 3rpx;
  transition: width 0.5s ease;
}

.banner-progress-text {
  font-size: 20rpx;
  color: var(--paper-50);
  min-width: 56rpx;
  text-align: right;
}

/* Processing 状态按钮 */
.premium-btn.btn-processing {
  background: transparent;
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  color: var(--paper-50);
  opacity: 0.9;
}

/* Processing 动画 */
.premium-banner.processing {
  animation: bannerPulse 2s ease-in-out infinite;
}

@keyframes bannerPulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.85; }
}

/* Completed 状态 */
.premium-banner.completed .premium-btn {
  background: var(--paper-50);
  color: var(--ink-deep);
  border-color: transparent;
}

/* 流年报告 — 红色 */
.annual-banner {
  background: var(--seal-red);
}

/* 本命深度解读 — 纯深色 */
.natal-report-banner {
  background: var(--ink-deep);
}


/* Modal & Overlays */
.detail-overlay, .payment-overlay, .daily-report-overlay {
  position: fixed;
  inset: 0;
  z-index: 1200;
  background: var(--paper-warm);
  display: flex;
  flex-direction: column;
}

.detail-topbar, .daily-report-topbar {
  height: 120rpx;
  padding: 0 var(--spacing-lg);
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid var(--border-color);
  background: var(--paper-50);
}

.detail-back, .daily-report-back {
  padding: 12rpx 24rpx;
  background: var(--paper-200);
  font-size: 24rpx;
  color: var(--ink-dark);
}

.detail-back-icon, .daily-report-back-icon {
  width: 16rpx;
  height: 16rpx;
  border-left: 3rpx solid var(--ink-dark);
  border-bottom: 3rpx solid var(--ink-dark);
  transform: rotate(45deg);
}

.detail-title, .daily-report-top-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  color: var(--ink-deep);
  font-weight: 600;
}

.detail-top-placeholder, .daily-report-top-placeholder {
  width: 72rpx;
}

.detail-scroll, .daily-report-scroll {
  flex: 1;
  height: 0;
  padding: var(--spacing-lg);
}

/* Daily report layout adjustments */
.daily-report-topbar {
  padding: 0 20rpx;
  align-items: flex-start;
}

.daily-report-overlay .daily-report-scroll {
  box-sizing: border-box;
  width: 100%;
  padding: var(--spacing-lg) 0;
}

.detail-panel, .daily-report-section {
  background: var(--paper-50);
  padding: var(--spacing-xl);
  margin-bottom: var(--spacing-lg);
  border: 1rpx solid var(--border-color);
}

.daily-report-overlay .daily-report-section {
  box-sizing: border-box;
  width: 100%;
  padding: var(--spacing-xl) 20rpx;
}

.daily-report-overlay {
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
}

.detail-modal-text, .daily-section-text {
  font-size: 28rpx;
  color: var(--ink-dark);
  line-height: 1.8;
}

/* Glyph Font Support */
.glyph {
  font-family: "'Segoe UI Symbol', 'Apple Symbols', 'Noto Sans Symbols', sans-serif";
  font-size: 32rpx;
}

.glyph-small {
  font-family: "'Segoe UI Symbol', 'Apple Symbols', 'Noto Sans Symbols', sans-serif";
  font-size: 26rpx;
}

/* ========== 支付弹窗样式 ========== */

/* 遮罩层 */
.payment-mask {
  position: fixed;
  inset: 0;
  background: rgba(26, 26, 26, 0.5);
  z-index: 1100;
  animation: fadeIn 0.25s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* 底部弹出面板 */
.payment-sheet {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--paper-warm);
  border-radius: 32rpx 32rpx 0 0;
  z-index: 1200;
  padding: 0 var(--spacing-xl) calc(env(safe-area-inset-bottom) + 80rpx);
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.32, 0.72, 0, 1);
  max-height: 90vh;
  overflow-y: auto;
}

.payment-sheet.show {
  transform: translateY(0);
}

/* 顶部拖拽条 */
.payment-handle {
  width: 64rpx;
  height: 8rpx;
  background: var(--ink-water);
  border-radius: 4rpx;
  margin: var(--spacing-md) auto var(--spacing-lg);
}

/* 标题区 */
.payment-header {
  text-align: center;
  margin-bottom: var(--spacing-xl);
}

.payment-title {
  display: block;
  font-size: 44rpx;
  color: var(--ink-deep);
  margin-bottom: var(--spacing-xs);
  letter-spacing: 4rpx;
}

.payment-subtitle {
  display: block;
  font-size: 24rpx;
  color: var(--ink-light);
  letter-spacing: 2rpx;
}

/* 功能列表 */
.payment-features {
  background: var(--paper-50);
  border: 1rpx solid var(--border-color);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-xl);
}

.payment-feature-item {
  display: flex;
  align-items: flex-start;
  padding: var(--spacing-sm) 0;
}

.payment-feature-item:not(:last-child) {
  border-bottom: 1rpx solid var(--border-color);
}

.feature-icon {
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 24rpx;
  color: var(--ink-medium);
  margin-right: var(--spacing-sm);
}

.feature-content {
  flex: 1;
}

.feature-title {
  display: block;
  font-size: 28rpx;
  color: var(--ink-dark);
  margin-bottom: 4rpx;
}

.feature-desc {
  display: block;
  font-size: 22rpx;
  color: var(--ink-light);
}

/* 价格区 */
.payment-price-section {
  margin-bottom: var(--spacing-xl);
}

.payment-price-row {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: var(--spacing-xs);
}

.payment-price-label {
  font-size: 26rpx;
  color: var(--ink-medium);
}

.payment-price-value {
  display: flex;
  align-items: baseline;
}

.payment-price-num {
  font-size: 48rpx;
  font-weight: 600;
  color: var(--ink-deep);
  margin-right: 8rpx;
}

.payment-price-unit {
  font-size: 24rpx;
  color: var(--ink-medium);
}

.payment-price-note {
  display: block;
  font-size: 22rpx;
  color: var(--ink-light);
  text-align: right;
}

/* 按钮区 */
.payment-actions {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-md);
  padding-bottom: var(--spacing-lg);
}

.payment-btn-primary {
  width: 70%;
  height: 96rpx;
  background: var(--ink-deep);
  color: var(--paper-50);
  font-size: 32rpx;
  border: none;
  border-radius: 8rpx;
  letter-spacing: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
}

.payment-btn-primary::after {
  border: none;
}

.payment-btn-primary[loading] {
  background: var(--ink-medium);
}

.payment-btn-cancel {
  text-align: center;
  padding: var(--spacing-sm) var(--spacing-lg);
  font-size: 26rpx;
  color: var(--ink-light);
}

/* ========== Detail Card 样式系统 ========== */
.detail-card {
  position: relative;
  background: var(--paper-50);
  margin-bottom: var(--spacing-md);
  border: 1rpx solid var(--border-color);
  overflow: hidden;
}

.detail-card__accent {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
}

.detail-card__body {
  padding: var(--spacing-xl) var(--spacing-xl) var(--spacing-xl) calc(var(--spacing-xl) + 6rpx);
}

.detail-card__title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: var(--spacing-sm);
  line-height: 1.6;
}

.detail-card__text {
  display: block;
  font-size: 28rpx;
  color: var(--ink-dark);
  line-height: 1.8;
  white-space: pre-line;
}

.detail-card__list {
  margin-top: var(--spacing-sm);
}

.detail-card__list-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: var(--spacing-xs);
}

.detail-card__list-num {
  font-size: 28rpx;
  color: var(--ink-medium);
  font-weight: 600;
  min-width: 40rpx;
}

.detail-card__list-text {
  font-size: 28rpx;
  color: var(--ink-dark);
  flex: 1;
  line-height: 1.8;
  white-space: pre-line;
}


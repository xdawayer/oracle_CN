.page-container {
  --domain-career-fg: #D97706;
  --domain-career-bg: #FDEBC8;
  --domain-marriage-fg: #E24A8D;
  --domain-marriage-bg: #FADDEB;
  --domain-health-fg: #16A34A;
  --domain-health-bg: #DCFCE7;
  --domain-relations-fg: #3B82F6;
  --domain-relations-bg: #DBEAFE;
  --domain-study-fg: #8B5CF6;
  --domain-study-bg: #EDE9FE;
  --domain-love-fg: #EF4444;
  --domain-love-bg: #FEE2E2;
  padding: 32rpx 32rpx 120rpx;
  background-color: var(--space-950);
  min-height: 100vh;
}

.header {
  margin-bottom: 48rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--star-50);
  margin-bottom: 16rpx;
  display: block;
}

.header-desc {
  font-size: 28rpx;
  color: var(--star-200);
  line-height: 1.6;
  display: block;
}

.section {
  margin-bottom: 48rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--star-200);
}

.section-action {
  font-size: 24rpx;
  color: var(--accent);
  padding: 8rpx 16rpx;
  background: rgba(198, 160, 98, 0.1);
  border-radius: 12rpx;
}

.card-base {
  background: var(--space-900);
  border: 1px solid var(--space-800);
  border-radius: 24rpx;
  padding: 32rpx;
  position: relative;
  overflow: hidden;
}

.chart-box {
  width: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.triad-grid {
  display: flex;
  gap: 20rpx;
  margin-top: 24rpx;
  margin-bottom: 32rpx;
}

.triad-item {
  flex: 1;
  background: var(--space-800);
  border: 1px solid var(--space-700);
  border-radius: 20rpx;
  padding: 16rpx 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.triad-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx;
  width: 100%;
}

.triad-icon-wrapper {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 8rpx;
}

.triad-icon-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.triad-icon-image {
  width: 32rpx;
  height: 32rpx;
}

.triad-symbol {
  font-size: 32rpx;
  margin-bottom: 8rpx;
  font-weight: bold;
}

.triad-name {
  font-size: 22rpx;
  color: var(--star-400);
}

.triad-sign {
  font-size: 26rpx;
  color: var(--star-200);
  font-weight: 600;
}

.premium-banner {
  background: linear-gradient(135deg, var(--space-800) 0%, var(--space-900) 100%);
  border: 1px solid var(--accent);
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 48rpx;
  position: relative;
}

.premium-info {
  flex: 1;
}

.premium-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--accent);
  margin-bottom: 8rpx;
  display: block;
}

.premium-desc {
  font-size: 24rpx;
  color: var(--star-200);
  display: block;
}

.premium-btn {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--space-950);
  background: var(--accent);
  padding: 16rpx 32rpx;
  border-radius: 16rpx;
}

.radar-summary {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1px solid var(--space-800);
}

.dimension-grid {
  margin-top: 24rpx;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.dimension-chip {
  background: var(--space-800);
  border: 1px solid var(--space-700);
  border-radius: 16rpx;
  padding: 16rpx 12rpx;
  text-align: center;
  transition: all 0.3s ease-in-out;
}

.dimension-label {
  font-size: 22rpx;
  color: var(--star-200);
  line-height: 1.4;
}

.summary-text {
  font-size: 26rpx;
  color: var(--star-200);
  line-height: 1.6;
}

.summary-highlight {
  color: var(--psycho-500);
  font-weight: 600;
}

.link-btn {
  font-size: 24rpx;
  color: #3B82F6;
  margin-left: 12rpx;
}

.domain-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 48rpx;
}

.domain-item {
  background: var(--space-900);
  border: 1px solid var(--space-800);
  border-radius: 20rpx;
  padding: 28rpx;
}

.domain-icon-box {
  width: 72rpx;
  height: 72rpx;
  margin-bottom: 18rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.domain-icon {
  width: 36rpx;
  height: 36rpx;
}

.colored-icon {
  background-color: currentColor;
  -webkit-mask-repeat: no-repeat;
  -webkit-mask-position: center;
  -webkit-mask-size: contain;
  mask-repeat: no-repeat;
  mask-position: center;
  mask-size: contain;
}

.pi-head .pi-cell {
  color: var(--star-400);
  font-weight: 600;
  font-size: 22rpx;
}

.domain-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--star-50);
  display: block;
  margin-bottom: 8rpx;
}

.domain-text {
  font-size: 22rpx;
  color: var(--star-400);
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.accordion-item {
  background: var(--space-900);
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  overflow: hidden;
  border: 1px solid var(--space-800);
}

.accordion-head {
  padding: 24rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.accordion-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.accordion-detail-btn {
  font-size: 22rpx;
  color: var(--accent);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  border: 1px solid rgba(198, 160, 98, 0.3);
  background: rgba(198, 160, 98, 0.08);
  transition: all 0.3s ease-in-out;
}

.accordion-label {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--star-50);
}

.accordion-icon {
  font-size: 24rpx;
  color: var(--star-400);
}

.accordion-body {
  border-top: 1px solid var(--space-800);
  padding: 24rpx;
  background: var(--paper-100);
}

.element-table {
  width: 100%;
  background: var(--paper-50);
}

.el-row {
  display: flex;
  border-bottom: 1rpx solid var(--space-700);
  width: 100%;
}

.el-row:last-child {
  border-bottom: none;
}

.el-head {
  background: var(--space-800);
}

.el-cell {
  width: 25%; /* 强制等宽，解决竖线歪斜问题 */
  height: 110rpx;
  display: flex;
  flex-wrap: wrap; /* 允许行星过多时换行 */
  align-items: center;
  justify-content: center;
  border-right: 1rpx solid var(--space-700);
  font-size: 24rpx;
  color: var(--star-400);
  padding: 4rpx;
}

.el-cell:last-child {
  border-right: none;
}

.el-label {
  font-weight: 600;
  background: rgba(0, 0, 0, 0.02);
}

.planet-capsule {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background: var(--paper-200);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  margin: 2rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  flex-shrink: 0;
}

.aspect-matrix-container {
  width: 100%;
  background: var(--paper-50);
  padding: 20rpx 10rpx;
  display: flex;
  justify-content: center;
  overflow: hidden;
}

.aspect-matrix {
  display: flex;
  flex-direction: column;
}

.matrix-row {
  display: flex;
}

.matrix-cell {
  width: 46rpx;
  height: 46rpx;
  border: 1rpx solid var(--space-700);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fff;
  flex-shrink: 0;
}

.cell-header {
  background: var(--paper-100);
  font-weight: bold;
  border: none;
}

.cell-empty {
  background: transparent;
  border: none;
}

.p-symbol {
  font-size: 20rpx;
  color: var(--star-50);
}

.a-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.a-symbol {
  font-size: 18rpx;
  line-height: 1;
}

.a-orb {
  font-size: 18rpx;
  color: var(--star-400);
  transform: scale(0.6);
  margin-top: -6rpx;
  line-height: 1;
}

.planet-info-table {
  width: 100%;
  background: var(--paper-50);
}

.pi-row {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  border-bottom: 1rpx solid var(--space-700);
}

.pi-row:last-child {
  border-bottom: none;
}

.pi-head {
  background: var(--space-800);
  padding-top: 12rpx;
  padding-bottom: 12rpx;
}

.pi-cell {
  flex: 1;
  font-size: 24rpx;
  color: var(--star-400);
  display: flex;
  align-items: center;
}

.pi-right {
  justify-content: flex-end;
  text-align: right;
}

.pi-planet {
  flex: 1.5;
}

.pi-sign {
  flex: 2.8;
}

.pi-house {
  flex: 0.8;
  justify-content: flex-end;
  padding-right: 20rpx;
}

.pi-retro {
  flex: 0.6;
  justify-content: flex-end;
}

.pi-hr-house {
  flex: 0.5;
  color: var(--star-400);
}

.pi-hr-sign {
  flex: 1.5;
}

.pi-hr-ruler {
  flex: 1.2;
}

.pi-hr-arrow {
  flex: 0.3;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.pi-hr-fly {
  flex: 1.8;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.fly-arrow {
  font-size: 20rpx;
  color: var(--star-400);
  opacity: 0.5;
}

.fly-capsule {
  display: flex;
  align-items: center;
  background: var(--paper-200);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  padding: 4rpx 10rpx;
  border-radius: 30rpx;
  width: fit-content;
  max-width: 100%;
}

.mini-fly {
  width: 24rpx;
  height: 24rpx;
  margin-right: 6rpx;
}

.fly-arrow {
  font-size: 18rpx;
  color: var(--star-400);
  opacity: 0.5;

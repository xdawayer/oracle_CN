/* pages/ask/ask.wxss - 全屏报告模式 */
page {
  background-color: var(--paper-100);
}

.page-container {
  height: 100vh;
}

/* ========== Header ========== */
.header {
  background-color: var(--paper-50);
  padding: var(--spacing-lg) 0;
}

.header-content {
  padding: 0 var(--spacing-lg);
}

.title-section {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-bottom: var(--spacing-lg);
}

.app-title {
  font-size: 52rpx;
  color: var(--ink-deep);
}

.app-subtitle {
  font-size: 18rpx;
  color: var(--ink-light);
  letter-spacing: 4rpx;
}

/* ========== Goal Picker ========== */
.goal-picker {
  display: block;
}

.picker-trigger {
  background-color: var(--paper-200);
  color: var(--ink-deep);
  font-size: 24rpx;
  padding: 16rpx 32rpx;
  border-radius: 4rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.arrow-down {
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-top: 8rpx solid var(--ink-deep);
}

/* ========== 问题列表区域 ========== */
.question-scroll {
  height: calc(100vh - 260rpx);
  background-color: var(--paper-100);
  box-sizing: border-box;
}

/* ========== Suggestions ========== */
.suggestions-container {
  padding: var(--spacing-lg);
}

.suggestions-header {
  margin-bottom: var(--spacing-md);
  display: flex;
  align-items: baseline;
  gap: var(--spacing-sm);
}

.suggestions-title {
  font-size: 28rpx;
  color: var(--ink-light);
}

.suggestions-hint {
  font-size: 20rpx;
  color: var(--ink-water);
}

.suggestions-grid {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.suggestion-item {
  background-color: var(--ink-wash-1);
  padding: 24rpx 32rpx;
  margin-bottom: var(--spacing-sm);
  border-radius: 4rpx;
}

.suggestion-item:active {
  background-color: var(--paper-200);
}

.suggestion-text {
  font-size: 24rpx;
  color: var(--ink-medium);
}

/* ========== Input Area ========== */
.input-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background-color: var(--paper-50);
  border-top: 1rpx solid var(--border-color);
  padding: var(--spacing-md) var(--spacing-lg) calc(var(--spacing-md) + env(safe-area-inset-bottom));
}

.input-wrapper {
  background-color: var(--paper-100);
  border: 1rpx solid var(--border-color);
  border-radius: 8rpx;
  padding: 8rpx 8rpx 8rpx 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.chat-input {
  flex: 1;
  height: 72rpx;
  color: var(--ink-deep);
  font-size: 28rpx;
}

.input-placeholder {
  color: var(--ink-light);
}

.send-btn {
  width: 120rpx;
  height: 72rpx;
  border-radius: 4rpx;
  background-color: var(--paper-200);
  display: flex;
  align-items: center;
  justify-content: center;
}

.send-btn-active {
  background-color: var(--seal-red);
}

.send-icon {
  font-size: 20rpx;
  color: var(--ink-light);
}

.send-btn-active .send-icon {
  color: var(--paper-50);
}

/* ========== 全屏报告覆盖层 ========== */
.report-overlay {
  background: var(--paper-warm);
}

/* ========== Loading ========== */
.report-loading {
  height: 60vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xl);
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid var(--border-color);
  border-top-color: var(--ink-deep);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: var(--spacing-xl);
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 30rpx;
  color: var(--ink-deep);
  margin-bottom: var(--spacing-sm);
}

.loading-hint {
  font-size: 24rpx;
  color: var(--ink-light);
}

/* ========== 报告内容区域 ========== */
.report-scroll {
  height: 100vh;
  padding: var(--spacing-md) 20rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 40rpx);
  box-sizing: border-box;
}

/* 分析概况卡片 */
.report-chart-summary {
  background: var(--paper-50);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-md);
}

.chart-label {
  display: block;
  font-size: 28rpx;
  color: var(--ink-deep);
  margin-bottom: var(--spacing-md);
}

.chart-info-list {
  margin-bottom: var(--spacing-md);
}

.chart-info-list:last-child {
  margin-bottom: 0;
}

.chart-info-title {
  display: block;
  font-size: 22rpx;
  color: var(--ink-light);
  letter-spacing: 1rpx;
  margin-bottom: var(--spacing-xs);
}

.chart-info-item {
  display: block;
  font-size: 24rpx;
  color: var(--ink-medium);
  line-height: 1.8;
}

/* 问题回顾卡片 */
.report-question-card {
  background: var(--ink-wash-1);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-md);
}

.question-label {
  display: block;
  font-size: 20rpx;
  color: var(--ink-light);
  letter-spacing: 2rpx;
  margin-bottom: var(--spacing-sm);
}

.question-text {
  display: block;
  font-size: 30rpx;
  color: var(--ink-deep);
  font-weight: 600;
  line-height: 1.6;
  margin-bottom: var(--spacing-sm);
}

.question-category {
  display: block;
  font-size: 22rpx;
  color: var(--ink-medium);
}

/* ========== 报告 Section ========== */
.report-section {
  margin-bottom: var(--spacing-md);
}

.section-header {
  padding: var(--spacing-sm) 0;
  margin-bottom: var(--spacing-xs);
}

.section-title {
  font-size: 32rpx;
  color: var(--ink-deep);
}

/* 报告内容卡片 */
.report-card {
  position: relative;
  background: var(--paper-50);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-sm);
  border: 1rpx solid var(--border-color);
  border-left: 3rpx solid var(--seal-red);
  animation: zenFadeInUp 0.5s cubic-bezier(0.25, 0.1, 0.25, 1.0) backwards;
}

.card-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--ink-deep);
  margin-bottom: var(--spacing-sm);
  line-height: 1.6;
}

.card-content {
  display: block;
  font-size: 26rpx;
  color: var(--ink-dark);
  line-height: 1.8;
  white-space: pre-line;
}

/* 分析依据标注 */
.card-astro-basis {
  margin-top: var(--spacing-md);
  padding-top: var(--spacing-sm);
  border-top: 1rpx solid var(--border-color);
  display: flex;
  align-items: baseline;
  gap: var(--spacing-sm);
}

.astro-label {
  font-size: 20rpx;
  color: var(--ink-water);
  letter-spacing: 1rpx;
  flex-shrink: 0;
}

.astro-text {
  font-size: 22rpx;
  color: var(--ink-light);
}

/* ========== 行动建议 ========== */
.tips-card {
  padding: var(--spacing-lg);
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.tip-item {
  display: flex;
  gap: var(--spacing-md);
  align-items: flex-start;
}

.tip-bullet {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: var(--ink-wash-2);
  color: var(--ink-deep);
  font-size: 22rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.tip-text {
  flex: 1;
  font-size: 26rpx;
  color: var(--ink-dark);
  line-height: 1.8;
}

/* ========== 温暖寄语 ========== */
.report-closing {
  background: var(--ink-wash-1);
  padding: var(--spacing-xl);
  text-align: center;
  margin-bottom: var(--spacing-md);
}

.closing-text {
  font-size: 28rpx;
  color: var(--ink-medium);
  line-height: 1.8;
  font-style: italic;
}

/* ========== 底部操作按钮 ========== */
.report-bottom-action {
  padding: var(--spacing-lg) 0;
  display: flex;
  justify-content: center;
}

.report-action-btn {
  background: var(--paper-50);
  padding: 20rpx 60rpx;
  border-radius: 4rpx;
  border: 1rpx solid var(--border-color);
}

.report-action-btn:active {
  background: var(--paper-200);
}

.action-btn-text {
  font-size: 26rpx;
  color: var(--ink-medium);
}

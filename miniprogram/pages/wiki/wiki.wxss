/* pages/wiki/wiki.wxss - Ink Wash Optimization */
page {
  background-color: var(--paper-100);
  height: 100vh;
  overflow: hidden;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
}

.header {
  padding: var(--spacing-xl) var(--spacing-lg) var(--spacing-md);
  border-bottom: 1rpx solid var(--border-color);
  background: var(--paper-50);
}

.main-title {
  font-size: 56rpx;
  color: var(--ink-deep);
}

.sub-title {
  font-size: 18rpx;
  color: var(--ink-light);
  letter-spacing: 4rpx;
}

.categories-wrapper {
  background-color: var(--paper-50);
  border-bottom: 1rpx solid var(--border-color);
  padding: var(--spacing-md) 0;
}

.categories-scroll {
  white-space: nowrap;
  width: 100%;
  display: flex;
}

.categories-list {
  display: flex;
  padding: 0 var(--spacing-lg);
  gap: var(--spacing-md);
}

.category-item {
  opacity: 0.6;
}

.category-item.active {
  opacity: 1;
}

.cat-pill {
  height: 64rpx;
  padding: 0 32rpx;
  border-radius: 4rpx;
  background-color: var(--paper-100);
  border: 1rpx solid var(--border-color);
}

.category-item.active .cat-pill {
  background-color: var(--ink-deep);
  border-color: var(--ink-deep);
}

.cat-name {
  font-size: 22rpx;
  color: var(--ink-medium);
}

.category-item.active .cat-name {
  color: var(--paper-50);
}

/* 分类颜色 - 文化色系 */
.cat-pill.planets { border-color: var(--amber-glow); }
.category-item.active .cat-pill.planets { background-color: var(--amber-glow); border-color: var(--amber-glow); }

.cat-pill.signs { border-color: var(--seal-red); }
.category-item.active .cat-pill.signs { background-color: var(--seal-red); border-color: var(--seal-red); }

.cat-pill.houses { border-color: var(--mountain-blue); }
.category-item.active .cat-pill.houses { background-color: var(--mountain-blue); border-color: var(--mountain-blue); }

.cat-pill.aspects { border-color: var(--seal-red); }
.category-item.active .cat-pill.aspects { background-color: var(--seal-red); border-color: var(--seal-red); }

.cat-pill.elements { border-color: var(--bamboo-green); }
.category-item.active .cat-pill.elements { background-color: var(--bamboo-green); border-color: var(--bamboo-green); }

.cat-pill.modalities { border-color: var(--mountain-blue); }
.category-item.active .cat-pill.modalities { background-color: var(--mountain-blue); border-color: var(--mountain-blue); }

.cat-pill.axes { border-color: var(--seal-red); }
.category-item.active .cat-pill.axes { background-color: var(--seal-red); border-color: var(--seal-red); }

.cat-pill.chart_types { border-color: var(--ink-medium); }
.category-item.active .cat-pill.chart_types { background-color: var(--ink-medium); border-color: var(--ink-medium); }

/* 列表标签颜色 */
.cat-tag.planets { color: var(--amber-glow); border-color: var(--amber-glow); }
.cat-tag.signs { color: var(--seal-red); border-color: var(--seal-red); }
.cat-tag.houses { color: var(--mountain-blue); border-color: var(--mountain-blue); }
.cat-tag.aspects { color: var(--seal-red); border-color: var(--seal-red); }
.cat-tag.elements { color: var(--bamboo-green); border-color: var(--bamboo-green); }
.cat-tag.modalities { color: var(--mountain-blue); border-color: var(--mountain-blue); }
.cat-tag.axes { color: var(--seal-red); border-color: var(--seal-red); }
.cat-tag.chart_types { color: var(--ink-medium); border-color: var(--ink-medium); }

.content-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: var(--spacing-lg);
  box-sizing: border-box;
  overflow: hidden;
}

.items-list {
  flex: 1;
}

.search-bar {
  display: flex;
  align-items: center;
  background-color: var(--paper-50);
  padding: 0 var(--spacing-md);
  height: 80rpx;
  margin-bottom: var(--spacing-lg);
}

.search-input {
  flex: 1;
  color: var(--ink-deep);
  font-size: 26rpx;
  height: 100%;
}

.search-placeholder {
  color: var(--ink-water);
}

.clear-btn {
  font-size: 22rpx;
  color: var(--ink-light);
  padding: 8rpx 16rpx;
  flex-shrink: 0;
}

.empty-state {
  padding: var(--spacing-xxl) 0;
  text-align: center;
}

.empty-text {
  font-size: 26rpx;
  color: var(--ink-light);
}

.wiki-card {
  background-color: var(--paper-50);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-md);
  display: flex;
  align-items: center;
}

.wiki-card-content {
  flex: 1;
  min-width: 0;
}

.wiki-card-header {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-xs);
}

.cat-tag {
  padding: 4rpx 12rpx;
  font-size: 16rpx;
  font-weight: 600;
  border: 1rpx solid var(--ink-water);
  color: var(--ink-light);
  margin-right: 12rpx;
  flex-shrink: 0;
}

.wiki-title {
  font-size: 28rpx;
  color: var(--ink-deep);
}

.wiki-summary {
  font-size: 22rpx;
  color: var(--ink-medium);
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.6;
}

.arrow-icon {
  color: var(--ink-water);
  font-size: 32rpx;
  margin-left: var(--spacing-sm);
  flex-shrink: 0;
}

/* ========== Detail Overlay (全屏覆盖层) ========== */
.wiki-detail-overlay {
  position: fixed;
  inset: 0;
  z-index: 1200;
  background: var(--paper-warm);
  display: flex;
  flex-direction: column;
}

.wiki-detail-topbar {
  height: 88rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid var(--border-color);
  background: var(--paper-50);
  flex-shrink: 0;
}

.wiki-detail-back {
  width: 72rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wiki-detail-back-icon {
  width: 18rpx;
  height: 18rpx;
  border-left: 3rpx solid var(--ink-dark);
  border-bottom: 3rpx solid var(--ink-dark);
  transform: rotate(45deg);
}

.wiki-detail-nav-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  color: var(--ink-deep);
  font-weight: 600;
}

.wiki-detail-right-placeholder {
  width: 72rpx;
}

.wiki-detail-scroll {
  flex: 1;
  height: 0;
  padding: var(--spacing-lg);
  box-sizing: border-box;
}

/* Detail Header */
.wiki-detail-header {
  margin-bottom: var(--spacing-xl);
}

.wiki-detail-header .cat-tag {
  margin-bottom: var(--spacing-sm);
}

.wiki-detail-title {
  display: block;
  font-size: 56rpx;
  color: var(--ink-deep);
  margin-bottom: var(--spacing-xs);
  line-height: 1.3;
  border-bottom: 3rpx solid var(--seal-red);
  padding-bottom: var(--spacing-sm);
  display: inline;
}

.wiki-detail-subtitle {
  display: block;
  font-size: 28rpx;
  color: var(--ink-medium);
  margin-bottom: var(--spacing-sm);
  line-height: 1.6;
}

.wiki-detail-symbol {
  display: block;
  font-size: 48rpx;
  color: var(--ink-light);
  margin-bottom: var(--spacing-md);
}

.wiki-detail-keywords {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-xs);
  margin-top: var(--spacing-sm);
}

.wiki-keyword-tag {
  padding: 4rpx 16rpx;
  font-size: 20rpx;
  color: var(--ink-medium);
  background: var(--paper-50);
}

/* ========== Detail Card 样式系统 (复用 self 页面) ========== */
.detail-card {
  position: relative;
  background: var(--paper-50);
  margin-bottom: var(--spacing-md);
  border: 1rpx solid var(--border-color);
  overflow: hidden;
}

.detail-card__accent {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
}

.detail-card__body {
  padding: var(--spacing-xl) var(--spacing-xl) var(--spacing-xl) calc(var(--spacing-xl) + 6rpx);
}

.detail-card__title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: var(--spacing-sm);
  line-height: 1.6;
}

.detail-card__text {
  display: block;
  font-size: 28rpx;
  color: var(--ink-dark);
  line-height: 1.8;
  white-space: pre-line;
}

.detail-card__list {
  margin-top: var(--spacing-sm);
}

.detail-card__list-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: var(--spacing-xs);
}

.detail-card__list-num {
  font-size: 28rpx;
  color: var(--ink-medium);
  font-weight: 600;
  min-width: 40rpx;
}

.detail-card__list-text {
  font-size: 28rpx;
  color: var(--ink-dark);
  flex: 1;
  line-height: 1.8;
  white-space: pre-line;
}

/* 颜色变体 - default */
.detail-card--default .detail-card__accent { background: var(--ink-water); }
.detail-card--default .detail-card__title { color: var(--ink-deep); }

/* 颜色变体 - accent-red */
.detail-card--accent-red .detail-card__accent { background: var(--seal-red); }
.detail-card--accent-red .detail-card__title { color: var(--seal-red); }

/* 颜色变体 - info */
.detail-card--info .detail-card__accent { background: var(--mountain-blue); }
.detail-card--info .detail-card__title { color: var(--mountain-blue); }

/* 颜色变体 - success */
.detail-card--success .detail-card__accent { background: var(--bamboo-green); }
.detail-card--success .detail-card__title { color: var(--bamboo-green); }

/* 颜色变体 - warning */
.detail-card--warning .detail-card__accent { background: var(--amber-glow); }
.detail-card--warning .detail-card__title { color: var(--amber-glow); }

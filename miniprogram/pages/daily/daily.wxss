/* ========== 支付弹窗 ========== */
.payment-mask {
  position: fixed;
  inset: 0;
  background: rgba(26, 26, 26, 0.5);
  z-index: 1100;
  animation: payFadeIn 0.25s ease-out;
}

@keyframes payFadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.payment-sheet {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--paper-warm);
  border-radius: 32rpx 32rpx 0 0;
  z-index: 1200;
  padding: 0 var(--spacing-xl) calc(env(safe-area-inset-bottom) + 80rpx);
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.32, 0.72, 0, 1);
  max-height: 90vh;
  overflow-y: auto;
}

.payment-sheet.show {
  transform: translateY(0);
}

.payment-body {
  flex: 1;
  overflow-y: auto;
  padding: 0 var(--spacing-xl);
}

.payment-handle {
  width: 64rpx;
  height: 8rpx;
  background: var(--ink-water);
  border-radius: 4rpx;
  margin: var(--spacing-md) auto var(--spacing-lg);
}

.payment-header {
  text-align: center;
  margin-bottom: var(--spacing-xl);
}

.payment-title {
  display: block;
  font-size: 44rpx;
  color: var(--ink-deep);
  margin-bottom: var(--spacing-xs);
  letter-spacing: 4rpx;
}

.payment-subtitle {
  display: block;
  font-size: 24rpx;
  color: var(--ink-light);
  letter-spacing: 2rpx;
}

.payment-features {
  background: var(--paper-50);
  border: 1rpx solid var(--border-color);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-xl);
}

.payment-feature-item {
  display: flex;
  align-items: flex-start;
  padding: var(--spacing-sm) 0;
}

.payment-feature-item:not(:last-child) {
  border-bottom: 1rpx solid var(--border-color);
}

.feature-icon {
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 24rpx;
  color: var(--ink-medium);
  margin-right: var(--spacing-sm);
}

.feature-content {
  flex: 1;
}

.feature-title {
  display: block;
  font-size: 28rpx;
  color: var(--ink-dark);
  margin-bottom: 4rpx;
}

.feature-desc {
  display: block;
  font-size: 22rpx;
  color: var(--ink-light);
}

.payment-price-section {
  margin-bottom: var(--spacing-xl);
}

.payment-price-row {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: var(--spacing-xs);
}

.payment-price-label {
  font-size: 26rpx;
  color: var(--ink-medium);
}

.payment-price-value {
  display: flex;
  align-items: baseline;
}

.payment-price-num {
  font-size: 48rpx;
  font-weight: 600;
  color: var(--ink-deep);
  margin-right: 8rpx;
}

.payment-price-unit {
  font-size: 24rpx;
  color: var(--ink-medium);
}

.payment-price-note {
  display: block;
  font-size: 22rpx;
  color: var(--ink-light);
  text-align: right;
}

.payment-actions {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-md);
  padding-bottom: var(--spacing-lg);
}

.payment-btn-primary {
  width: 70%;
  height: 96rpx;
  background: var(--ink-deep);
  color: var(--paper-50);
  font-size: 32rpx;
  border: none;
  border-radius: 8rpx;
  letter-spacing: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;

.page {
  min-height: 100vh;
  background: var(--paper-100);
  padding-bottom: 120rpx;
}

.header {
  padding: var(--breath-xl) var(--spacing-lg) var(--breath-md);
  animation: zenFadeInUp 0.6s cubic-bezier(0.25, 0.1, 0.25, 1.0);
}

.title {
  font-size: 64rpx;
  color: var(--ink-deep);
  display: block;
}

.subtitle {
  font-size: 24rpx;
  color: var(--ink-light);
  margin-top: var(--spacing-xs);
  display: block;
  letter-spacing: 2rpx;
}

.date-nav {
  padding: 0 var(--spacing-lg) var(--breath-md);
  animation: zenFadeInUp 0.6s cubic-bezier(0.25, 0.1, 0.25, 1.0) 0.1s backwards;
}

.date-list {
  display: flex;
  justify-content: space-between;
}

.date-item {
  flex: 1;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
  transition: all 0.3s cubic-bezier(0.25, 0.1, 0.25, 1.0);
  position: relative;
  border-bottom: 2rpx solid transparent;
}

.date-item.active {
  border-bottom-color: var(--seal-red);
}

.date-weekday {
  font-size: 20rpx;
  color: var(--ink-light);
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
}

.date-month {
  font-size: 18rpx;
  color: var(--ink-light);
  line-height: 1;
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
}

.date-day {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--ink-dark);
}

.date-item.active .date-day {
  color: var(--ink-deep);
}

.today-dot {
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
  background: var(--seal-red);
  position: absolute;
  bottom: 10rpx;
}

.section {
  padding: 0 var(--spacing-lg) var(--spacing-lg);
}

/* Overview Card */
.overview-card {
  background: var(--ink-wash-1);
  padding: var(--breath-lg);
  margin-bottom: var(--breath-xl);
  animation: zenFadeInUp 0.6s cubic-bezier(0.25, 0.1, 0.25, 1.0) 0.2s backwards;
}

.overview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--breath-md);
}

.overview-date {
  display: flex;
  flex-direction: column;
}

.date-label {
  font-size: 22rpx;
  color: var(--ink-light);
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
}

.date-value {
  font-size: 40rpx;
  color: var(--ink-deep);
}

.score-display {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.score-number {
  font-size: 80rpx;
  color: var(--ink-deep);
  line-height: 1;
  font-family: "DIN Alternate", -apple-system, "Helvetica Neue", sans-serif;
  font-weight: 300;
  letter-spacing: -2rpx;
}

.score-suffix {
  font-size: 20rpx;
  color: var(--ink-light);
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
}

.overview-summary {
  margin-bottom: var(--breath-md);
}

.summary-text {
  font-size: 28rpx;
  color: var(--ink-dark);
  line-height: 1.8;
}

.lucky-row {
  display: flex;
  align-items: center;
  background: var(--paper-50);
  padding: var(--spacing-sm) var(--spacing-md);
  justify-content: space-between;
}

.lucky-chip {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.lucky-label {
  font-size: 20rpx;
  color: var(--ink-light);
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
}

.lucky-value {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--ink-deep);
}

.lucky-divider {
  width: 1rpx;
  height: 32rpx;
  background: linear-gradient(to bottom, transparent, var(--ink-wash-2), transparent);
}

/* Dimensions Section - Vertical List */
.dimensions-section {
  margin-bottom: var(--breath-xl);
}

.section-title {
  font-size: 36rpx;
  color: var(--ink-deep);
  margin-bottom: var(--breath-md);
  display: block;
}

.dimension-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.dimension-item {
  background: var(--paper-50);
  padding: var(--breath-sm) var(--spacing-md);
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
}

.dimension-header {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  width: 120rpx;
  flex-shrink: 0;
}

.dimension-name {
  font-size: 24rpx;
  color: var(--ink-medium);
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
}

.dimension-score {
  font-size: 32rpx;
  color: var(--ink-deep);
  width: 80rpx;
  text-align: right;
  flex-shrink: 0;
  font-family: "DIN Alternate", -apple-system, "Helvetica Neue", sans-serif;
  font-weight: 300;
}

.dimension-bar-container {
  height: 4rpx;
  background: var(--paper-200);
  flex: 1;
  overflow: hidden;
}

.dimension-bar {
  height: 100%;
  background: var(--ink-deep);
  transition: width 0.6s cubic-bezier(0.25, 0.1, 0.25, 1.0);
}

.dimension-bar--career {
  background: #7B8CDE;
}

.dimension-bar--wealth {
  background: #C4A46B;
}

.dimension-bar--love {
  background: #C9889A;
}

.dimension-bar--health {
  background: #6BA37A;
}

/* Advice Section - Vertical Stack */
.advice-section {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
  margin-bottom: var(--breath-xl);
}

.advice-card {
  background: var(--paper-50);
  padding: var(--breath-sm) var(--spacing-md);
}

.advice-do {
  background: var(--bamboo-light);
}

.advice-dont {
  background: var(--ink-wash-1);
}

.advice-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: var(--spacing-sm);
}

.advice-badge {
  font-size: 18rpx;
  padding: 4rpx 10rpx;
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
}

.do-badge { background: var(--bamboo-green); color: var(--paper-50); }
.dont-badge { background: var(--ink-medium); color: var(--paper-50); }

.advice-title-text {
  font-size: 22rpx;
  font-weight: 600;
  color: var(--ink-dark);
}

.advice-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.advice-item {
  font-size: 20rpx;
  color: var(--ink-medium);
  line-height: 1.6;
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
}

/* Technical Cards */
.technical-card {
  padding: 0;
  background: var(--paper-50);
  margin-bottom: var(--breath-md);
}

.card-header-row {
  padding: var(--spacing-md) var(--spacing-lg);
  border-bottom: 1rpx solid var(--border-color);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.card-header-row .card-title {
  margin-bottom: 0;
  font-size: 28rpx;
}

.view-detail-btn {
  font-size: 20rpx;
  color: var(--ink-deep);
  background: var(--ink-wash-1);
  padding: 4rpx 16rpx;
  border: 1rpx solid var(--ink-wash-2);
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
}

.chart-content {
  padding: var(--spacing-lg);
}

.chart-legend {
  display: flex;
  justify-content: center;
  gap: var(--spacing-lg);
  margin-bottom: var(--spacing-md);
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.legend-item .dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
}

.dot.aspect-sextile { background: var(--info); }
.dot.aspect-square { background: var(--danger); }
.dot.aspect-trine { background: var(--success); }
.dot.aspect-opposition { background: var(--warning); }

.legend-item text {
  font-size: 18rpx;
  color: var(--ink-light);
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
}

.chart-wrapper {
  display: flex;
  justify-content: center;
  margin-bottom: var(--spacing-md);
  filter: contrast(1.1);
}

.chart-desc {
  font-size: 20rpx;
  color: var(--ink-light);
  text-align: center;
  display: block;
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
}

/* Matrix & Tables */
.technical-body {
  background: var(--paper-50);
}

.aspect-matrix-container {
  width: 100%;
  padding: 20rpx 10rpx;
  display: flex;
  justify-content: center;
  overflow: hidden;
}

.aspect-matrix {
  display: flex;
  flex-direction: column;
}

.matrix-row {
  display: flex;
}

.matrix-cell {
  width: 48rpx;
  height: 48rpx;
  border: 1rpx solid var(--border-color);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: var(--paper-50);
  flex-shrink: 0;
}

.cell-header {
  background: var(--ink-wash-1);
  font-weight: bold;
}

.cell-empty {
  background: transparent;
}

.p-symbol {
  font-size: 20rpx;
  color: var(--ink-deep);
}

.a-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.a-symbol {
  font-size: 20rpx;
  line-height: 1;
}

.a-orb {
  font-size: 16rpx;
  color: var(--ink-light);
  transform: scale(0.8);
  margin-top: -4rpx;
}

.planet-info-table {
  width: 100%;
}

.pi-row {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.pi-head {
  background: var(--ink-wash-1);
}

.pi-cell {
  flex: 1;
  font-size: 24rpx;
  color: var(--ink-medium);
  display: flex;
  align-items: center;
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
}

.pi-planet { flex: 1.5; }
.pi-sign { flex: 1.8; }
.pi-house { flex: 0.8; justify-content: flex-end; }
.pi-retro { flex: 0.6; justify-content: flex-end; }

.pi-hr-house { flex: 0.5; }
.pi-hr-sign { flex: 1.5; }
.pi-hr-ruler { flex: 1.2; }
.pi-hr-arrow { flex: 0.3; justify-content: center; }
.pi-hr-fly { flex: 1.8; justify-content: flex-end; }

.pi-icon-circle {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  background: var(--ink-wash-1);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.pi-icon {
  width: 32rpx;
  height: 32rpx;
}

.pi-name {
  font-weight: 600;
  color: var(--ink-deep);
}

.pi-icon-circle.mini {
  width: 44rpx;
  height: 44rpx;
}

.pi-sign-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.pi-sign-name {
  font-weight: 600;
  color: var(--ink-dark);
}

.pi-degree {
  color: var(--ink-light);
  font-size: 22rpx;
}

.retro-tag {
  color: var(--seal-red);
  font-weight: bold;
  font-size: 20rpx;
}

.fly-capsule {
  display: flex;
  align-items: center;
  background: var(--ink-wash-1);
  padding: 4rpx 12rpx;
  border-radius: 30rpx;
}

.fly-arrow {
  font-size: 18rpx;
  color: var(--ink-light);
  margin-right: 8rpx;
}

.mini-fly {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.fly-text {
  font-size: 20rpx;
  font-weight: 600;
  color: var(--ink-deep);
  margin-right: 6rpx;
}

.fly-house {
  font-size: 20rpx;
  color: var(--ink-light);
}

/* Glyph Font Support */
.glyph {
  font-family: "'Segoe UI Symbol', 'Apple Symbols', 'Noto Sans Symbols', sans-serif";
  font-size: 32rpx;
}

.glyph-small {
  font-family: "'Segoe UI Symbol', 'Apple Symbols', 'Noto Sans Symbols', sans-serif";
  font-size: 26rpx;
}

/* ========== 时间窗口样式 ========== */
.time-section.card {
  background: var(--paper-50);
  padding: var(--spacing-lg);
  margin-bottom: var(--breath-xl);
  border: 1rpx solid var(--border-color);
}

.time-section .card-title {
  font-size: 32rpx;
  color: var(--ink-deep);
  margin-bottom: var(--spacing-lg);
  display: block;
  font-weight: 600;
  font-family: "AncientFont", "SourceHanSerifSC", "Songti SC", "STSong", serif;
}

.time-timeline {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.time-slot {
  display: flex;
  gap: var(--spacing-md);
  position: relative;
}

.time-line {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 24rpx;
  flex-shrink: 0;
  padding-top: 8rpx;
}

/* Timeline dot as small square (seal-stamp feel) */
.time-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 2rpx;
  flex-shrink: 0;
}

/* Timeline connector as dashed line */
.time-connector {
  width: 2rpx;
  flex: 1;
  min-height: 80rpx;
  border-left: 2rpx dashed var(--ink-wash-2);
  margin-top: 8rpx;
  background: none;
}

.time-content {
  flex: 1;
  padding-bottom: var(--spacing-lg);
  border-bottom: 1rpx solid var(--border-color);
}

.time-slot:last-child .time-content {
  border-bottom: none;
  padding-bottom: 0;
}

.time-slot:last-child .time-connector {
  display: none;
}

.time-header {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-sm);
  flex-wrap: wrap;
}

.time-period {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--ink-deep);
}

.time-range {
  font-size: 22rpx;
  color: var(--ink-light);
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
}

.energy-tag {
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  margin-left: auto;
}

.energy-dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
}

.energy-text {
  font-size: 20rpx;
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
}

.time-desc {
  font-size: 26rpx;
  color: var(--ink-medium);
  line-height: 1.7;
  display: block;
  margin-bottom: var(--spacing-sm);
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
}

.time-tips {
  display: flex;
  align-items: flex-start;
  gap: 8rpx;
  margin-top: 8rpx;
}

.tip-label {
  font-size: 22rpx;
  color: var(--ink-light);
  flex-shrink: 0;
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
}

.tip-value {
  font-size: 22rpx;
  color: var(--ink-medium);
  line-height: 1.5;
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
}

/* ========== 本周趋势样式 ========== */
.weekly-section {
  background: var(--paper-50);
  padding: var(--breath-lg);
  margin-bottom: var(--breath-xl);
}

.weekly-section.card {
  padding: var(--spacing-lg);
}

.weekly-title {
  font-size: 32rpx;
  margin-bottom: var(--breath-md);
  display: block;
  color: var(--ink-deep);
}

.weekly-chart {
  display: flex;
  justify-content: space-around;
  align-items: flex-end;
  height: 240rpx;
  padding: var(--spacing-md) 0;
  margin-bottom: var(--breath-md);
  border-bottom: 1rpx solid var(--ink-wash-2);
}

.chart-bar-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  max-width: 72rpx;
  gap: 8rpx;
}

.bar-score-top {
  font-size: 20rpx;
  color: var(--ink-medium);
  font-weight: 600;
  height: 28rpx;
  line-height: 28rpx;
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
}

.chart-bar-wrapper {
  width: 28rpx;
  height: 140rpx;
  background: var(--paper-200);
  position: relative;
  border-radius: 4rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.chart-bar {
  width: 100%;
  background: var(--ink-light);
  transition: height 0.6s cubic-bezier(0.25, 0.1, 0.25, 1.0);
  border-radius: 4rpx 4rpx 0 0;
  min-height: 6rpx;
}

.chart-bar.today-bar {
  background: var(--seal-red);
}

.chart-day {
  font-size: 22rpx;
  color: var(--ink-light);
  height: 32rpx;
  line-height: 32rpx;
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
}

.chart-day.today {
  color: var(--seal-red);
  font-weight: 700;
  position: relative;
}

.chart-day.today::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 6rpx;
  height: 6rpx;
  background: var(--seal-red);
  border-radius: 2rpx;
}

/* 本周解读列表 */
.weekly-desc-list {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.weekly-desc-item {
  display: flex;
  gap: var(--spacing-md);
  padding: var(--spacing-md) 0;
  border-bottom: 1rpx solid var(--border-color);
}

.weekly-desc-item:last-child {
  border-bottom: none;
}

.weekly-desc-item.special {
  background: linear-gradient(90deg, var(--ink-wash-1) 0%, transparent 100%);
  margin: 0 calc(-1 * var(--spacing-md));
  padding-left: var(--spacing-md);
  padding-right: var(--spacing-md);
}

.weekly-desc-date {
  font-size: 24rpx;
  color: var(--ink-light);
  width: 80rpx;
  flex-shrink: 0;
  font-weight: 500;
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
}

.weekly-desc-content {
  flex: 1;
  min-width: 0;
}

.weekly-desc-title {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--ink-dark);
  margin-bottom: 6rpx;
  display: block;
}

.weekly-desc-detail {
  font-size: 24rpx;
  color: var(--ink-medium);
  line-height: 1.6;
  display: block;
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
}

/* Weekly Empty State */
.weekly-empty {
  padding: 40rpx 20rpx;
  text-align: center;
}

.weekly-empty-text {
  font-size: 26rpx;
  color: var(--ink-light);
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
}

/* ========== 全屏报告弹窗样式 ========== */
.daily-report-overlay {
  position: fixed;
  inset: 0;
  z-index: 1200;
  background: var(--paper-warm);
  display: flex;
  flex-direction: column;
}

.daily-report-topbar {
  height: 120rpx;
  padding: 0 var(--spacing-lg);
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid var(--border-color);
  background: var(--paper-warm);
}

.daily-report-back {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.daily-report-back-icon {
  width: 18rpx;
  height: 18rpx;
  border-left: 3rpx solid var(--ink-dark);
  border-bottom: 3rpx solid var(--ink-dark);
  transform: rotate(45deg);
  margin-left: 6rpx;
}

.daily-report-top-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  color: var(--ink-deep);
  font-weight: 600;
}

.daily-report-top-placeholder {
  width: 56rpx;
}

.daily-report-scroll {
  flex: 1;
  height: 0;
  box-sizing: border-box;
  width: 100%;
  padding: var(--spacing-lg) 20rpx;
}

.daily-report-header {
  margin-bottom: var(--spacing-md);
}

.daily-report-subtitle {
  font-size: 26rpx;
  color: var(--ink-light);
  letter-spacing: 2rpx;
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
}

/* === Detail Card 系统 === */
.detail-card {
  position: relative;
  background: var(--paper-50);
  margin-bottom: var(--spacing-md);
  border: 1rpx solid var(--border-color);
  overflow: hidden;
}

.detail-card__accent {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
}

.detail-card__body {
  padding: var(--spacing-md) var(--spacing-md) var(--spacing-md) calc(var(--spacing-md) + 6rpx);
}

.detail-card__title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: var(--spacing-sm);
  line-height: 1.6;
}

.detail-card__text {
  display: block;
  font-size: 28rpx;
  color: var(--ink-dark);
  line-height: 1.8;
  white-space: pre-line;
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
}

.detail-card__list {
  margin-top: var(--spacing-sm);
}

.detail-card__list-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: var(--spacing-xs);
}

.detail-card__list-num {
  font-size: 28rpx;
  color: var(--ink-medium);
  font-weight: 600;
  min-width: 40rpx;

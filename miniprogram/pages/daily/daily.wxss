}

.divider {
  color: var(--ink-water);
  font-size: 24rpx;
  margin: 0 4rpx;
}

.aspect-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

.aspect-row {
  display: flex;

  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
}

/* Detail card color variants */
.detail-card--default .detail-card__accent { background: var(--ink-wash-2); }
.detail-card--default .detail-card__title { color: var(--ink-deep); }

.detail-card--accent-red .detail-card__accent { background: var(--seal-red); }
.detail-card--accent-red .detail-card__title { color: var(--seal-red); }

.detail-card--info .detail-card__accent { background: var(--mountain-blue); }
.detail-card--info .detail-card__title { color: var(--mountain-blue); }

.detail-card--success .detail-card__accent { background: var(--bamboo-green); }
.detail-card--success .detail-card__title { color: var(--bamboo-green); }

.detail-card--warning .detail-card__accent { background: var(--amber-glow); }
.detail-card--warning .detail-card__title { color: var(--amber-glow); }

/* Planet Detail Card */
.planet-detail-mask {
  position: fixed;
  inset: 0;
  z-index: 1100;
  background: rgba(26, 26, 26, 0.5);
  backdrop-filter: blur(8rpx);
}

.planet-detail-card {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1101;
  background: var(--paper-warm);
  padding: var(--spacing-lg);
  padding-bottom: calc(var(--spacing-lg) + env(safe-area-inset-bottom));
  max-height: 70vh;
  overflow-y: auto;
  border-top: 2rpx solid var(--seal-red);
  animation: zenFadeInUp 0.4s cubic-bezier(0.25, 0.1, 0.25, 1.0);
}

.card-close {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  font-size: 40rpx;
  color: var(--ink-light);
  padding: 10rpx;
}

.card-header {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-lg);
}

.planet-glyph {
  font-size: 64rpx;
  font-family: "'Segoe UI Symbol', 'Apple Symbols', sans-serif";
}

.planet-info {
  flex: 1;
}

.planet-name-row {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.planet-name {
  font-size: 36rpx;
  font-weight: 600;
}

.planet-badge {
  font-size: 18rpx;
  padding: 2rpx 12rpx;
  background: var(--ink-wash-1);
  color: var(--ink-medium);
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
}

.planet-keywords {
  font-size: 22rpx;
  color: var(--ink-light);
  margin-top: 4rpx;
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
}

.card-section {
  margin-bottom: var(--spacing-md);
  padding-top: var(--spacing-md);
  border-top: 1rpx solid var(--border-color);
}

.section-label {
  font-size: 20rpx;
  color: var(--ink-light);

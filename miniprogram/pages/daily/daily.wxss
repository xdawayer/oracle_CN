.section-text {
  font-size: 26rpx;
  color: var(--ink-medium);
}

.sign-name {
  font-size: 28rpx;
  font-weight: 600;
}

.sign-icon {
  width: 32rpx;
  height: 32rpx;
}

.house-num {
  font-size: 28rpx;
  font-weight: 600;

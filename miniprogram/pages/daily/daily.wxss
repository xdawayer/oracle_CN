  gap: 8rpx;
  flex-wrap: wrap;
}

.other-planet {
  font-size: 26rpx;
  font-weight: 600;
}

.other-glyph {
  font-size: 24rpx;
}

.aspect-angle {
  font-size: 24rpx;
  font-weight: 600;
}

.aspect-symbol {
  font-size: 22rpx;
}

.aspect-orb {
  font-size: 20rpx;
  color: var(--ink-light);
}

.cross-badge {
  font-size: 16rpx;
  padding: 2rpx 8rpx;
  background: var(--seal-red-light);
  color: var(--seal-red);
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
}

/* ========== 月度运势入口卡片（复刻 premium-banner 样式） ========== */
.premium-banner {
  background: var(--ink-deep);
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  min-height: 140rpx;
}

.premium-info {
  flex: 1;
  margin-right: 24rpx;
}

.premium-title {
  font-size: 30rpx;
  color: var(--paper-50);
  margin-bottom: 8rpx;
  display: block;
  font-weight: 600;
}

.premium-desc {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.55);
  display: block;
  line-height: 1.4;
}

.premium-btn {
  background: rgba(255, 255, 255, 0.15);
  color: var(--paper-50);
  padding: 14rpx 32rpx;
  font-size: 24rpx;
  font-weight: 600;
  border-radius: 8rpx;
  white-space: nowrap;
  flex-shrink: 0;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.banner-progress {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
  gap: 12rpx;
}

.banner-progress-bar {
  flex: 1;
  height: 6rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 3rpx;
  overflow: hidden;
}

.banner-progress-fill {
  height: 100%;
  background: var(--paper-50);
  border-radius: 3rpx;
  transition: width 0.5s ease;
}

.banner-progress-text {
  font-size: 20rpx;
  color: var(--paper-50);
  min-width: 56rpx;
  text-align: right;
}

.premium-btn.btn-processing {
  background: transparent;
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  color: var(--paper-50);
  opacity: 0.9;
}

.premium-banner.processing {
  animation: bannerPulse 2s ease-in-out infinite;
}

@keyframes bannerPulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.85; }
}

.premium-banner.completed .premium-btn {
  background: var(--paper-50);
  color: var(--ink-deep);
  border-color: transparent;
}

/* 月度卡片 — 12 个月季节色 */
/* 春（1-3月）绿色系 */
.monthly-banner.month-1  { background: #3a6b4e; } /* 松柏绿 */
.monthly-banner.month-2  { background: #4a8c5c; } /* 早春嫩绿 */
.monthly-banner.month-3  { background: #2d7a4f; } /* 翠绿 */
/* 夏（4-6月）蓝色系 */
.monthly-banner.month-4  { background: #3568a6; } /* 晴空蓝 */
.monthly-banner.month-5  { background: #2a5b99; } /* 深海蓝 */
.monthly-banner.month-6  { background: #2e4f82; } /* 暮蓝 */
/* 秋（7-9月）橙黄棕色系 */
.monthly-banner.month-7  { background: #b8792a; } /* 琥珀橙 */
.monthly-banner.month-8  { background: #a06428; } /* 秋棕 */
.monthly-banner.month-9  { background: #8a5a30; } /* 深棕 */
/* 冬（10-12月）暗色灰色系 */
.monthly-banner.month-10 { background: #4a4e57; } /* 铅灰 */
.monthly-banner.month-11 { background: #3a3d44; } /* 石墨灰 */
.monthly-banner.month-12 { background: #2e3038; } /* 墨灰 */

/* Loading / Error */
.loading-text {
  font-size: 28rpx;
  color: var(--ink-light);
  text-align: center;
  display: block;
  padding: var(--breath-xl) 0;
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;

.page-container {
  min-height: 100vh;
  background-color: var(--paper-100);
  padding: var(--spacing-lg);
  padding-bottom: 80rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
}

.empty-text {
  font-size: 28rpx;
  color: var(--ink-light);
}

/* 订单列表 */
.order-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.order-card {
  background: var(--paper-50);
  padding: var(--spacing-lg);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.order-type {
  font-size: 24rpx;
  color: var(--ink-medium);
}

.order-status {
  font-size: 22rpx;
  padding: 4rpx 16rpx;
}

.status-pending {
  color: var(--amber-glow);
  background: rgba(184, 134, 11, 0.08);
}

.status-paid {
  color: var(--bamboo-green);
  background: var(--bamboo-light);
}

.status-failed {
  color: var(--danger);
  background: rgba(139, 0, 0, 0.08);
}

.status-refunded {
  color: var(--ink-light);
  background: var(--ink-wash-1);
}

/* 订单详情 */
.order-detail {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
  padding-bottom: var(--spacing-md);
  border-bottom: 1rpx solid var(--border-color);
}

.order-desc {
  font-size: 28rpx;
  color: var(--ink-deep);
}

.order-amount {
  font-size: 36rpx;
  color: var(--ink-deep);
}

/* 订单底部 */
.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-time {
  font-size: 22rpx;
  color: var(--ink-light);
}

.refund-btn {
  padding: 8rpx 24rpx;
  border: 1rpx solid var(--seal-red);
}

.refund-btn-text {
  font-size: 22rpx;
  color: var(--seal-red);
}

.refund-btn:active {
  background: var(--seal-red-light);
}

/* 加载中 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: var(--ink-light);
}

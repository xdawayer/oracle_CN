/* Markdown 内容样式 */
.markdown-content {
  font-size: 28rpx;
  color: var(--ink-medium);
  line-height: 1.8;
  word-break: break-all;
}

/* 模块占位符 */
.module-placeholder {
  margin: var(--spacing-lg) var(--spacing-lg);
  padding: var(--spacing-xxl);
  background: var(--paper-50);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx dashed var(--border-color);
}

.placeholder-text {
  font-size: 26rpx;
  color: var(--ink-light);
}

/* 底部留白 */
.bottom-spacer {
  height: 120rpx;
}

/* 错误容器 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-xxl);
  flex: 1;
  justify-content: center;
}

.error-title {
  font-size: 32rpx;
  color: var(--ink-deep);
  margin-bottom: var(--spacing-sm);
}

.error-message {
  font-size: 26rpx;
  color: var(--ink-light);
  margin-bottom: var(--spacing-lg);
  text-align: center;
}

/* 重试按钮 */
.retry-btn {
  padding: var(--spacing-sm) var(--spacing-lg);
  background: var(--ink-deep);
  border-radius: 8rpx;
}

.retry-btn text {
  font-size: 26rpx;
  color: var(--paper-50);
}

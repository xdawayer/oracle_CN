/* report.wxss - 通用报告页面样式 */

.page-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: var(--paper-100);
}

/* 头部 */
.header {
  padding: var(--spacing-xl) var(--spacing-lg) var(--spacing-lg);
  text-align: center;
  background-color: var(--paper-50);
  border-bottom: 1rpx solid var(--border-color);
}

.header-title {
  font-size: 56rpx;
  color: var(--ink-deep);
  margin-bottom: var(--spacing-xs);
  display: block;
}

.header-desc {
  font-size: 26rpx;
  color: var(--ink-light);
  line-height: 1.6;
  display: block;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xxl) var(--spacing-lg);
  min-height: 400rpx;
  flex: 1;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--border-color);
  border-top-color: var(--ink-deep);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: var(--spacing-md);
  font-size: 28rpx;
  color: var(--ink-medium);
}

/* 进度条 */
.progress-bar-container {
  width: 100%;
  max-width: 500rpx;
  height: 8rpx;
  background: var(--border-color);
  border-radius: 4rpx;
  margin-top: var(--spacing-lg);
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background: var(--ink-deep);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  margin-top: var(--spacing-sm);
  font-size: 24rpx;
  color: var(--ink-light);
}

/* 报告内容区域 */
.report-content {
  flex: 1;
}

/* 生成中提示 */
.generating-banner {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-md) var(--spacing-lg);
  background: linear-gradient(90deg, var(--paper-50), var(--paper-100), var(--paper-50));
  border-bottom: 1rpx solid var(--border-color);
}

.generating-dot {
  width: 12rpx;
  height: 12rpx;
  background: var(--ink-deep);
  border-radius: 50%;
  margin-right: var(--spacing-sm);
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.4; }
}

.generating-text {
  font-size: 24rpx;
  color: var(--ink-medium);
}

/* 模块区块 */
.module-section {
  margin: var(--spacing-lg) var(--spacing-lg);
  background: var(--paper-50);
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.module-header {
  padding: var(--spacing-lg) var(--spacing-lg) var(--spacing-md);
  border-bottom: 1rpx solid var(--border-color);
}

.module-title {
  font-size: 36rpx;
  color: var(--ink-deep);
  font-weight: 500;
}

.module-body {
  padding: var(--spacing-lg);
}

/* ========== 模块顶部色条 ========== */
.module-accent {
  height: 6rpx;
  border-radius: 16rpx 16rpx 0 0;
  background: var(--ink-deep);

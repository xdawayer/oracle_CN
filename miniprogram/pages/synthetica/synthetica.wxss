/* pages/synthetica/synthetica.wxss - Ink Wash Optimization */

.container {
  padding: var(--spacing-lg);
  padding-bottom: 220rpx;
  background-color: var(--paper-100);
}

.overlay {
  position: fixed;
  inset: 0;
  z-index: 220;
}

.overlay-loading {
  background-color: rgba(253, 251, 247, 0.8);
  backdrop-filter: blur(8rpx);
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-card {
  background: var(--paper-50);
  padding: var(--spacing-xl);
  text-align: center;
  width: 520rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 4rpx solid var(--ink-water);
  border-top-color: var(--ink-deep);
  margin: 0 auto var(--spacing-md);
  animation: spin 1s linear infinite;
}

.overlay-report {
  background-color: var(--paper-100);
}

.report-scroll {
  height: 100vh;
  padding: var(--spacing-lg);
}

.report-header {
  margin-bottom: var(--spacing-xl);
}

.report-title {
  font-size: 56rpx;
  color: var(--ink-deep);
  line-height: 1.2;
}

.report-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: var(--spacing-md);
}

.result-tag {
  font-size: 18rpx;
  padding: 4rpx 16rpx;
  background: var(--paper-50);
  color: var(--ink-medium);
}

.report-section {
  background: var(--paper-50);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-md);
}

.section-title {
  font-size: 32rpx;
  color: var(--ink-deep);
  margin-bottom: var(--spacing-sm);
}

.section-subtitle {
  font-size: 18rpx;
  color: var(--ink-light);
  margin-top: var(--spacing-md);
  margin-bottom: 4rpx;
  text-transform: uppercase;
}

.section-text {
  font-size: 26rpx;
  color: var(--ink-dark);
  line-height: 1.8;
}

.report-actions {
  padding: var(--spacing-lg) 0;
}

.card {
  background-color: var(--paper-50);
  padding: var(--spacing-lg);
}

/* Banner */
.banner {
  background: var(--paper-200);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-lg);
}

.banner-text {
  font-size: 22rpx;
  color: var(--ink-medium);
  font-style: italic;
  text-align: center;
  display: block;
}

/* Form Card */
.form-card {
  padding: 0;
}

.section {
  padding: var(--spacing-lg);
}

.divider {
  height: 1rpx;
  background: var(--border-color);
  margin: 0 var(--spacing-lg);
}

.section-header {
  margin-bottom: var(--spacing-md);
}

/* Pickers */
.picker-box {
  background: var(--paper-100);
  border: 1rpx solid var(--border-color);
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 var(--spacing-md);
}

.picker-text {
  font-size: 26rpx;
  color: var(--ink-deep);
}

.picker-arrow {
  font-size: 20rpx;
  color: var(--ink-light);
}

/* Input Groups */
.input-group {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

/* Aspects */
.add-btn {
  font-size: 22rpx;
  color: var(--ink-deep);
}

.aspect-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

.aspect-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  background: var(--paper-100);
  padding: var(--spacing-sm);
  border-radius: 4rpx;
}

.aspect-pickers {
  flex: 1;
  display: flex;
  gap: var(--spacing-sm);
}

.delete-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--seal-red);
  font-size: 32rpx;
}

/* Bottom Bar */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: var(--paper-100);
  padding: var(--spacing-md) var(--spacing-lg) calc(var(--spacing-md) + env(safe-area-inset-bottom));
  border-top: 1rpx solid var(--border-color);
  z-index: 100;
}

.generate-btn {
  background-color: var(--ink-deep);
  color: var(--paper-50);
  font-weight: 600;
  font-size: 30rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 4rpx;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

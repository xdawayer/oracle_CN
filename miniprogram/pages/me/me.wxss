.page-container {
  min-height: 100vh;
  background-color: var(--paper-100);
  padding-bottom: 80rpx;
}

.menu-view {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
  padding: 0 var(--spacing-lg);
}

/* 用户头部 */
.user-header {
  display: flex;
  align-items: center;
  gap: var(--spacing-lg);
  background: var(--paper-50);
  padding: var(--spacing-lg);
  margin-top: var(--spacing-md);
}

.avatar-wrap {
  position: relative;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: var(--paper-200);
  border: 2rpx solid var(--border-color);
}

.avatar.placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--ink-light);
  font-size: 48rpx;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.name-row {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.user-name {
  font-size: 42rpx;
  color: var(--ink-deep);
}

.name-chevron {
  font-size: 24rpx;
  color: var(--ink-light);
}

.vip-status-tag {
  display: inline-flex;
  background: var(--ink-deep);
  padding: 4rpx 16rpx;
  width: fit-content;
}

.vip-tag-text {
  font-size: 18rpx;
  color: var(--paper-50);
  letter-spacing: 2rpx;
}

/* VIP 卡片 */
.vip-card {
  background: var(--ink-deep);
  padding: var(--spacing-lg);
}

.vip-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-sm);
}

.vip-card-title {
  font-size: 36rpx;
  color: var(--paper-50);
}

.vip-expiry-badge {
  background: rgba(255, 255, 255, 0.1);
  padding: 4rpx 16rpx;
}

.expiry-text {
  font-size: 20rpx;
  color: var(--paper-300);
}

.vip-card-link {
  margin-top: var(--spacing-lg);
}

.link-text {
  font-size: 22rpx;
  color: var(--paper-300);
}

/* 统计卡片 */
.stats-card {
  display: flex;
  background: var(--paper-50);
  padding: var(--spacing-lg) 0;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 44rpx;
  color: var(--ink-deep);
}

.stat-label {
  font-size: 20rpx;
  color: var(--ink-light);
  margin-top: 4rpx;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: linear-gradient(to bottom, transparent, var(--border-color), transparent);
}

/* 菜单列表 */
.menu-list {
  background: var(--paper-50);
}

.menu-list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--spacing-lg);
  border-bottom: 1rpx solid var(--border-color);
}

.menu-list-item:last-child {
  border-bottom: none;
}

.menu-item-label {
  font-size: 28rpx;
  color: var(--ink-dark);
}

.menu-item-chevron {
  font-size: 24rpx;
  color: var(--ink-light);
}

.logout-item .menu-item-label {
  color: var(--seal-red);
}

.danger-item .menu-item-label {
  color: var(--danger);
}

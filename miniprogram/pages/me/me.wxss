.page-container {
  min-height: 100vh;
  background-color: var(--paper-100);
  padding-bottom: 40rpx;
}

.nav-placeholder {
  width: 100%;
}

.menu-view {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  padding: 0 32rpx;
}

/* Áî®Êà∑‰ø°ÊÅØÂ§¥ÈÉ® */
.user-header {
  display: flex;
  align-items: center;
  gap: 32rpx;
  background: var(--paper-50);
  border-radius: 48rpx;
  padding: 40rpx;
  margin-top: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.02);
}

.avatar-wrap {
  position: relative;
  flex-shrink: 0;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: var(--paper-200);
}

.avatar.placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text-muted);
  font-size: 40rpx;
  font-weight: 600;
}

.vip-badge-small {
  position: absolute;
  right: -4rpx;
  bottom: 0;
  width: 36rpx;
  height: 36rpx;
  background: #5D5FEF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid var(--paper-50);
}

.vip-icon-small {
  font-size: 20rpx;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.user-name {
  font-size: 44rpx;
  font-weight: 700;
  color: var(--paper-900);
  letter-spacing: -0.01em;
}

.chevron-right {
  font-size: 32rpx;
  color: var(--paper-300);
  margin-left: 4rpx;
}

.vip-status-tag {
  display: inline-flex;
  align-items: center;
  background: #FFF4E5;
  padding: 4rpx 20rpx;
  border-radius: 100rpx;
}

.vip-tag-text {
  font-size: 22rpx;
  font-weight: 600;
  color: var(--accent);
}

/* VIP ‰ºöÂëòÂç°Áâá */
.vip-card {
  background: linear-gradient(135deg, var(--paper-50) 0%, #FFF2DF 100%);
  border-radius: 48rpx;
  padding: 40rpx;
  border: 2rpx solid rgba(198, 160, 98, 0.15);
  position: relative;
}

.vip-card::after {
  content: 'üëë';
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  font-size: 160rpx;
  opacity: 0.03;
  pointer-events: none;
}

.vip-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.vip-title-group {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.vip-card-title {
  font-size: 44rpx;
  font-weight: 800;
  color: #8B572A;
}

.vip-card-icon {
  font-size: 32rpx;
  background: var(--paper-50);
  width: 48rpx;
  height: 48rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 8rpx rgba(139, 87, 42, 0.1);
}

.vip-expiry-badge {
  background: #F0E6D6;
  padding: 8rpx 24rpx;
  border-radius: 100rpx;
}

.expiry-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #6D4C41;
}

.vip-card-link {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 48rpx;
}

.link-text {
  font-size: 26rpx;
  color: #A67C52;
}

.link-chevron {
  font-size: 20rpx;
  color: #A67C52;
}

.vip-benefits {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 32rpx;
  padding: 24rpx;
}

.benefit-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.benefit-icon-bg {
  width: 56rpx;
  height: 56rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.benefit-gold { background: #FFD70020; }
.benefit-brown { background: #8B451320; }
.benefit-light-gold { background: #C6A06220; }

.benefit-icon {
  font-size: 28rpx;
}

.benefit-label {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--paper-900);
}

.benefit-divider {
  width: 1rpx;
  height: 40rpx;
  background: rgba(139, 87, 42, 0.1);
}

/* Êï∞ÊçÆÁªüËÆ°Âç°Áâá */
.stats-card {
  display: flex;
  align-items: center;
  background: var(--paper-50);
  border-radius: 48rpx;
  padding: 48rpx 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.02);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 800;
  color: var(--paper-900);
  letter-spacing: -0.02em;
}

.stat-label {
  font-size: 24rpx;
  color: var(--paper-400);
  font-weight: 500;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: var(--paper-100);
}

/* ÂäüËÉΩÂàóË°® */
.menu-list {
  background: var(--paper-50);
  border-radius: 48rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.02);
}

.menu-list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 36rpx 40rpx;
  border-bottom: 2rpx solid var(--paper-100);
}

.menu-list-item:last-child {
  border-bottom: none;
}

.menu-list-item:active {
  background: var(--paper-50);
}

.menu-item-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.menu-icon-bg {
  width: 72rpx;
  height: 72rpx;
  background: var(--paper-100);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-icon {
  font-size: 32rpx;
}

.menu-item-label {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--paper-900);
}

.menu-item-chevron {
  font-size: 28rpx;
  color: var(--paper-300);
}

/* ÈÄÄÂá∫ÁôªÂΩï */
.logout-list {
  margin-top: 12rpx;
}

.logout-icon-bg {
  background: #FFF0F0;
}

.logout-label {
  color: #E54D42;
}

/* Â≠êÈ°µÈù¢ËßÜÂõæÊ†∑Âºè */
.sub-view {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 0 32rpx;
}

.sub-header {
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.back-btn {
  font-size: 24rpx;
  color: var(--paper-600);
  padding: 12rpx 24rpx;
  border-radius: 16rpx;
  background: var(--paper-50);
  border: 1px solid var(--paper-200);
}

.sub-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--paper-900);
}

.sub-placeholder {
  width: 100rpx;
}

.sub-content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--paper-50);
  border-radius: 48rpx;
  margin: 32rpx 0;
  padding: 80rpx;
}

.sub-desc {
  font-size: 28rpx;
  color: var(--paper-400);
  text-align: center;
}

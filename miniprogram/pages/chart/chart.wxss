.container {
  padding: 0;
  background-color: var(--bg-color);
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  padding: 24rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: var(--bg-color);
  border-bottom: 1px solid var(--space-700);
  z-index: 10;
}

.back-btn {
  padding: 16rpx;
  margin-left: -16rpx;
}

.back-text {
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 700;
}

.header-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title-main {
  font-size: 32rpx;
  font-weight: 800;
  color: var(--text-primary);
  letter-spacing: -0.5px;
}

.title-sub {
  font-size: 18rpx;
  color: var(--text-muted);
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 2px;
  margin-top: 4rpx;
}

.placeholder {
  width: 40rpx;
}

.content {
  flex: 1;
  padding: 32rpx;
}

.card {
  background: var(--space-900);
  border-radius: 40rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  border: 1px solid var(--space-700);
}

.section-label {
  font-size: 20rpx;
  font-weight: 900;
  color: var(--text-muted);
  text-transform: uppercase;
  letter-spacing: 1px;
  margin-bottom: 16rpx;
  display: block;
}

.picker-display {
  height: 96rpx;
  background: var(--space-800);
  border-radius: 24rpx;
  border: 1px solid var(--space-700);
  display: flex;
  align-items: center;
  justify-content: center; /* Centered since arrow removed */
  padding: 0 32rpx;
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.type-desc {
  font-size: 22rpx;
  color: var(--text-muted);
  margin-top: 16rpx;
  display: block;
  line-height: 1.5;
  padding: 0 8rpx;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding-top: 32rpx;
  border-top: 1px solid var(--space-800);
}

.section-header:first-child {
  padding-top: 0;
  border-top: none;
}

.indicator {
  width: 6rpx;
  height: 24rpx;
  border-radius: 4rpx;
  margin-right: 12rpx;
}

.bg-indigo { background: var(--mystic-500); }
.bg-rose { background: var(--danger); }

.section-title {
  font-size: 24rpx;
  font-weight: 900;
  color: var(--text-primary);
  text-transform: uppercase;
  letter-spacing: 1px;
}

.input-group {
  margin-bottom: 24rpx;
}

.label {
  font-size: 20rpx;
  font-weight: 900;
  color: var(--text-muted);
  text-transform: uppercase;
  margin-bottom: 12rpx;
  display: block;
  margin-left: 8rpx;
}

.input {
  height: 96rpx;
  background: var(--space-800);
  border-radius: 24rpx;
  border: 1px solid var(--space-700);
  padding: 0 32rpx;
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text-primary);
  display: flex;
  align-items: center;
}

.picker-input {
  justify-content: start; 
}

.placeholder-text {
  color: var(--space-600);
}

.row {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.col {
  flex: 1;
}

/* Footer */
.footer {
  padding: 32rpx;
  background: var(--bg-color);
  border-top: 1px solid var(--space-700);
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

.action-btn {
  height: 104rpx;
  background: var(--mystic-500);
  color: var(--star-50);
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 800;
  letter-spacing: 1px;
  box-shadow: none; /* removed hardcoded shadow */
}

.action-btn:active {
  transform: scale(0.98);
}

.action-btn.loading {
  opacity: 0.8;
}

.footer-spacer {
  height: 160rpx;
}

/* Result Table */
.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.result-title {
  font-size: 28rpx;
  font-weight: 800;
  color: var(--text-primary);
}

.tags {
  display: flex;
  gap: 8rpx;
}

.tag {
  font-size: 18rpx;
  font-weight: 800;
  background: var(--space-800);
  color: var(--text-muted);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.table-header {
  display: flex;
  padding-bottom: 16rpx;
  border-bottom: 1px solid var(--space-800);
  margin-bottom: 16rpx;
}

.th {
  flex: 1;
  font-size: 20rpx;
  font-weight: 900;
  color: var(--text-muted);
  text-transform: uppercase;
  letter-spacing: 1px;
}

.table-row {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1px solid var(--space-800);
  align-items: center;
}

.table-row:last-child {
  border-bottom: none;
}

.td {
  flex: 1;
  font-size: 26rpx;
  font-weight: 700;
  color: var(--text-secondary);
}

.planet-cell {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.planet-name {
  color: var(--text-primary);
}

.text-orange { color: var(--warning); }
.text-indigo { color: var(--mystic-500); }
.text-gray { color: var(--text-muted); }
.text-right { text-align: right; }

.font-mono {
  font-family: monospace;
  font-size: 24rpx;
  color: var(--text-muted);
}

.empty-state {
  padding: 64rpx;
  text-align: center;
  color: var(--text-muted);
  font-size: 24rpx;
}

.animate-in {
  animation: fadeIn 0.4s ease-out forwards;
}

.delay-1 {
  animation-delay: 0.1s;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.section-sub-header {
  margin-bottom: 16rpx;
  padding-bottom: 8rpx;
  border-bottom: 1px dashed var(--space-800);
}
.sub-title {
  font-size: 22rpx;
  font-weight: 800;
  color: var(--text-muted);
}
.margin-top-lg {
  margin-top: 32rpx;
}

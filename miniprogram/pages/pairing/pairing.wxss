/* pages/pairing/pairing.wxss - Ink Wash Love Theme */

.page {
  min-height: 100vh;
  background: var(--paper-100);
  padding-bottom: 120rpx;
}

/* Header - 与 daily/self 页面一致 */
.header {
  padding: var(--spacing-xl) var(--spacing-lg) var(--spacing-lg);
  animation: fadeInUp 0.6s ease-out;
}

.title {
  font-size: 64rpx;
  color: var(--ink-deep);
  display: block;
}

.subtitle {
  font-size: 24rpx;
  color: var(--ink-light);
  margin-top: var(--spacing-xs);
  display: block;
  letter-spacing: 2rpx;
}

/* Content */
.content {
  padding: var(--spacing-lg);
}

/* Selection Area */
.selection-area {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: var(--spacing-xxl);
}

.user-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.column-label {
  font-size: 20rpx;
  color: var(--ink-light);
  margin-bottom: var(--spacing-sm);
}

/* Avatar Card - 增强版 */
.avatar-card {
  width: 180rpx;
  height: 200rpx;
  background: var(--paper-50);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: var(--spacing-md);
  border-color: var(--accent-red);
  gap: var(--spacing-xs);
}

.zodiac-icon {
  width: 48rpx;
  height: 48rpx;
}

.avatar-name {
  font-size: 48rpx;
  color: var(--ink-deep);
  line-height: 1.2;
}

.avatar-animal {
  font-size: 16rpx;
  color: var(--ink-light);
}

/* Picker Group */
.picker-group {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
  width: 100%;
}

.picker-item {
  background: var(--paper-50);
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  color: var(--ink-medium);
  text-align: center;
}

/* Center Decoration - 爱心动画 */
.center-decoration {
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 60rpx;
}

.heart-icon {
  font-size: 48rpx;
  animation: heartbeat 1.5s ease-in-out infinite;
}

@keyframes heartbeat {
  0%, 100% {
    transform: scale(1);
  }
  14% {
    transform: scale(1.15);
  }
  28% {
    transform: scale(1);
  }
  42% {
    transform: scale(1.15);
  }
  56% {
    transform: scale(1);
  }
}

/* Match Button - 爱情主题 */
.match-btn {
  width: 100%;
  height: 100rpx;
  margin-bottom: var(--spacing-xl);
  background: linear-gradient(135deg, var(--accent-red) 0%, var(--love-pink) 100%);
  border: none;
}

.match-btn::after {
  border: none;
}

/* Info Card */
.info-card {
  background: var(--paper-200);
  padding: var(--spacing-md);
}

.info-title {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--ink-dark);
  margin-bottom: 8rpx;
  display: block;
}

.info-desc {
  font-size: 20rpx;
  color: var(--ink-light);
  line-height: 1.6;
}

/* Result Modal Overlay */
.overlay {
  position: fixed;
  inset: 0;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(4rpx);
}

.overlay-bg {
  position: absolute;
  inset: 0;
}

/* Result Card */
.result-card {
  position: relative;
  z-index: 101;
  background-color: var(--paper-100);
  padding: var(--spacing-xl);
  width: 650rpx;
  max-height: 85vh;
  overflow-y: auto;
}

.close-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 10rpx;
  font-size: 32rpx;
  color: var(--ink-light);
}

/* Result Heart Decoration */
.result-heart-decoration {
  text-align: center;
  margin-bottom: var(--spacing-md);
}

.result-heart {
  font-size: 64rpx;
  animation: heartbeat 1.5s ease-in-out infinite;
}

/* Result Pairing Info */
.result-pairing-info {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-lg);
}

.mini-avatar {
  text-align: center;
}

.mini-sign {
  font-size: 32rpx;
  color: var(--ink-deep);
  display: block;
}

.mini-animal {
  font-size: 18rpx;
  color: var(--ink-light);
}

.pairing-connector {
  font-size: 28rpx;
  color: var(--accent-red);
}

/* Result Header */
.result-header {
  text-align: center;
  margin-bottom: var(--spacing-xl);
}

.score-label {
  font-size: 24rpx;
  color: var(--ink-light);
}

.score-value {
  font-size: 110rpx;
  color: var(--accent-red);
  display: block;
}

/* Dimensions Grid */
.dimensions-grid {
  margin-bottom: var(--spacing-xl);
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--spacing-md);
}

.dim-item {
  background: var(--paper-50);
  padding: var(--spacing-md);
}

.dim-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 4rpx;
}

.dim-label {
  font-size: 20rpx;
  color: var(--ink-medium);
}

.dim-val {
  font-size: 24rpx;
  color: var(--ink-deep);
}

.progress-bar-wrap {
  height: 4rpx;
  background: var(--paper-200);
}

.progress-bar-inner {
  height: 100%;
  background: linear-gradient(90deg, var(--accent-red) 0%, #FF6B8A 100%);
}

/* Analysis Box */
.analysis-box {
  background: var(--paper-50);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-lg);
}

.analysis-text {
  font-size: 24rpx;
  color: var(--ink-dark);
  line-height: 1.8;
  font-style: italic;
}

/* Tips Section */
.tips-section {
  margin-bottom: var(--spacing-lg);
}

.tip-title {
  font-size: 24rpx;
  color: var(--accent-red);
  margin-bottom: 8rpx;
  display: block;
}

.tip-text {
  font-size: 22rpx;
  color: var(--ink-medium);
  line-height: 1.6;
}

/* Confirm Button */
.confirm-btn {
  width: 100%;
  background: linear-gradient(135deg, var(--accent-red) 0%, var(--love-pink) 100%);
  border: none;
}

.confirm-btn::after {
  border: none;
}

/* Animations */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

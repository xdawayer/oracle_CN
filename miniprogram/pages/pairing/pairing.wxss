/* pages/pairing/pairing.wxss - Ink Wash Love Theme */

.page {
  min-height: 100vh;
  background: var(--paper-100);
  padding-bottom: 120rpx;
}

/* ===== Step 1: 输入界面 ===== */

.header {
  padding: var(--spacing-xl) var(--spacing-lg) var(--spacing-lg);
  animation: fadeInUp 0.6s ease-out;
}

.title {
  font-size: 64rpx;
  color: var(--ink-deep);
  display: block;
}

.subtitle {
  font-size: 24rpx;
  color: var(--ink-light);
  margin-top: var(--spacing-xs);
  display: block;
  letter-spacing: 2rpx;
}

.content {
  padding: var(--spacing-lg);
}

/* Selection Area */
.selection-area {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: var(--spacing-xxl);
}

.user-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.column-label {
  font-size: 20rpx;
  color: var(--ink-light);
  margin-bottom: var(--spacing-sm);
}

.avatar-card {
  width: 180rpx;
  height: 200rpx;
  background: var(--paper-50);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: var(--spacing-md);
  border-color: var(--accent-red);
  gap: var(--spacing-xs);
}

.zodiac-icon {
  width: 48rpx;
  height: 48rpx;
}

.avatar-name {
  font-size: 48rpx;
  color: var(--ink-deep);
  line-height: 1.2;
}

.avatar-animal {
  font-size: 16rpx;
  color: var(--ink-light);
}

/* Picker Group */
.picker-group {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
  width: 100%;
}

.picker-item {
  background: var(--paper-50);
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  color: var(--ink-medium);
  text-align: center;
}

/* Center Decoration */
.center-decoration {
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 60rpx;
}

.heart-icon {
  font-size: 48rpx;
  animation: heartbeat 1.5s ease-in-out infinite;
}

@keyframes heartbeat {
  0%, 100% { transform: scale(1); }
  14% { transform: scale(1.15); }
  28% { transform: scale(1); }
  42% { transform: scale(1.15); }
  56% { transform: scale(1); }
}

/* Match Button */
.match-btn {
  width: 100%;
  height: 100rpx;
  margin-bottom: var(--spacing-xl);
  background: linear-gradient(135deg, var(--accent-red) 0%, var(--love-pink) 100%);
  border: none;
}

.match-btn::after {
  border: none;
}

/* Info Card */
.info-card {
  background: var(--paper-200);
  padding: var(--spacing-md);
}

.info-title {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--ink-dark);
  margin-bottom: 8rpx;
  display: block;
}

.info-desc {
  font-size: 20rpx;
  color: var(--ink-light);
  line-height: 1.6;
}

/* ===== Step 2: 全屏报告 ===== */

.report-page {
  padding: var(--spacing-lg);
  animation: fadeInUp 0.5s ease-out;
}

/* 报告顶部 */
.report-header {
  text-align: center;
  margin-bottom: var(--spacing-xl);
  padding-bottom: var(--spacing-lg);
  border-bottom: 1rpx solid var(--border-color);
}

.report-pairing-row {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
}

.report-person {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.report-sign-icon {
  width: 64rpx;
  height: 64rpx;
}

.report-sign-name {
  font-size: 36rpx;
  color: var(--ink-deep);
}

.report-animal {
  font-size: 20rpx;
  color: var(--ink-light);
}

.report-connector {
  display: flex;
  align-items: center;
  justify-content: center;
}

.report-heart {
  font-size: 48rpx;
  animation: heartbeat 1.5s ease-in-out infinite;
}

.report-score-area {
  margin-top: var(--spacing-md);
}

.report-score-label {
  font-size: 22rpx;
  color: var(--ink-light);
  display: block;
  margin-bottom: 4rpx;
}

.report-score-value {
  font-size: 96rpx;
  color: var(--accent-red);
  line-height: 1;
}

.report-score-unit {
  font-size: 40rpx;
  color: var(--accent-red);
}

/* 区域标题 */
.report-section {
  margin-bottom: var(--spacing-xl);
}

.section-title {
  font-size: 32rpx;
  color: var(--ink-deep);
  display: block;
  margin-bottom: var(--spacing-md);
}

/* 维度卡片 */
.dim-cards {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

.dim-card {
  background: var(--paper-50);
  padding: var(--spacing-md);
}

.dim-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.dim-card-label {
  font-size: 26rpx;
  color: var(--ink-dark);
  font-weight: 500;
}

.dim-card-score {
  font-size: 28rpx;
  color: var(--accent-red);
}

.dim-card-bar {
  height: 6rpx;
  background: var(--paper-200);
  margin-bottom: var(--spacing-sm);
  overflow: hidden;
}

.dim-card-bar-inner {
  height: 100%;
  background: linear-gradient(90deg, var(--accent-red) 0%, #FF6B8A 100%);
  transition: width 0.6s ease-out;
}

.dim-card-desc {
  font-size: 24rpx;
  color: var(--ink-medium);
  line-height: 1.7;
}

/* 综合分析卡片 */
.analysis-card {
  background: var(--paper-50);
  padding: var(--spacing-lg);
}

.analysis-content {
  font-size: 26rpx;
  color: var(--ink-dark);
  line-height: 1.8;
  white-space: pre-line;
}

.fallback-text {
  color: var(--ink-light);
  font-style: italic;
}

/* 相处建议卡片 */
.tip-card {
  background: var(--paper-50);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-sm);
}

.tip-card-title {
  font-size: 26rpx;
  color: var(--accent-red);
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}

.tip-card-content {
  font-size: 24rpx;
  color: var(--ink-medium);
  line-height: 1.7;
}

/* 总分骨架屏 */
.score-skeleton {
  width: 160rpx;
  height: 80rpx;
  margin: 0 auto;
  background: linear-gradient(90deg, var(--paper-200) 25%, var(--paper-100) 50%, var(--paper-200) 75%);
  background-size: 400% 100%;
  animation: skeleton-shimmer 1.5s ease-in-out infinite;
}

/* 维度分数骨架屏 */
.skeleton-score {
  width: 72rpx;
  height: 28rpx;
  background: linear-gradient(90deg, var(--paper-200) 25%, var(--paper-100) 50%, var(--paper-200) 75%);
  background-size: 400% 100%;
  animation: skeleton-shimmer 1.5s ease-in-out infinite;
}

/* 进度条加载动画 */
.dim-card-bar-loading {
  width: 60%;
  animation: bar-shimmer 1.5s ease-in-out infinite;
}

@keyframes bar-shimmer {
  0%, 100% { width: 40%; opacity: 0.5; }
  50% { width: 70%; opacity: 1; }
}

/* 骨架屏 */
.skeleton-line {
  height: 24rpx;
  background: linear-gradient(90deg, var(--paper-200) 25%, var(--paper-100) 50%, var(--paper-200) 75%);
  background-size: 400% 100%;
  animation: skeleton-shimmer 1.5s ease-in-out infinite;
  margin-bottom: 12rpx;
}

.skeleton-short {
  width: 60%;
}

.skeleton-title {
  width: 30%;
  height: 28rpx;
  margin-bottom: 16rpx;
}

@keyframes skeleton-shimmer {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

/* 底部操作区 */
.report-actions {
  margin-top: var(--spacing-lg);
  padding-bottom: 60rpx;
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

.ask-btn-wrapper,
.back-btn-wrapper {
  width: 100%;
}

.ask-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, var(--accent-red) 0%, var(--love-pink) 100%);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.ask-btn::after {
  border: none;
}

.ask-btn-text {
  font-size: 30rpx;
  color: #fff;
  letter-spacing: 2rpx;
}

.back-btn {
  width: 100%;
  height: 88rpx;
  background: var(--paper-50);
  border: 1rpx solid var(--border-color);
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-btn::after {
  border: none;
}

.back-btn-text {
  font-size: 28rpx;
  color: var(--ink-medium);
}

/* Animations */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* AstroMind 首页 - 水墨禅意 (Ink Zen) */

page {
  background: var(--paper-100);
}

.container {
  padding: var(--spacing-lg) var(--spacing-lg) 0;
  animation: zenFadeInUp 0.8s cubic-bezier(0.25, 0.1, 0.25, 1.0);
}

/* Header */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--breath-xl);
  padding: var(--breath-sm) 0;
  animation: zenFadeInUp 0.6s cubic-bezier(0.25, 0.1, 0.25, 1.0);
}

.header-text {
  display: flex;
  flex-direction: column;
}

.greeting {
  font-size: 56rpx;
  font-weight: 600;
  color: var(--ink-deep);
  margin-bottom: var(--spacing-xs);
}

.date {
  font-size: 24rpx;
  color: var(--ink-light);
  letter-spacing: 2rpx;
}

.date-lunar {
  font-size: 22rpx;
  color: var(--ink-medium);
  letter-spacing: 1rpx;
  margin-top: 4rpx;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: var(--paper-50);
}

.avatar.placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--ink-deep);
  font-size: 36rpx;
}

/* ========== 首页骨架屏 ========== */
@keyframes homeSkeletonPulse {
  0%, 100% { opacity: 0.4; }
  50% { opacity: 0.15; }
}

.home-skeleton {
  animation: homeSkeletonPulse 1.8s ease-in-out infinite;
}

.skeleton-block {
  background: var(--ink-wash-2);
  border-radius: 4rpx;
}

.home-skeleton-score {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin: 0 auto var(--spacing-sm);
}

.home-skeleton-quote {
  width: 280rpx;
  height: 36rpx;
  margin: 0 auto;
}

.home-skeleton-line {
  width: 100%;
  height: 26rpx;
  margin-bottom: 12rpx;
}

.home-skeleton-line-short {
  width: 65%;
}

.home-skeleton-line-mid {
  width: 80%;
}

.home-skeleton-chip {
  width: 72rpx;
  height: 28rpx;
}

/* Daily Card - Ink Wash Style */
.daily-card {
  position: relative;
  background: var(--ink-wash-1);
  padding: var(--breath-lg);
  margin-bottom: var(--breath-lg);
  animation: zenFadeInUp 0.8s cubic-bezier(0.25, 0.1, 0.25, 1.0) 0.1s backwards;
  overflow: visible;
}

.daily-card::after {
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 2rpx;
  background: var(--seal-red);
}

.card-content {
  position: relative;
  z-index: 5;
}

/* Card Hero: Score + Quote */
.card-hero {
  text-align: center;
  margin-bottom: var(--breath-md);
  padding: var(--breath-sm) 0;
}

.card-score {
  font-size: 120rpx;
  line-height: 1;
  color: var(--ink-deep);
  display: block;
  margin-bottom: var(--spacing-sm);
}

.card-quote {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--ink-dark);
  display: block;
}

/* Description */
.desc-box {
  padding: var(--breath-sm) 0;
  margin-bottom: var(--breath-sm);
}

.desc-text {
  font-size: 26rpx;
  line-height: 1.8;
  color: var(--ink-medium);
}

/* Lucky Section */
.lucky-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--breath-sm);
}

.lucky-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  flex: 1;
}

.lucky-label {
  font-size: 20rpx;
  color: var(--ink-light);
}

.lucky-value {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--ink-deep);
}

.lucky-divider-line {
  width: 1rpx;
  height: 40rpx;
  background: linear-gradient(to bottom, transparent, var(--ink-wash-2), transparent);
}

.home-annual-entry {
  margin-bottom: var(--breath-xl);
}

/* Premium Banner — 统一深色卡片样式 */
.premium-banner {
  background: var(--ink-deep);
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-radius: 16rpx;
  min-height: 140rpx;
}

.premium-info {
  flex: 1;
  margin-right: 24rpx;
}

.premium-title {
  font-size: 30rpx;
  color: var(--paper-50);
  margin-bottom: 8rpx;
  display: block;
  font-weight: 600;
}

.premium-desc {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.55);
  display: block;
  line-height: 1.4;
}

.premium-btn {
  background: rgba(255, 255, 255, 0.15);
  color: var(--paper-50);
  padding: 14rpx 32rpx;
  font-size: 24rpx;
  font-weight: 600;
  border-radius: 8rpx;
  white-space: nowrap;
  flex-shrink: 0;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

/* Banner 进度条 */
.banner-progress {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
  gap: 12rpx;
}

.banner-progress-bar {
  flex: 1;
  height: 6rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 3rpx;
  overflow: hidden;
}

.banner-progress-fill {
  height: 100%;
  background: var(--paper-50);
  border-radius: 3rpx;
  transition: width 0.5s ease;
}

.banner-progress-text {
  font-size: 20rpx;
  color: var(--paper-50);
  min-width: 56rpx;
  text-align: right;
}

/* Processing 状态按钮 */
.premium-btn.btn-processing {
  background: transparent;
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  color: var(--paper-50);
  opacity: 0.9;
}

/* Processing 动画 */
.premium-banner.processing {
  animation: bannerPulse 2s ease-in-out infinite;
}

@keyframes bannerPulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.85; }
}

/* Completed 状态 */
.premium-banner.completed .premium-btn {
  background: var(--paper-50);
  color: var(--ink-deep);
  border-color: transparent;
}

/* 年度报告 — 红色 */
.annual-banner {
  background: var(--seal-red);
}

/* Section Groups */
.section-group {
  margin-bottom: var(--breath-xl);
  animation: zenFadeInUp 0.8s cubic-bezier(0.25, 0.1, 0.25, 1.0) 0.2s backwards;
}

.section-header {
  margin-bottom: var(--breath-md);
}

.section-title {
  font-size: 40rpx;
  color: var(--ink-deep);
}

/* Quick Access - 2x2 Grid */
.quick-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--spacing-sm);
}

.quick-grid-item {
  background: var(--ink-wash-1);
  padding: var(--spacing-md) var(--spacing-lg);
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  transition: all 0.3s cubic-bezier(0.25, 0.1, 0.25, 1.0);
  position: relative;
  overflow: hidden;
}

.quick-grid-item:active {
  background: var(--ink-wash-2);
}

.quick-grid-icon-box {
  width: 100rpx;
  height: 100rpx;
  background: var(--paper-50);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: var(--spacing-sm);
}

.quick-grid-icon-box .icon {
  width: 48rpx;
  height: 48rpx;
}

/* 卡片底部装饰线 */
.quick-grid-item::after {
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 4rpx;
  border-radius: 2rpx;
}

.quick-grid-item[data-type="synastry"]::after {
  background: linear-gradient(90deg, transparent, #C9889A, transparent);
}

.quick-grid-item[data-type="cbt"]::after {
  background: linear-gradient(90deg, transparent, #6BA37A, transparent);
}

.quick-grid-item[data-type="ask"]::after {
  background: linear-gradient(90deg, transparent, #9B8EC4, transparent);
}

.quick-grid-item[data-type="kline"]::after {
  background: linear-gradient(90deg, transparent, #7B8CDE, transparent);
}

.quick-grid-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--ink-deep);
  display: block;
  margin-bottom: 4rpx;
}

.quick-grid-desc {
  font-size: 22rpx;
  color: var(--ink-light);
  line-height: 1.6;
  display: block;
}

.icon-box {
  width: 100rpx;
  height: 100rpx;
  background: var(--paper-50);
  border: 1rpx solid var(--border-color);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.25, 0.1, 0.25, 1.0);
}

.quick-access-item:active .icon-box {
  background: var(--ink-wash-1);
}

.icon {
  width: 40rpx;
  height: 40rpx;
}

.colored-icon {
  background-color: var(--ink-deep);
  -webkit-mask-repeat: no-repeat;
  -webkit-mask-position: center;
  -webkit-mask-size: contain;
  mask-repeat: no-repeat;
  mask-position: center;
  mask-size: contain;
}

.item-title {
  font-size: 24rpx;
  color: var(--ink-dark);
  font-weight: 500;
}

/* Chart Grid */
.chart-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--spacing-md);
}

.chart-card {
  display: flex;
  align-items: center;
  background: var(--ink-wash-1);
  padding: var(--spacing-md);
  border-radius: 8rpx;
  gap: var(--spacing-sm);
  transition: all 0.3s cubic-bezier(0.25, 0.1, 0.25, 1.0);
}

.chart-card:active {
  background: var(--ink-wash-2);
}

.chart-card .icon-box {
  width: 80rpx;
  height: 80rpx;
  flex-shrink: 0;
  border: none;
  background: var(--paper-50);
}

.text-box {
  display: flex;
  flex-direction: column;
}

.item-subtitle {
  font-size: 20rpx;
  color: var(--ink-light);
}

/* Recommendations */
.recommendations {
  margin-bottom: var(--breath-lg);
}

.recommendations-loading {
  padding: var(--spacing-xl);
  text-align: center;
}

.loading-text {
  font-size: 24rpx;
  color: var(--ink-light);
  font-style: italic;
}

.recommendations-list {
  display: flex;
  flex-direction: column;
}

.recommendation-card {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  padding: var(--breath-sm) 0;
}

.recommendation-icon-box {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--ink-wash-1);
  flex-shrink: 0;
}

.recommendation-text {
  display: flex;
  flex-direction: column;
}

.recommendation-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--ink-deep);
}

.recommendation-category {
  font-size: 20rpx;
  color: var(--ink-light);
  letter-spacing: 1rpx;
}

/* ========== 支付弹窗样式 ========== */
.payment-mask {
  position: fixed;
  inset: 0;
  background: rgba(26, 26, 26, 0.5);
  z-index: 1100;
  animation: fadeIn 0.25s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.payment-sheet {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--paper-warm);
  border-radius: 32rpx 32rpx 0 0;
  z-index: 1200;
  padding: 0;
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.32, 0.72, 0, 1);
  max-height: 96vh;
  min-height: 82vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.payment-sheet.show {
  transform: translateY(0);
}

.payment-body {
  flex: 1;
  overflow-y: auto;
  padding: 0 var(--spacing-xl);
}

.payment-handle {
  width: 64rpx;
  height: 8rpx;
  background: var(--ink-water);
  border-radius: 4rpx;
  margin: var(--spacing-md) auto var(--spacing-lg);
}

.payment-header {
  text-align: center;
  margin-bottom: var(--spacing-xl);
}

.payment-title {
  display: block;
  font-size: 44rpx;
  color: var(--ink-deep);
  margin-bottom: var(--spacing-xs);
  letter-spacing: 4rpx;
}

.payment-subtitle {
  display: block;
  font-size: 24rpx;
  color: var(--ink-light);
}

.payment-features {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-xl);
}

.payment-feature-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  padding: var(--spacing-sm) var(--spacing-md);
  background: var(--paper-50);
  border: 1rpx solid var(--border-color);
}

.feature-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: var(--ink-deep);
  color: var(--paper-50);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  flex-shrink: 0;
}

.feature-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.feature-title {
  font-size: 26rpx;
  color: var(--ink-deep);
  font-weight: 600;
}

.feature-desc {
  font-size: 22rpx;
  color: var(--ink-light);
}

.payment-price-section {
  background: var(--paper-50);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
  border: 1rpx solid var(--border-color);
}

.payment-price-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--spacing-sm);
}

.payment-price-label {
  font-size: 24rpx;
  color: var(--ink-medium);
}

.payment-price-value {
  display: flex;
  align-items: baseline;
  gap: 6rpx;
}

.payment-price-num {
  font-size: 40rpx;
  color: var(--ink-deep);
  font-weight: 600;
}

.payment-price-unit {
  font-size: 22rpx;
  color: var(--ink-light);
}

.payment-price-note {
  font-size: 22rpx;
  color: var(--ink-light);
  line-height: 1.6;
}

.payment-actions {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
  padding: var(--spacing-lg) var(--spacing-xl) calc(env(safe-area-inset-bottom) + 24rpx);
  background: var(--paper-warm);
  border-top: 1rpx solid var(--border-color);
}

.payment-btn-primary {
  height: 96rpx;
  background: var(--ink-deep);
  color: var(--paper-50);
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  letter-spacing: 4rpx;
  border: none;
}

.payment-btn-primary::after {
  border: none;
}

.payment-btn-primary[loading] {
  background: var(--ink-medium);
}

.payment-btn-cancel {
  text-align: center;
  padding: var(--spacing-sm) var(--spacing-lg);
  font-size: 26rpx;
  color: var(--ink-light);
}

/* ===== Share Overlay (Full-screen) ===== */
.share-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(26, 26, 26, 0.6);
  z-index: 1000;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xl);
  -webkit-backdrop-filter: blur(10rpx);
  backdrop-filter: blur(10rpx);
}

.share-card {
  width: 580rpx;
  background: var(--paper-warm);
  padding: var(--spacing-xl) var(--spacing-lg);
  position: relative;
  animation: zenFadeInUp 0.4s cubic-bezier(0.25, 0.1, 0.25, 1.0);
  border-left: 2rpx solid var(--seal-red);
}

.share-close {
  position: absolute;
  top: 16rpx;
  right: 20rpx;
  font-size: 44rpx;
  color: var(--ink-light);
  padding: 10rpx;
  line-height: 1;
}

.share-card-body {
  text-align: center;
  padding: var(--breath-lg) 0;
}

.share-sign {
  font-size: 24rpx;
  color: var(--ink-light);
  letter-spacing: 4rpx;
  display: block;
  margin-bottom: var(--spacing-md);
}

.share-date {
  font-size: 22rpx;
  color: var(--ink-light);
  letter-spacing: 2rpx;
  display: block;
  margin-bottom: var(--spacing-xl);
}

.share-score-label {
  font-size: 20rpx;
  color: var(--ink-light);
  letter-spacing: 4rpx;
  display: block;
  margin-bottom: var(--spacing-xs);
}

.share-score {
  font-size: 80rpx;
  color: var(--ink-deep);
  display: block;
  line-height: 1.1;
  margin-bottom: var(--spacing-lg);
}

.share-quote {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--ink-dark);
  display: block;
  line-height: 1.6;
  padding: 0 var(--spacing-md);
}

/* pages/kline/kline.wxss */
page {
  background-color: var(--bg-color);
  color: var(--text-primary);
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 0;
  background-color: var(--bg-color);
}

/* Header */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  background-color: var(--bg-color);
  border-bottom: 1rpx solid var(--space-700);
  z-index: 50;
}

.back-btn {
  padding: 16rpx;
  margin-left: -16rpx;
  border-radius: 50%;
}

.back-text {
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 700;
}

.header-title {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title-main {
  font-size: 32rpx;
  font-weight: 900;
  color: var(--text-primary);
  letter-spacing: -1rpx;
}

.title-sub {
  font-size: 18rpx;
  font-weight: 700;
  color: var(--text-muted);
  letter-spacing: 2rpx;
  text-transform: uppercase;
  margin-top: 4rpx;
}

.spacer {
  width: 40rpx;
}

/* Dimensions */
.dims-scroll {
  background-color: var(--bg-color);
  border-bottom: 1rpx solid var(--space-700);
  height: 160rpx;
  white-space: nowrap;
  position: sticky;
  top: 0;
  z-index: 40;
}

.dims-container {
  display: flex;
  padding: 24rpx 32rpx;
  gap: 32rpx;
}

.dim-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  opacity: 0.6;
  transition: all 0.3s;
  flex-shrink: 0;
}

.dim-item.active {
  opacity: 1;
  transform: scale(1.05);
}

.dim-icon-box {
  width: 96rpx;
  height: 96rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: none;
  background-color: var(--space-800);
  border: 1px solid var(--space-700);
  transition: all 0.3s;
}

.dim-item.active .dim-icon-box {
  background-color: var(--accent);
  border-color: var(--accent);
}

.dim-code {
  font-size: 24rpx;
  font-weight: 900;
  text-transform: uppercase;
  color: var(--text-muted);
}

.dim-item.active .dim-code {
  color: var(--space-950);
}

.dim-name {
  font-size: 20rpx;
  font-weight: 900;
  color: var(--text-primary);
}

/* Content */
.content-scroll {
  flex: 1;
  background-color: var(--bg-color);
}

.main-content {
  padding: 32rpx;
  padding-bottom: 120rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* Overview Card */
.overview-card {
  background-color: var(--space-900);
  border-radius: 48rpx;
  padding: 32rpx;
  box-shadow: none;
  border: 1rpx solid var(--space-700);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 0;
}

.trend-info {
  width: 100%;
}

.trend-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 26rpx;
  font-weight: 900;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  color: var(--accent);
}

.trend-score {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  margin-top: 16rpx;
}

.score-val {
  font-size: 48rpx;
  font-weight: 900;
  color: var(--text-primary);
  line-height: 1;
}

.score-label {
  display: block;
  margin-top: 8rpx;
  font-size: 20rpx;
  font-weight: 700;
  color: var(--text-muted);
  letter-spacing: 1rpx;
}

/* List */
.section-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 8rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 900;
  color: var(--text-primary);
  letter-spacing: -0.5rpx;
}

.section-subtitle {
  font-size: 20rpx;
  font-weight: 700;
  color: var(--text-muted);
  letter-spacing: 2rpx;
}

.list-card {
  background-color: var(--space-900);
  border-radius: 40rpx;
  box-shadow: none;
  border: 1rpx solid var(--space-700);
  overflow: hidden;
}

.list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid var(--space-800);
}

.list-item:last-child {
  border-bottom: none;
}

.item-main {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.item-planet {
  font-size: 26rpx;
  font-weight: 900;
  color: var(--text-primary);
}

.item-type {
  font-size: 20rpx;
  font-weight: 700;
  color: var(--text-muted);
  text-transform: uppercase;
}

.item-dates {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 4rpx;
}

.date-range {
  font-size: 20rpx;
  font-weight: 700;
  color: var(--text-secondary);
  font-family: monospace;
}

.peak-date {
  font-size: 18rpx;
  font-weight: 500;
  color: var(--text-muted);
}

/* Advice */
.advice-card {
  padding: 32rpx;
  border-radius: 40rpx;
  border: 1rpx solid var(--accent);
  background-color: var(--space-900);
  position: relative;
  overflow: hidden;
}

.advice-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.advice-title {
  font-size: 22rpx;
  font-weight: 900;
  color: var(--text-primary);
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.advice-text {
  font-size: 24rpx;
  font-weight: 700;
  color: var(--text-secondary);
  line-height: 1.6;
  opacity: 0.9;
}

/* Modal */
.modal-overlay {
  position: fixed;
  inset: 0;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  background-color: var(--space-950);
  backdrop-filter: blur(8px);
}

.modal-content {
  width: 100%;
  max-width: 600rpx;
  background-color: var(--space-900);
  border-radius: 56rpx;
  padding: 48rpx;
  position: relative;
  border: 1px solid var(--space-700);
}

.modal-header {
  text-align: center;
  margin-bottom: 48rpx;
  display: flex;
  flex-direction: column;
}

.modal-subtitle {
  font-size: 20rpx;
  font-weight: 900;
  color: var(--text-muted);
  text-transform: uppercase;
  letter-spacing: 4rpx;
  margin-bottom: 8rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 900;
  color: var(--text-primary);
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.stat-box {
  background-color: var(--space-800);
  border: 1rpx solid var(--space-700);
  border-radius: 24rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
}
.full-width {
  grid-column: span 2;
  align-items: center;
}

.stat-label {
  font-size: 18rpx;
  font-weight: 900;
  color: var(--text-muted);
  text-transform: uppercase;
  letter-spacing: 2rpx;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 900;
  color: var(--text-primary);
  font-family: monospace;
}
.text-accent {
  color: var(--mystic-500);
}

.modal-desc {
  background-color: var(--space-800);
  padding: 32rpx;
  border-radius: 32rpx;
  margin-bottom: 40rpx;
}

.modal-desc text {
  font-size: 26rpx;
  font-weight: 700;
  color: var(--text-secondary);
  line-height: 1.6;
}

.modal-btn {
  width: 100%;
  height: 112rpx;
  background-color: var(--mystic-500);
  color: var(--star-50);
  border-radius: 32rpx;
  font-size: 32rpx;
  font-weight: 900;
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 2rpx;
}

.empty-state {
  padding: 64rpx;
  text-align: center;
  color: var(--text-muted);
  font-size: 28rpx;
  font-weight: bold;
}

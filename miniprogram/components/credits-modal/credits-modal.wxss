.credits-modal-card {
  width: 620rpx;
}

.credits-info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.credits-label {
  font-size: 28rpx;
  color: var(--ink-medium);
}

.credits-value {
  font-size: 28rpx;
  color: var(--ink-deep);
  font-weight: 600;
}

.credits-deficit-row .credits-value {
  font-size: 32rpx;
}

.credits-btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

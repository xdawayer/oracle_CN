<!-- 星盘组件模板 -->
<view class="astro-chart-container" style="width: {{width}}px; height: {{height}}px;">
  <canvas
    type="2d"
    id="astro-chart-canvas"
    class="astro-chart-canvas"
    style="width: {{width}}px; height: {{height}}px;"
    bindtap="onCanvasTap"
  ></canvas>

  <!-- 行星详情卡片 -->
  <view
    wx:if="{{selectedPlanet}}"
    class="planet-detail-card"
    style="left: {{detailCardX}}px; top: {{detailCardY}}px;"
  >
    <view class="planet-detail-header">
      <text class="planet-glyph" style="color: {{selectedPlanet.color}};">{{selectedPlanet.glyph}}</text>
      <text class="planet-name">{{selectedPlanet.name}}</text>
    </view>
    <view class="planet-detail-body">
      <text class="planet-position">{{selectedPlanet.sign}} {{selectedPlanet.degree}}°{{selectedPlanet.minute}}'</text>
      <text class="planet-house" wx:if="{{selectedPlanet.house}}">第 {{selectedPlanet.house}} 宫</text>
    </view>
    <view class="close-btn" bindtap="closePlanetDetail">×</view>
  </view>
</view>
